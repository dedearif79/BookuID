<Window x:Class="wpfWin_InputStockOpname"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Booku"
        mc:Ignorable="d"
        Title="Input Stock Opname"
        Height="Auto"
        Width="Auto"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        >

    <Window.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../WPF/Styles/StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Window.Resources>

    <StackPanel Style="{StaticResource stylePanelFormDialog}" >

        <StackPanel Style="{StaticResource stylePanelFormDialogVertikal}" >


            <Grid Style="{StaticResource styleGridFormDialog}" >

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="190"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock  Grid.Row="0" Grid.Column="0"    Style="{StaticResource styleTextBlockFormDialog}" >Tanggal Pengecekan</TextBlock>
                <TextBlock  Grid.Row="1" Grid.Column="0"    Style="{StaticResource styleTextBlockFormDialog}" >Nama Barang</TextBlock>
                <TextBlock  Grid.Row="2" Grid.Column="0"    Style="{StaticResource styleTextBlockFormDialog}" >Jumlah Barang</TextBlock>
                <TextBlock  Grid.Row="3" Grid.Column="0"    Style="{StaticResource styleTextBlockFormDialog}" >Satuan</TextBlock>
                <TextBlock  Grid.Row="4" Grid.Column="0"    Style="{StaticResource styleTextBlockFormDialog}" >Harga Satuan</TextBlock>
                <TextBlock  Grid.Row="5" Grid.Column="0"    Style="{StaticResource styleTextBlockFormDialog}" >Jumlah Harga</TextBlock>
                <TextBlock  Grid.Row="6" Grid.Column="0"    Style="{StaticResource styleTextBlockFormDialog}"   Name="lbl_Asal" >Asal</TextBlock>
                <TextBlock  Grid.Row="7" Grid.Column="0"    Style="{StaticResource styleTextBlockFormDialog}" >Lokasi</TextBlock>
                <TextBlock  Grid.Row="8" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}" >Keterangan :</TextBlock>

                <DatePicker     Grid.Row="0"  Grid.Column="1"    Style="{StaticResource styleDatePickerFormDialog}"     Name="dtp_TanggalPengecekan" />
                <TextBox        Grid.Row="1"  Grid.Column="1"    Style="{StaticResource styleTextBoxFormDialog}"        Name="txt_NamaBarang"/>
                <TextBox        Grid.Row="2"  Grid.Column="1"    Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"   Name="txt_JumlahBarang" Width="81"  HorizontalAlignment="Left" />
                <TextBox        Grid.Row="3"  Grid.Column="1"    Style="{StaticResource styleTextBoxFormDialog}"        Name="txt_Satuan"       Width="81"  HorizontalAlignment="Left" />
                <TextBox        Grid.Row="4"  Grid.Column="1"    Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"   Name="txt_HargaSatuan"  Width="123"  HorizontalAlignment="Left" />
                <TextBox        Grid.Row="5"  Grid.Column="1"    Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"   Name="txt_JumlahHarga"  Width="123"  HorizontalAlignment="Left" />
                <ComboBox       Grid.Row="6"  Grid.Column="1"    Style="{StaticResource styleComboBoxFormDialog}"       Name="cmb_Asal"  />
                <TextBox        Grid.Row="7"  Grid.Column="1"    Style="{StaticResource styleTextBoxFormDialog}"        Name="txt_Lokasi" />
                <RichTextBox    Grid.Row="9"  Grid.Column="0"    Style="{StaticResource styleRichTextBoxFormDialog}"    Name="txt_Keterangan" Grid.ColumnSpan="2" />

            </Grid>

        </StackPanel>

        <!--Tombol CRUD :-->
        <StackPanel Style="{StaticResource stylePanelFormDialogTombol}"   Name="pnl_TombolForm">
            <Button Style="{StaticResource styleButtonFormDialogSimpan}"  Name="btn_Simpan" />
            <Button Style="{StaticResource styleButtonFormDialogBatal}"   Name="btn_Batal"  />
        </StackPanel>

    </StackPanel>

</Window>
