<Window x:Class="wpfWin_ProgresExport_EXCEL"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Booku"
        mc:Ignorable="d"
        Title="Progress Export"
        Width="Auto"
        Height="Auto"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        >

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../WPF/Styles/StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <StackPanel Style="{StaticResource stylePanelFormDialog}" >

        <StackPanel Margin="27" >

            <Grid Style="{StaticResource styleGridFormDialog}" >

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="333"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock  Grid.Row="0"    Grid.Column="0 "    Name="lbl_ProgressBaris1"   Text="Progress Baris 1"     TextWrapping="Wrap" Margin="0 3"/>
                <TextBlock  Grid.Row="1"    Grid.Column="0 "    Name="lbl_ProgressBaris2"   Text="Progress Baris 2"     TextWrapping="Wrap" Margin="0 3"/>
                <TextBlock  Grid.Row="2"    Grid.Column="0 "    Name="lbl_ProgressBaris3"   Text="Progress Baris 3"     TextWrapping="Wrap" Margin="0 3"/>

            </Grid>

            <ProgressBar x:Name="pgb_Progress" Height="30" Width="333" VerticalAlignment="Top"  Minimum="0" Maximum="100"/>

        </StackPanel>

        <!--Tombol CRUD :-->
        <StackPanel Style="{StaticResource stylePanelFormDialogTombol}"     Name="pnl_TombolForm">
            <Button Style="{StaticResource styleButtonFormDialogTutup}"     Name="btn_Tutup" />
        </StackPanel>
    </StackPanel>

</Window>
