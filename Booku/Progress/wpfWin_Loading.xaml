<Window x:Class="wpfWin_Loading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Booku"
        mc:Ignorable="d"
        Title="Loading"
        Width="140"
        Height="90"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        >

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../WPF/Styles/StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Storyboard x:Key="SpinStoryboard">
                <DoubleAnimation Storyboard.TargetName="rtSpinner"
                                 Storyboard.TargetProperty="Angle"
                                 From="0" To="360"
                                 Duration="0:0:0.8"
                                 RepeatBehavior="Forever"/>
            </Storyboard>
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="{StaticResource clrBgOverlayLight}"
            BorderBrush="{StaticResource clrBorderDefault}"
            BorderThickness="1"
            CornerRadius="8"
            Padding="15">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
        </Border.Effect>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <!-- SPINNER -->
            <Grid Width="32" Height="32" HorizontalAlignment="Center">
                <Ellipse Width="32" Height="32"
                         Stroke="{StaticResource clrLoadingStroke}"
                         StrokeThickness="3" />

                <Path Stroke="{StaticResource clrLoadingStrokeDark}"
                      StrokeThickness="3"
                      StrokeStartLineCap="Round"
                      StrokeEndLineCap="Round"
                      Data="M 16,2 A 14,14 0 0 1 30,16">
                    <Path.RenderTransform>
                        <RotateTransform x:Name="rtSpinner" CenterX="16" CenterY="16"/>
                    </Path.RenderTransform>
                </Path>
            </Grid>

            <!-- TEXT -->
            <TextBlock x:Name="txtLoading"
                       Text="Memuat..."
                       Margin="0,8,0,0"
                       FontSize="11"
                       Foreground="{StaticResource clrLoadingStrokeDark}"
                       HorizontalAlignment="Center"/>

        </StackPanel>
    </Border>

</Window>
