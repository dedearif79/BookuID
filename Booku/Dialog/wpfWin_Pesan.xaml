<Window x:Class="wpfWin_Pesan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Booku"
        mc:Ignorable="d"
        Title="Booku"
        Height="Auto"
        Width="Auto"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        ShowInTaskbar="False"
        Topmost="True">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../WPF/Styles/StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border CornerRadius="8" Background="White" BorderThickness="1" BorderBrush="#E0E0E0">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="3" Opacity="0.25" Color="#000000"/>
        </Border.Effect>

        <Grid MinWidth="380" MaxWidth="500">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Border x:Name="bdr_Header" Grid.Row="0" CornerRadius="8,8,0,0" Padding="18,14" Background="#388E3C">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Icon Container -->
                    <Grid Grid.Column="0" Width="26" Height="26" VerticalAlignment="Center">
                        <!-- Info/Success Icon (Default) -->
                        <Viewbox x:Name="vbx_IconInfo" Visibility="Visible">
                            <Canvas Width="24" Height="24">
                                <Path Fill="White" Data="M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2M12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4M11,16.5L6.5,12L7.91,10.59L11,13.67L16.59,8.09L18,9.5L11,16.5Z"/>
                            </Canvas>
                        </Viewbox>
                        <!-- Warning Icon -->
                        <Viewbox x:Name="vbx_IconWarning" Visibility="Collapsed">
                            <Canvas Width="24" Height="24">
                                <Path Fill="White" Data="M12,2L1,21H23M12,6L19.53,19H4.47M11,10V14H13V10M11,16V18H13V16"/>
                            </Canvas>
                        </Viewbox>
                        <!-- Error Icon -->
                        <Viewbox x:Name="vbx_IconError" Visibility="Collapsed">
                            <Canvas Width="24" Height="24">
                                <Path Fill="White" Data="M12,2C17.53,2 22,6.47 22,12C22,17.53 17.53,22 12,22C6.47,22 2,17.53 2,12C2,6.47 6.47,2 12,2M12,4C7.58,4 4,7.58 4,12C4,16.42 7.58,20 12,20C16.42,20 20,16.42 20,12C20,7.58 16.42,4 12,4M8.46,8.46L12,12L8.46,15.54L9.88,16.95L13.41,13.41L16.95,16.95L18.36,15.54L14.83,12L18.36,8.46L16.95,7.05L13.41,10.59L9.88,7.05L8.46,8.46Z"/>
                            </Canvas>
                        </Viewbox>
                        <!-- Question Icon -->
                        <Viewbox x:Name="vbx_IconQuestion" Visibility="Collapsed">
                            <Canvas Width="24" Height="24">
                                <Path Fill="White" Data="M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2M12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4M12,6A4,4 0 0,1 16,10C16,11.1 15.6,12 14.9,12.7L14.2,13.4C13.5,14 13,14.9 13,16H11C11,14.5 11.5,13.3 12.4,12.4L13.2,11.6C13.7,11.1 14,10.6 14,10A2,2 0 0,0 12,8A2,2 0 0,0 10,10H8A4,4 0 0,1 12,6M11,17H13V19H11V17Z"/>
                            </Canvas>
                        </Viewbox>
                    </Grid>

                    <!-- Judul -->
                    <TextBlock x:Name="txt_Judul" Grid.Column="1" Text="Informasi"
                               Foreground="White" FontSize="15" FontWeight="SemiBold"
                               Margin="14,0,0,0" VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- BODY -->
            <Border Grid.Row="1" Padding="22,20">
                <TextBlock x:Name="txt_Pesan"
                           Text="Isi pesan ditampilkan di sini."
                           TextWrapping="Wrap"
                           FontSize="13"
                           Foreground="#333333"
                           LineHeight="21"/>
            </Border>

            <!-- FOOTER -->
            <Border Grid.Row="2" Padding="18,12" Background="#FAFAFA" CornerRadius="0,0,8,8"
                    BorderThickness="0,1,0,0" BorderBrush="#E8E8E8">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <!-- Urutan: Ya/OK di kiri, Tidak di kanan (standar Windows) -->
                    <Button x:Name="btn_OK"
                            Content="OK"
                            IsDefault="True"
                            Style="{StaticResource styleButtonFormDialog}"
                            Margin="0,0,10,0"/>
                    <Button x:Name="btn_Tidak"
                            Content="Tidak"
                            Visibility="Collapsed"
                            IsCancel="True"
                            Style="{StaticResource styleButtonFormDialog}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>

</Window>
