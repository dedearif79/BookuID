<Window x:Class="wpfWin_PilihJenisProdukInduk"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Booku"
        mc:Ignorable="d"
        Title="Pilih Jenis Produk"
        Height="Auto"
        Width="Auto"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        >

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../WPF/Styles/StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <StackPanel Style="{StaticResource stylePanelFormDialog}">

        <StackPanel Style="{StaticResource stylePanelFormDialogVertikal}">

            <TextBlock Style="{StaticResource styleTextBlockFormDialog}" Text="Silakan Pilih Jenis Produk :" Margin="0 0 0 9"/>

            <Grid Style="{StaticResource styleGridFormDialog}">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="33"/>
                    <RowDefinition Height="33"/>
                    <RowDefinition Height="33"/>
                    <RowDefinition Height="33"/>
                </Grid.RowDefinitions>

                <RadioButton Grid.Row="0" Grid.Column="0" Style="{StaticResource styleRadioButtonFormDialog}" GroupName="grb_JenisProduk" Name="rdb_Barang"         Content="Barang"/>
                <RadioButton Grid.Row="1" Grid.Column="0" Style="{StaticResource styleRadioButtonFormDialog}" GroupName="grb_JenisProduk" Name="rdb_Jasa"           Content="Jasa"/>
                <RadioButton Grid.Row="2" Grid.Column="0" Style="{StaticResource styleRadioButtonFormDialog}" GroupName="grb_JenisProduk" Name="rdb_BarangDanJasa"  Content="Barang dan Jasa"/>
                <RadioButton Grid.Row="3" Grid.Column="0" Style="{StaticResource styleRadioButtonFormDialog}" GroupName="grb_JenisProduk" Name="rdb_JasaKonstruksi" Content="Jasa Konstruksi"/>

            </Grid>

        </StackPanel>

        <StackPanel Style="{StaticResource stylePanelFormDialogTombol}" Name="pnl_TombolForm">
            <Button Style="{StaticResource styleButtonFormDialogKembali}"   Name="btn_Kembali" />
            <Button Style="{StaticResource styleButtonFormDialogLanjutkan}" Name="btn_Lanjutkan" />
        </StackPanel>

    </StackPanel>

</Window>
