<UserControl x:Class="wpfUsc_DaftarPenyusutanAssetTetap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Booku"
             mc:Ignorable="d" 
>

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../WPF\Styles\StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
<DockPanel Style="{StaticResource stylePanelFormHalaman}"   Name="pnl_Halaman">
        <StackPanel Style="{StaticResource stylePanelFormHalamanHeader}">

            <Grid    DockPanel.Dock="Top"   HorizontalAlignment="Stretch"   VerticalAlignment="Stretch" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"  Name="HeaderKiri"/>
                    <ColumnDefinition Width="100*"  Name="HeaderTengah" />
                    <ColumnDefinition Width="Auto"  Name="HeaderKanan"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <!-- Header Kiri :-->
                <StackPanel Grid.Row="0"  Grid.Column="0"   Style="{StaticResource stylePanelFormHalamanHeaderKiri}">
                    <StackPanel Style="{StaticResource stylePanelFormHalamanTittle}" >
                        <TextBlock Style="{StaticResource styleTextBlockFormHalamanJudul}"      Name="lbl_JudulForm"    Text="Daftar Penyusutan Asset Tetap" />
                    </StackPanel>
                    <!-- Baris Tombol :-->
                    <StackPanel Style="{StaticResource stylePanelFormHalamanTombolHorizontal}"  Name="pnl_TombolForm">
                        <Button Style="{StaticResource styleButtonFormHalamanRefresh}"          Name="btn_Refresh" />
                        <Button Style="{StaticResource styleButtonFormHalamanDetail}"           Name="btn_DetailGlobal" />
                        <Button Style="{StaticResource styleButtonFormHalamanRekap}"            Name="btn_Rekap" />
                        <Border Style="{StaticResource styleBorderHeaderSeparatorTombol}"       Name="brd_KodeDivisi" />
                        <Button Style="{StaticResource styleButtonFormHalamanKodeDivisi}"       Name="btn_KodeDivisi" />
                        <StackPanel Orientation="Horizontal"    Name="pnl_JualBeliAsset">
                            <Border Style="{StaticResource styleBorderHeaderSeparatorTombol}" />
                            <Button Style="{StaticResource styleButtonFormHalamanJual}"         Name="btn_JualAsset" />
                            <Button Style="{StaticResource styleButtonFormHalamanDisposal}"     Name="btn_DisposalAsset" />
                            <Button Style="{StaticResource styleButtonFormHalamanLihatInvoice}" Name="btn_LihatInvoice" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"    Name="pnl_CRUD">
                            <Border Style="{StaticResource styleBorderHeaderSeparatorTombol}" />
                            <Button Style="{StaticResource styleButtonFormHalamanCrudInput}"    Name="btn_Input" />
                            <Button Style="{StaticResource styleButtonFormHalamanCrudEdit}"     Name="btn_Edit" />
                            <Button Style="{StaticResource styleButtonFormHalamanCrudHapus}"    Name="btn_Hapus" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"    Name="pnl_Jurnal">
                            <Border Style="{StaticResource styleBorderHeaderSeparatorTombol}" />
                            <Button Style="{StaticResource styleButtonFormHalamanPosting}"      Name="btn_Posting" />
                            <Button Style="{StaticResource styleButtonFormHalamanLihatJurnal}"  Name="btn_LihatJurnal" />
                            <Button Style="{StaticResource styleButtonFormHalamanAdjusment}"    Name="btn_Adjusment" />
                        </StackPanel>
                        <Border Style="{StaticResource styleBorderHeaderSeparatorTombol}"       Name="brd_Export"/>
                        <Button Style="{StaticResource styleButtonFormHalamanImport }"          Name="btn_Import" />
                        <Button Style="{StaticResource styleButtonFormHalamanExport }"          Name="btn_Export" />
                    </StackPanel>
                    <!-- Baris Filter Data :-->
                    <StackPanel Style="{StaticResource stylePanelFormHalamanFilterData}" Name="pnl_FilterData" >
                        <!-- Filter Tahun Laporan : -->
                        <StackPanel Style="{StaticResource stylePanelFormHalamanFilterDataSubVertikal}"    Name="pnl_FilterTahunLaporan" >
                            <TextBlock Style="{StaticResource styleTextBlockFormHalaman}"   HorizontalAlignment="Left"    Text=" Tahun Laporan :" />
                            <ComboBox Width="75"  Margin="0"    HorizontalAlignment="Left"  Name="cmb_TahunLaporan" />
                        </StackPanel>
                        <!-- Filter COA : -->
                        <Border Style="{StaticResource styleBorderHeaderSeparatorFilter}"/>
                        <StackPanel Style="{StaticResource stylePanelFormHalamanFilterDataSubVertikal}"    Name="pnl_FilterAkun" >
                            <TextBlock Style="{StaticResource styleTextBlockFormHalaman}"   HorizontalAlignment="Left"    Text=" Akun :" />
                            <ComboBox Width="270"  Margin="0"  Name="cmb_FilterCOA" />
                        </StackPanel>
                        <!-- Filter Kelompok Harta : -->
                        <Border Style="{StaticResource styleBorderHeaderSeparatorFilter}"/>
                        <StackPanel Style="{StaticResource stylePanelFormHalamanFilterDataSubVertikal}"    Name="pnl_FilterKelompokHarta" >
                            <TextBlock Style="{StaticResource styleTextBlockFormHalaman}"   HorizontalAlignment="Left"    Text=" Kelompok Harta :" />
                            <ComboBox Width="150"  Margin="0"  Name="cmb_FilterKelompokHarta" />
                        </StackPanel>
                        <!-- Filter Tahun Perolehan : -->
                        <Border Style="{StaticResource styleBorderHeaderSeparatorFilter}"/>
                        <StackPanel Style="{StaticResource stylePanelFormHalamanFilterDataSubVertikal}"    Name="pnl_FilterTahunPerolehan" >
                            <TextBlock Style="{StaticResource styleTextBlockFormHalaman}"   HorizontalAlignment="Left"    Text=" Tahun Perolehan :" />
                            <ComboBox Width="75"  Margin="0"    HorizontalAlignment="Left"  Name="cmb_FilterTahunPerolehan" />
                        </StackPanel>
                        <!-- Tombol Filter : -->
                        <Border Style="{StaticResource styleBorderHeaderSeparatorFilter}"               Name="brd_TombolFilter"/>
                        <StackPanel Style="{StaticResource stylePanelFormHalamanFilterDataSubVertikal}" Name="pnl_TombolFilter" >
                            <Button Content="Filter"    Width="51"  Height="39" Margin="0 9 0 0"    Name="btn_Filter"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                <!-- Header Kanan:-->
                <StackPanel  Grid.Row="0"  Grid.Column="2"    Style="{StaticResource stylePanelFormHalamanHeaderKanan}" HorizontalAlignment="Right" >
                </StackPanel>
            </Grid>
        </StackPanel>


        <!-- Footer : -->
        <StackPanel Style="{StaticResource stylePanelFormHalamanFooter}"    HorizontalAlignment="Stretch" >
            <DockPanel  Width="Auto" HorizontalAlignment="Stretch"  Name="pnl_Footer"    >
                <StackPanel Orientation="Horizontal"                Name="pnl_JumlahAsset"   HorizontalAlignment="Left">
                    <TextBlock      Text="Jumlah Asset : "          Name="lbl_JumlahAsset"   Style="{StaticResource styleTextBlockFormHalamanFooter}"/>
                    <TextBox        Width="75"                      Name="txt_JumlahAsset"   Style="{StaticResource styleTextBoxFormHalamanFooter}"/>
                </StackPanel>
            </DockPanel>
        </StackPanel>

        <DockPanel Width="Auto" Height="Auto" Name="pnl_Konten" >

            <Grid DockPanel.Dock="Top" VerticalAlignment="Stretch" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0"         Name="SidebarKiri"/>
                    <ColumnDefinition Width="100*"      Name="BarUtama"/>
                    <ColumnDefinition Width="Auto"      Name="SidebarKanan" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" Style="{StaticResource stylePanelFormHalamanSidebarKiri}" CanVerticallyScroll="True" Height="99" Grid.RowSpan="2" Name="pnl_SidebarKiri" >
                </StackPanel>

                <GridSplitter Grid.Column="0" Grid.RowSpan="2" Width="3" />

                <StackPanel Grid.Row="0" Grid.Column="1" Style="{StaticResource stylePanelFormHalamanKonten}" VerticalAlignment="Stretch">

                    <StackPanel Style="{StaticResource stylePanelDataGridView}" VerticalAlignment="Stretch" Name="pnl_DataGridUtama" >
                        <TextBlock  Name="lbl_NotifikasiProses" Text="Harap tunggu! Sistem sedang memproses data."/>
                        <DataGrid Name="datagridUtama" Style="{StaticResource StyleDataGridModul}" MinWidth="999" MinHeight="33" VerticalAlignment="Stretch" />
                    </StackPanel>

                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="3" Style="{StaticResource stylePanelFormHalamanSidebarKanan}" Width="528" Height="Auto" Grid.RowSpan="2" Name="pnl_SidebarKanan" Visibility="Collapsed" >
                </StackPanel>

            </Grid>

        </DockPanel>

    </DockPanel>

</UserControl>


