<Window x:Class="wpfWin_InputKodeDivisi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kode Divisi"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/BookuID.Styles;component/WPF/Styles/StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <StackPanel Style="{StaticResource stylePanelFormDialog}">

        <!-- BODY: Input Fields + DataGrid -->
        <StackPanel Style="{StaticResource stylePanelFormDialogVertikal}">

            <!-- Input Fields -->
            <Grid Style="{StaticResource styleGridFormDialog}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="230"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Row 0: Kode Divisi -->
                <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource styleTextBlockFormDialog}" Text="Kode Divisi"/>
                <TextBox Grid.Row="0" Grid.Column="1" Style="{StaticResource styleTextBoxFormDialog}" x:Name="txt_KodeDivisi"
                         Width="70" HorizontalAlignment="Left" TextAlignment="Center" IsReadOnly="True"/>

                <!-- Row 1: Divisi -->
                <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource styleTextBlockFormDialog}" Text="Divisi"/>
                <TextBox Grid.Row="1" Grid.Column="1" Style="{StaticResource styleTextBoxFormDialog}" x:Name="txt_Divisi"/>

                <!-- Tombol Simpan -->
                <Button Grid.Row="0" Grid.Column="2" Grid.RowSpan="2" Style="{StaticResource styleButtonFormDialogSimpan}"
                        x:Name="btn_Simpan" Margin="9,0,0,0" VerticalAlignment="Center"/>

            </Grid>

            <!-- DataGrid -->
            <DataGrid x:Name="datagridUtama" Style="{StaticResource StyleDataGridFormDialog}"
                      AutoGenerateColumns="False" MinWidth="400" MinHeight="300" MaxHeight="360" Margin="0,9,0,0"/>

        </StackPanel>

        <!-- FOOTER: Tombol Tutup -->
        <StackPanel Style="{StaticResource stylePanelFormDialogTombol}">
            <Button Style="{StaticResource styleButtonFormDialogTutup}" x:Name="btn_Tutup"/>
        </StackPanel>

    </StackPanel>
</Window>
