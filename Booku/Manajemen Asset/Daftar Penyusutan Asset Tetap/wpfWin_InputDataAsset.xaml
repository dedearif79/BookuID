<Window x:Class="wpfWin_InputDataAsset"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Booku"
        mc:Ignorable="d"
        Title="Input Data Asset"
        Height="Auto"
        Width="Auto"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        >

    <Window.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../WPF/Styles/StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Window.Resources>

    <StackPanel Style="{StaticResource stylePanelFormDialog}" >

        <ScrollViewer   Style="{StaticResource styleScrollViewerFormDialogVertikal}" Name="scv_Kiri"    Margin="0 0 0 21" >

            <StackPanel Style="{StaticResource stylePanelFormDialogVertikal}" >

                <Grid Style="{StaticResource styleGridFormDialog}"  Margin="0" >

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="270"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock  Grid.Row="0" Grid.Column="0"    Style="{StaticResource styleTextBlockFormDialog}" Text="Kode Asset"     Name="lbl_KodeAsset" />
                    <TextBlock  Grid.Row="1" Grid.Column="0"    Style="{StaticResource styleTextBlockFormDialog}" Text="Nama Aktiva"    Name="lbl_NamaAktiva"/>
                    <TextBlock  Grid.Row="2" Grid.Column="0"    Style="{StaticResource styleTextBlockFormDialog}" Text="Kelompok Harta"/>
                    <GroupBox   Grid.Row="3" Grid.Column="0"    Style="{StaticResource styleGroupBoxFormDialogAkun}"    Name="grb_AkunAsset" Grid.ColumnSpan="2"    Header="Akun Asset : " >
                        <Grid Style="{StaticResource styleGridFormDialogAkun}" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="106"/>
                                <ColumnDefinition Width="75"/>
                                <ColumnDefinition Width="100*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock  Grid.Row="0" Grid.Column="0"    Style="{StaticResource styleTextBlockFormDialog}"       Text="Kode Akun" />
                            <TextBlock  Grid.Row="1" Grid.Column="0"    Style="{StaticResource styleTextBlockFormDialog}"       Text="Nama Akun" />
                            <TextBox    Grid.Row="0" Grid.Column="1"    Style="{StaticResource styleTextBoxFormDialog}"         Name="txt_COA_Asset"/>
                            <TextBox    Grid.Row="3" Grid.Column="1"    Style="{StaticResource styleTextBoxFormDialog}"         Name="txt_NamaAkun_Asset"   Grid.ColumnSpan="2"/>
                            <Button     Grid.Row="0" Grid.Column="2"    Style="{StaticResource styleButtonFormDialogPilih}"     Name="btn_PilihCOA_Asset"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox   Grid.Row="4" Grid.Column="0"    Style="{StaticResource styleGroupBoxFormDialogAkun}"    Name="grb_AkunBiayaPenyusutan" Grid.ColumnSpan="2"    Header="Akun Biaya Penyusutan : " >
                        <Grid Style="{StaticResource styleGridFormDialogAkun}" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="106"/>
                                <ColumnDefinition Width="75"/>
                                <ColumnDefinition Width="100*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock  Grid.Row="0" Grid.Column="0"    Style="{StaticResource styleTextBlockFormDialog}"       Text="Kode Akun"  />
                            <TextBlock  Grid.Row="1" Grid.Column="0"    Style="{StaticResource styleTextBlockFormDialog}"       Text="Nama Akun" />
                            <TextBox    Grid.Row="0" Grid.Column="1"    Style="{StaticResource styleTextBoxFormDialog}"         Name="txt_COA_BiayaPenyusutan"/>
                            <TextBox    Grid.Row="3" Grid.Column="1"    Style="{StaticResource styleTextBoxFormDialog}"         Name="txt_NamaAkun_BiayaPenyusutan"   Grid.ColumnSpan="2"/>
                            <Button     Grid.Row="0" Grid.Column="2"    Style="{StaticResource styleButtonFormDialogPilih}"     Name="btn_PilihCOA_BiayaPenyusutan"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox   Grid.Row="5" Grid.Column="0"    Style="{StaticResource styleGroupBoxFormDialogAkun}"    Name="grb_AkunAkumulasiPenyusutan" Grid.ColumnSpan="2"    Header="Akun Akumulasi Penyusutan : " >
                        <Grid Style="{StaticResource styleGridFormDialogAkun}" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="106"/>
                                <ColumnDefinition Width="75"/>
                                <ColumnDefinition Width="100*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock  Grid.Row="0" Grid.Column="0"    Style="{StaticResource styleTextBlockFormDialog}"       Text="Kode Akun" />
                            <TextBlock  Grid.Row="1" Grid.Column="0"    Style="{StaticResource styleTextBlockFormDialog}"       Text="Nama Akun" />
                            <TextBox    Grid.Row="0" Grid.Column="1"    Style="{StaticResource styleTextBoxFormDialog}"         Name="txt_COA_AkumulasiPenyusutan"/>
                            <TextBox    Grid.Row="3" Grid.Column="1"    Style="{StaticResource styleTextBoxFormDialog}"         Name="txt_NamaAkun_AkumulasiPenyusutan"   Grid.ColumnSpan="2"/>
                            <Button     Grid.Row="0" Grid.Column="2"    Style="{StaticResource styleButtonFormDialogPilih}"     Name="btn_PilihCOA_AkumulasiPenyusutan"/>
                        </Grid>
                    </GroupBox>
                    <TextBlock  Grid.Row="06" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}" Text="Masa Manfaat" />
                    <TextBlock  Grid.Row="07" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}" Text="Tarif Penyusutan" />
                    <TextBlock  Grid.Row="08" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}" Text="Divisi" />
                    <TextBlock  Grid.Row="09" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}" Text="Tanggal Perolehan"  Name="lbl_TanggalPerolehan" />
                    <TextBlock  Grid.Row="10" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}" Text="Harga Perolehan"    Name="lbl_HargaPerolehan" />
                    <TextBlock  Grid.Row="11" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}" Text="Keterangan : " />

                    <TextBox        Grid.Row="0"  Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialog}"         Name="txt_KodeAsset"            Width="127" HorizontalAlignment="Left"/>
                    <TextBox        Grid.Row="1"  Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialog}"         Name="txt_NamaAktiva"/>
                    <ComboBox       Grid.Row="2"  Grid.Column="1"   Style="{StaticResource styleComboBoxFormDialog}"        Name="cmb_KelompokHarta"        Height="24" Margin="0,2,0,0" VerticalAlignment="Top"    Width="127" HorizontalAlignment="Left"/>
                    <TextBox        Grid.Row="6"  Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialog}"         Name="txt_MasaManfaat"          Width="75"  HorizontalAlignment="Left"/>
                    <TextBox        Grid.Row="7"  Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialog}"         Name="txt_TarifPenyusutan"      Width="75"  HorizontalAlignment="Left"/>
                    <ComboBox       Grid.Row="8"  Grid.Column="1"   Style="{StaticResource styleComboBoxFormDialog}"        Name="cmb_Divisi" Height="24"   Margin="0,2,0,0" VerticalAlignment="Top"    Width="127" HorizontalAlignment="Left"/>
                    <DatePicker     Grid.Row="9"  Grid.Column="1"   Style="{StaticResource styleDatePickerFormDialog}"      Name="dtp_TanggalPerolehan"  />
                    <TextBox        Grid.Row="10" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_HargaPerolehan"       Width="127" HorizontalAlignment="Left"/>
                    <RichTextBox    Grid.Row="12" Grid.Column="0"    Style="{StaticResource styleRichTextBoxFormDialog}"    Name="txt_Keterangan" Grid.ColumnSpan="2" />

                </Grid>

            </StackPanel>

        </ScrollViewer>

        <!--Tombol CRUD :-->
        <StackPanel Style="{StaticResource stylePanelFormDialogTombol}"   Name="pnl_TombolForm">
            <Button Style="{StaticResource styleButtonFormDialogSimpan}"  Name="btn_Simpan"/>
            <Button Style="{StaticResource styleButtonFormDialogBatal}"   Name="btn_Batal" />
        </StackPanel>

    </StackPanel>

</Window>
