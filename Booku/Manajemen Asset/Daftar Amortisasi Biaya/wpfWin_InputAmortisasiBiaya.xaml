<Window x:Class="wpfWin_InputAmortisasiBiaya"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Booku"
        Title="Input Amortisasi Biaya"
        Height="Auto"
        Width="Auto"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        >

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../WPF\Styles\StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
<StackPanel Style="{StaticResource stylePanelFormDialog}" >

        <ScrollViewer   Style="{StaticResource styleScrollViewerFormDialogVertikal}" Name="scv_Kiri"    Margin="0 0 0 21" >

            <StackPanel Style="{StaticResource stylePanelFormDialogVertikal}" >

                <Grid Style="{StaticResource styleGridFormDialog}"  Margin="0" >

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="270"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock  Grid.Row="0" Grid.Column="0"    Style="{StaticResource styleTextBlockFormDialog}" Text="Kode Asset"     Name="lbl_KodeAsset" />
                    <GroupBox   Grid.Row="1" Grid.Column="0"    Style="{StaticResource styleGroupBoxFormDialogAkun}"    Name="grb_AkunAmortisasi" Grid.ColumnSpan="2"    Header="Akun Amortisasi : " >
                        <Grid Style="{StaticResource styleGridFormDialogAkun}" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="136"/>
                                <ColumnDefinition Width="75"/>
                                <ColumnDefinition Width="100*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock  Grid.Row="0" Grid.Column="0"    Style="{StaticResource styleTextBlockFormDialog}"       Text="Kode Akun" />
                            <TextBlock  Grid.Row="1" Grid.Column="0"    Style="{StaticResource styleTextBlockFormDialog}"       Text="Nama Akun" />
                            <TextBox    Grid.Row="0" Grid.Column="1"    Style="{StaticResource styleTextBoxFormDialog}"         Name="txt_COA_Amortisasi"/>
                            <TextBox    Grid.Row="3" Grid.Column="1"    Style="{StaticResource styleTextBoxFormDialog}"         Name="txt_NamaAkun_Amortisasi"   Grid.ColumnSpan="2"/>
                            <Button     Grid.Row="0" Grid.Column="2"    Style="{StaticResource styleButtonFormDialogPilihKode}"     Name="btn_PilihCOA_Amortisasi"/>
                        </Grid>
                    </GroupBox>
                    <TextBlock  Grid.Row="2" Grid.Column="0"    Style="{StaticResource styleTextBlockFormDialog}" Text="Nama Produk"     Name="lbl_NamaProduk" />
                    <GroupBox   Grid.Row="3" Grid.Column="0"    Style="{StaticResource styleGroupBoxFormDialogAkun}"    Name="grb_AkunBiaya" Grid.ColumnSpan="2"    Header="Akun Biaya : " >
                        <Grid Style="{StaticResource styleGridFormDialogAkun}" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="136"/>
                                <ColumnDefinition Width="75"/>
                                <ColumnDefinition Width="100*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock  Grid.Row="0" Grid.Column="0"    Style="{StaticResource styleTextBlockFormDialog}"       Text="Kode Akun"  />
                            <TextBlock  Grid.Row="1" Grid.Column="0"    Style="{StaticResource styleTextBlockFormDialog}"       Text="Nama Akun" />
                            <TextBox    Grid.Row="0" Grid.Column="1"    Style="{StaticResource styleTextBoxFormDialog}"         Name="txt_COA_Biaya"/>
                            <TextBox    Grid.Row="3" Grid.Column="1"    Style="{StaticResource styleTextBoxFormDialog}"         Name="txt_NamaAkun_Biaya"   Grid.ColumnSpan="2"/>
                            <Button     Grid.Row="0" Grid.Column="2"    Style="{StaticResource styleButtonFormDialogPilihKode}"     Name="btn_PilihCOA_Biaya"/>
                        </Grid>
                    </GroupBox>
                    <TextBlock  Grid.Row="04" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}" Text="Masa Amortisasi" />
                    <TextBlock  Grid.Row="05" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}" Text="Tanggal Transaksi"  Name="lbl_TanggalTransaksi" />
                    <TextBlock  Grid.Row="06" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}" Text="Tanggal Mulai Amortisasi"  Name="lbl_TanggalMulai" />
                    <TextBlock  Grid.Row="07" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}" Text="Jumlah Tansaksi"    Name="lbl_JumlahTransaksi" />
                    <TextBlock  Grid.Row="08" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}" Text="Keterangan : " />

                    <TextBox        Grid.Row="00" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialog}"         Name="txt_KodeAsset"            Width="127" HorizontalAlignment="Left"/>
                    <TextBox        Grid.Row="02" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialog}"         Name="txt_NamaProduk"           Width="270" HorizontalAlignment="Left"/>
                    <StackPanel     Grid.Row="04" Grid.Column="1"   Orientation="Horizontal" >
                        <TextBox    Style="{StaticResource styleTextBoxFormDialog}"         Name="txt_MasaAmortisasi"       Width="57"  HorizontalAlignment="Left"/>
                        <TextBlock  Style="{StaticResource styleTextBlockFormDialog}"       Text="   Bulan"/>
                    </StackPanel>
                    <DatePicker     Grid.Row="05" Grid.Column="1"   Style="{StaticResource styleDatePickerFormDialog}"          Name="dtp_TanggalTransaksi"  />
                    <DatePicker     Grid.Row="06" Grid.Column="1"   Style="{StaticResource styleDatePickerFormDialog}"          Name="dtp_TanggalMulai"  />
                    <TextBox        Grid.Row="07" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_JumlahTransaksi"      Width="127" HorizontalAlignment="Left"/>
                    <RichTextBox    Grid.Row="09" Grid.Column="0"   Style="{StaticResource styleRichTextBoxFormDialog}"         Name="txt_Keterangan" Grid.ColumnSpan="2" />

                </Grid>

            </StackPanel>

        </ScrollViewer>

        <!--Tombol CRUD :-->
        <StackPanel Style="{StaticResource stylePanelFormDialogTombol}"   Name="pnl_TombolForm">
            <Button Style="{StaticResource styleButtonFormDialogSimpan}"  Name="btn_Simpan" />
            <Button Style="{StaticResource styleButtonFormDialogBatal}"   Name="btn_Batal" />
        </StackPanel>

    </StackPanel>

</Window>


