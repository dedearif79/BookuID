<Window x:Class="wpfWin_Pengaturan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Booku"
        mc:Ignorable="d"
        Title="Pengaturan"
        Height="700"
        Width="870"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        >

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/BookuID.Styles;component/WPF/Styles/StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- DropShadow Effect -->
            <DropShadowEffect x:Key="CardShadow" BlurRadius="25" ShadowDepth="3" Direction="270" Color="#40000000" Opacity="0.5"/>

            <!-- Gradient untuk Header -->
            <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,0">
                <GradientStop Color="{StaticResource clrPrimaryDarker}" Offset="0"/>
                <GradientStop Color="{StaticResource clrPrimary}" Offset="0.5"/>
                <GradientStop Color="{StaticResource clrPrimaryLight}" Offset="1"/>
            </LinearGradientBrush>

            <!-- Style untuk Tab Item Modern -->
            <Style x:Key="TabItemModern" TargetType="TabItem">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{StaticResource clrTeksSekunder}"/>
                <Setter Property="Padding" Value="20,12"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TabItem">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderThickness="0,0,0,3"
                                    BorderBrush="Transparent"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter x:Name="content"
                                                  ContentSource="Header"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource clrBtnPrimerBg}"/>
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource clrBgPrimarySurface}"/>
                                    <Setter Property="Foreground" Value="{StaticResource clrBtnPrimerBg}"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource clrBgHover}"/>
                                </Trigger>
                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition Property="IsSelected" Value="True"/>
                                        <Condition Property="IsMouseOver" Value="True"/>
                                    </MultiTrigger.Conditions>
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource clrBgPrimarySurface}"/>
                                </MultiTrigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Style untuk Input Border -->
            <Style x:Key="InputBorderStyle" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource clrBgInput}"/>
                <Setter Property="BorderBrush" Value="{StaticResource clrBorderDefault}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="Padding" Value="10,0"/>
                <Setter Property="Height" Value="38"/>
            </Style>

            <!-- Style TextBox tanpa border -->
            <Style x:Key="InputTextBoxNoBorder" TargetType="TextBox">
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Foreground" Value="{StaticResource clrTeksPrimer}"/>
            </Style>

            <!-- Style PasswordBox tanpa border -->
            <Style x:Key="InputPasswordBoxNoBorder" TargetType="PasswordBox">
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Foreground" Value="{StaticResource clrTeksPrimer}"/>
            </Style>

            <!-- Style Tombol Aksi Primer -->
            <Style x:Key="ActionButtonPrimary" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource clrBtnPrimerBg}"/>
                <Setter Property="Foreground" Value="{StaticResource clrBtnPrimerFg}"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="6"
                                    BorderThickness="0">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource clrBtnPrimerBgHover}"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource clrBtnPrimerBgPressed}"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource clrBtnDisabledBg}"/>
                                    <Setter Property="Foreground" Value="{StaticResource clrBtnDisabledFg}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Style Tombol Aksi Sekunder -->
            <Style x:Key="ActionButtonSecondary" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource clrBtnBg}"/>
                <Setter Property="Foreground" Value="{StaticResource clrBtnFg}"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="6"
                                    BorderThickness="1"
                                    BorderBrush="{StaticResource clrBorderDefault}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource clrBtnBgHover}"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource clrBorderPrimary}"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource clrBtnBgPressed}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Style Tombol Browse -->
            <Style x:Key="BrowseButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource clrBgPrimarySurface}"/>
                <Setter Property="Foreground" Value="{StaticResource clrBtnPrimerBg}"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Width" Value="38"/>
                <Setter Property="Height" Value="38"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="6"
                                    BorderThickness="1"
                                    BorderBrush="{StaticResource clrBorderPrimary}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource clrBtnPrimerBg}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>
    </Window.Resources>

    <!-- Main Container dengan Shadow -->
    <Border Effect="{StaticResource CardShadow}" CornerRadius="12" Margin="15">
        <Border.Background>
            <SolidColorBrush Color="{StaticResource clrWhite}"/>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ========== HEADER ========== -->
            <Border Grid.Row="0" CornerRadius="12,12,0,0" Background="{StaticResource HeaderGradient}" MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid Margin="25,18">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Icon & Title -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- Icon Gear -->
                        <Border Width="44" Height="44"
                                CornerRadius="22"
                                Background="White"
                                Margin="0,0,15,0">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Direction="270" Color="#40000000" Opacity="0.2"/>
                            </Border.Effect>
                            <Grid>
                                <!-- Gear Icon Simplified -->
                                <Ellipse Width="20" Height="20"
                                         Stroke="{StaticResource clrBtnPrimerBg}"
                                         StrokeThickness="3"
                                         Fill="Transparent"/>
                                <Ellipse Width="8" Height="8"
                                         Fill="{StaticResource clrBtnPrimerBg}"/>
                            </Grid>
                        </Border>

                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Pengaturan"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       Foreground="White"/>
                            <TextBlock Text="Konfigurasi aplikasi dan database"
                                       FontSize="11"
                                       Foreground="#C8E6C9"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Close Button -->
                    <Button Grid.Column="2"
                            x:Name="btn_Close"
                            Content="X"
                            Width="32" Height="32"
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            VerticalAlignment="Center">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="16">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#40FFFFFF"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- ========== CONTENT ========== -->
            <TabControl Grid.Row="1" Name="tab_Pengaturan" BorderThickness="0" Background="Transparent" Padding="0">
                <TabControl.Template>
                    <ControlTemplate TargetType="TabControl">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Tab Headers -->
                            <Border Grid.Row="0"
                                    Background="{StaticResource clrBgPanel}"
                                    BorderBrush="{StaticResource clrBorderDefault}"
                                    BorderThickness="0,0,0,1">
                                <TabPanel IsItemsHost="True"
                                          HorizontalAlignment="Left"
                                          Margin="15,0,0,0"/>
                            </Border>

                            <!-- Tab Content -->
                            <Border Grid.Row="1"
                                    Background="White"
                                    CornerRadius="0,0,12,12">
                                <ContentPresenter ContentSource="SelectedContent"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </TabControl.Template>

                <!-- TAB UMUM -->
                <TabItem Name="tab_Umum" Header="Umum" Style="{StaticResource TabItemModern}">
                    <Grid Name="grid_Umum" Margin="0">
                        <!-- wpfUsc_PengaturanUmum akan di-host di sini secara programatis -->
                    </Grid>
                </TabItem>

                <!-- TAB COMPANY PROFILE -->
                <TabItem Name="tab_CompanyProfile" Header="Company Profile" Style="{StaticResource TabItemModern}">
                    <Grid Name="grid_CompanyProfile" Margin="0">
                        <!-- wpfUsc_CompanyProfile akan di-host di sini secara programatis -->
                    </Grid>
                </TabItem>

                <!-- TAB DATABASE -->
                <TabItem Name="tab_Database" Header="Database" Style="{StaticResource TabItemModern}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <Grid Margin="30,25">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Panel Kiri: Form Koneksi Database -->
                            <StackPanel Grid.Column="0" VerticalAlignment="Top">

                                <!-- Section Title -->
                                <TextBlock Text="Koneksi Database"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource clrTeksPrimer}"
                                           Margin="0,0,0,20"/>

                                <!-- Folder XAMPP -->
                                <TextBlock Text="Folder XAMPP"
                                           FontSize="12"
                                           Foreground="{StaticResource clrTeksSekunder}"
                                           Margin="0,0,0,6"/>
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" Style="{StaticResource InputBorderStyle}" Margin="0,0,8,0">
                                        <TextBox Name="txt_FolderXAMPP"
                                                 Style="{StaticResource InputTextBoxNoBorder}"/>
                                    </Border>
                                    <Button Grid.Column="1"
                                            Name="btn_BukaFolder"
                                            Content="..."
                                            Style="{StaticResource BrowseButtonStyle}"/>
                                </Grid>

                                <!-- Lokasi Server -->
                                <TextBlock Text="Lokasi Server"
                                           FontSize="12"
                                           Foreground="{StaticResource clrTeksSekunder}"
                                           Margin="0,0,0,6"/>
                                <Border Style="{StaticResource InputBorderStyle}" Margin="0,0,0,15" Width="280" HorizontalAlignment="Left">
                                    <TextBox Name="txt_LokasiServer"
                                             Style="{StaticResource InputTextBoxNoBorder}"/>
                                </Border>

                                <!-- Port -->
                                <TextBlock Text="Port"
                                           FontSize="12"
                                           Foreground="{StaticResource clrTeksSekunder}"
                                           Margin="0,0,0,6"/>
                                <Border Style="{StaticResource InputBorderStyle}" Margin="0,0,0,15" Width="120" HorizontalAlignment="Left">
                                    <TextBox Name="txt_PortServer"
                                             Style="{StaticResource InputTextBoxNoBorder}"/>
                                </Border>

                                <!-- User -->
                                <TextBlock Text="User"
                                           FontSize="12"
                                           Foreground="{StaticResource clrTeksSekunder}"
                                           Margin="0,0,0,6"/>
                                <Border Style="{StaticResource InputBorderStyle}" Margin="0,0,0,15" Width="200" HorizontalAlignment="Left">
                                    <TextBox Name="txt_UserDatabase"
                                             Style="{StaticResource InputTextBoxNoBorder}"/>
                                </Border>

                                <!-- Password -->
                                <TextBlock Text="Password"
                                           FontSize="12"
                                           Foreground="{StaticResource clrTeksSekunder}"
                                           Margin="0,0,0,6"/>
                                <Border Style="{StaticResource InputBorderStyle}" Margin="0,0,0,25" Width="200" HorizontalAlignment="Left">
                                    <PasswordBox Name="txt_PasswordDatabase"
                                                 Style="{StaticResource InputPasswordBoxNoBorder}"
                                                 PasswordChar="*"/>
                                </Border>

                                <!-- Tombol Koneksi -->
                                <StackPanel Orientation="Horizontal">
                                    <Button Name="btn_TesKoneksi"
                                            Content="Tes Koneksi"
                                            Style="{StaticResource ActionButtonSecondary}"
                                            Width="140"
                                            Margin="0,0,10,0"/>
                                    <Button Name="btn_SimpanPerubahanKoneksiDatabase"
                                            Content="Simpan Perubahan"
                                            Style="{StaticResource ActionButtonPrimary}"
                                            Width="160"
                                            IsEnabled="False"/>
                                </StackPanel>

                            </StackPanel>

                            <!-- Panel Kanan: Tombol dbEngine dan Repair -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Top" Margin="50,0,0,0">

                                <!-- Section Title -->
                                <TextBlock Text="Database Engine"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource clrTeksPrimer}"
                                           Margin="0,0,0,20"/>

                                <!-- Info Box -->
                                <Border Background="{StaticResource clrBgPrimarySurface}"
                                        CornerRadius="8"
                                        Padding="15,12"
                                        Margin="0,0,0,20"
                                        Width="200">
                                    <StackPanel>
                                        <TextBlock Text="Kontrol MySQL"
                                                   FontSize="12"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource clrBtnPrimerBg}"
                                                   Margin="0,0,0,4"/>
                                        <TextBlock Text="Start/Stop database engine lokal"
                                                   FontSize="11"
                                                   Foreground="{StaticResource clrTeksSekunder}"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>

                                <Button Name="btn_StartdbEngine"
                                        Content="Start dbEngine"
                                        Style="{StaticResource ActionButtonPrimary}"
                                        Width="200"
                                        Margin="0,0,0,10"/>

                                <Button Name="btn_StopdbEngine"
                                        Content="Stop dbEngine"
                                        Style="{StaticResource ActionButtonSecondary}"
                                        Width="200"
                                        Margin="0,0,0,25"/>

                                <!-- Separator -->
                                <Border Height="1"
                                        Background="{StaticResource clrBorderDefault}"
                                        Margin="0,0,0,25"
                                        Width="200"/>

                                <!-- Warning Box -->
                                <Border Background="{StaticResource clrStatusPeringatanBg}"
                                        CornerRadius="8"
                                        Padding="15,12"
                                        Margin="0,0,0,15"
                                        Width="200">
                                    <StackPanel>
                                        <TextBlock Text="Perbaikan Database"
                                                   FontSize="12"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource clrStatusPeringatan}"
                                                   Margin="0,0,0,4"/>
                                        <TextBlock Text="Gunakan jika database corrupt"
                                                   FontSize="11"
                                                   Foreground="{StaticResource clrTeksSekunder}"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>

                                <Button Name="btn_RepairMySQL"
                                        Content="Repair MySQL"
                                        Style="{StaticResource ActionButtonSecondary}"
                                        Width="200"/>

                            </StackPanel>

                        </Grid>
                    </ScrollViewer>
                </TabItem>

            </TabControl>

        </Grid>
    </Border>

</Window>
