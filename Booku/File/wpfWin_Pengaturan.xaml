<Window x:Class="wpfWin_Pengaturan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Booku"
        mc:Ignorable="d"
        Title="Pengaturan"
        Height="700"
        Width="870"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        >

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../WPF\Styles\StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
<Grid Margin="10">
        <TabControl Name="tab_Pengaturan">

            <!-- TAB UMUM -->
            <TabItem Name="tab_Umum" Header="Umum">
                <Grid Name="grid_Umum">
                    <!-- wpfUsc_PengaturanUmum akan di-host di sini secara programatis -->
                </Grid>
            </TabItem>

            <!-- TAB COMPANY PROFILE -->
            <TabItem Name="tab_CompanyProfile" Header="Company Profile">
                <Grid Name="grid_CompanyProfile">
                    <!-- wpfUsc_CompanyProfile akan di-host di sini secara programatis -->
                </Grid>
            </TabItem>

            <!-- TAB DATABASE -->
            <TabItem Name="tab_Database" Header="Database">
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Panel Kiri: Form Koneksi Database -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Top">

                        <!-- Folder XAMPP -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Folder XAMPP" VerticalAlignment="Center" Style="{StaticResource styleTextBlockFormDialog}"/>
                            <TextBox Grid.Column="1" Name="txt_FolderXAMPP" Style="{StaticResource styleTextBoxFormDialog}"/>
                            <Button Grid.Column="2" Name="btn_BukaFolder" Content="..." Width="40" Margin="5,0,0,0" Padding="5,3"/>
                        </Grid>

                        <!-- Lokasi Server -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Lokasi Server" VerticalAlignment="Center" Style="{StaticResource styleTextBlockFormDialog}"/>
                            <TextBox Grid.Column="1" Name="txt_LokasiServer" Style="{StaticResource styleTextBoxFormDialog}"/>
                        </Grid>

                        <!-- Port -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Port" VerticalAlignment="Center" Style="{StaticResource styleTextBlockFormDialog}"/>
                            <TextBox Grid.Column="1" Name="txt_PortServer" Style="{StaticResource styleTextBoxFormDialog}"/>
                        </Grid>

                        <!-- User -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="User" VerticalAlignment="Center" Style="{StaticResource styleTextBlockFormDialog}"/>
                            <TextBox Grid.Column="1" Name="txt_UserDatabase" Style="{StaticResource styleTextBoxFormDialog}"/>
                        </Grid>

                        <!-- Password -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Password" VerticalAlignment="Center" Style="{StaticResource styleTextBlockFormDialog}"/>
                            <PasswordBox Grid.Column="1" Name="txt_PasswordDatabase" PasswordChar="*" Height="23" VerticalContentAlignment="Center"/>
                        </Grid>

                        <!-- Tombol Tes Koneksi dan Simpan -->
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="50,0,0,0">
                            <Button Name="btn_TesKoneksi" Content="Tes Koneksi" Width="150" Height="35" Margin="0,0,0,10"/>
                            <Button Name="btn_SimpanPerubahanKoneksiDatabase" Content="Simpan Perubahan" Width="150" Height="35" IsEnabled="False"/>
                        </StackPanel>

                    </StackPanel>

                    <!-- Panel Kanan: Tombol dbEngine dan Repair -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="50,0,0,0">
                        <Button Name="btn_StartdbEngine" Content="_Start dbEngine" Width="150" Height="35" Margin="0,0,0,10"/>
                        <Button Name="btn_StopdbEngine" Content="Sto_p dbEngine" Width="150" Height="35" Margin="0,0,0,10"/>
                        <Button Name="btn_RepairMySQL" Content="_Repair MySQL" Width="150" Height="35"/>
                    </StackPanel>

                </Grid>
            </TabItem>

        </TabControl>
    </Grid>

</Window>


