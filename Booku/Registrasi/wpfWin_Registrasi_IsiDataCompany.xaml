<Window x:Class="wpfWin_Registrasi_IsiDataCompany"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Booku"
        mc:Ignorable="d"
        Title="Buat Database General - Langkah Kedua"
        Height="700"
        Width="480"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../WPF/Styles/StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Top">
            <!-- Header -->
            <TextBlock Text="Langkah Kedua :"
                       HorizontalAlignment="Center"
                       FontWeight="SemiBold"
                       Margin="0,0,0,5"/>
            <TextBlock Text="Isi Form di bawah ini :"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,15"/>

            <!-- GroupBox Data Perusahaan -->
            <GroupBox Header="Data Perusahaan :" Style="{StaticResource styleGroupBoxFormDialog}">
                <StackPanel>
                    <!-- Nama Perusahaan -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Nama Perusahaan" VerticalAlignment="Center" Style="{StaticResource styleTextBlockFormDialog}"/>
                        <TextBox Name="txt_NamaPerusahaan" Grid.Column="1" Style="{StaticResource styleTextBoxFormDialog}"/>
                    </Grid>

                    <!-- Jenis Usaha -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Jenis Usaha" VerticalAlignment="Center" Style="{StaticResource styleTextBlockFormDialog}"/>
                        <ComboBox Name="cmb_JenisUsahaPerusahaan" Grid.Column="1" Height="25" VerticalContentAlignment="Center"/>
                    </Grid>

                    <!-- Jenis WP -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Jenis WP" VerticalAlignment="Center" Style="{StaticResource styleTextBlockFormDialog}"/>
                        <ComboBox Name="cmb_JenisWPPerusahaan" Grid.Column="1" Height="25" VerticalContentAlignment="Center"/>
                    </Grid>

                    <!-- NPWP -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="NPWP" VerticalAlignment="Center" Style="{StaticResource styleTextBlockFormDialog}"/>
                        <TextBox Name="txt_NPWP" Grid.Column="1" Style="{StaticResource styleTextBoxFormDialog}"/>
                    </Grid>

                    <!-- Nama Direktur -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Nama Direktur" VerticalAlignment="Center" Style="{StaticResource styleTextBlockFormDialog}"/>
                        <TextBox Name="txt_NamaDirektur" Grid.Column="1" Style="{StaticResource styleTextBoxFormDialog}"/>
                    </Grid>

                    <!-- Alamat -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Alamat" VerticalAlignment="Top" Margin="0,5,0,0" Style="{StaticResource styleTextBlockFormDialog}"/>
                        <TextBox Name="txt_AlamatPerusahaan" Grid.Column="1" Height="55"
                                 AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                                 Style="{StaticResource styleTextBoxFormDialog}"/>
                    </Grid>

                    <!-- Email -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Email" VerticalAlignment="Center" Style="{StaticResource styleTextBlockFormDialog}"/>
                        <TextBox Name="txt_EmailPerusahaan" Grid.Column="1" Style="{StaticResource styleTextBoxFormDialog}"/>
                    </Grid>

                    <!-- PIC -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="PIC" VerticalAlignment="Center" Style="{StaticResource styleTextBlockFormDialog}"/>
                        <TextBox Name="txt_PIC" Grid.Column="1" Style="{StaticResource styleTextBoxFormDialog}"/>
                    </Grid>

                    <!-- Nomor SKT -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Nomor SKT" VerticalAlignment="Center" Style="{StaticResource styleTextBlockFormDialog}"/>
                        <TextBox Name="txt_NomorSKT" Grid.Column="1" Style="{StaticResource styleTextBoxFormDialog}"/>
                    </Grid>

                    <!-- Tanggal SKT -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="130"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Tanggal SKT" VerticalAlignment="Center" Style="{StaticResource styleTextBlockFormDialog}"/>
                        <DatePicker Name="dtp_TanggalSKT" Grid.Column="1" Height="25"/>
                    </Grid>

                    <!-- Sistem Approval -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="130"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Sistem Approval" VerticalAlignment="Center" Style="{StaticResource styleTextBlockFormDialog}"/>
                        <ComboBox Name="cmb_SistemApproval" Grid.Column="1" Height="25" VerticalContentAlignment="Center"/>
                    </Grid>

                    <!-- Tanggal Cut Off -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Tanggal Cut Off" VerticalAlignment="Center" Style="{StaticResource styleTextBlockFormDialog}"/>
                        <TextBlock Text="31/12/" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <ComboBox Name="cmb_TahunCutOff" Grid.Column="2" Width="80" Height="25" VerticalContentAlignment="Center"/>
                    </Grid>

                    <!-- Sistem COA -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="130"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Sistem COA" VerticalAlignment="Center" Style="{StaticResource styleTextBlockFormDialog}"/>
                        <ComboBox Name="cmb_SistemCOA" Grid.Column="1" Height="25" VerticalContentAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </GroupBox>

            <!-- Button Lanjutkan -->
            <Button Name="btn_Lanjutkan"
                    Content="Lanjutkan"
                    Width="130"
                    Height="40"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
