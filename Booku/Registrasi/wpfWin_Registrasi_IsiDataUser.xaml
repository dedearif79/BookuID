<Window x:Class="wpfWin_Registrasi_IsiDataUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Booku"
        mc:Ignorable="d"
        Title="Buat Database General - Langkah Ketiga"
        Height="360"
        Width="420"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../WPF\Styles\StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
<Grid Margin="20">
        <StackPanel VerticalAlignment="Top">
            <!-- Header -->
            <TextBlock Text="Langkah Ketiga :"
                       HorizontalAlignment="Center"
                       FontWeight="SemiBold"
                       Margin="0,0,0,5"/>
            <TextBlock Text="Isi Form di bawah untuk mendaftarkan user perdana,"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="sebagai Super User :"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,15"/>

            <!-- GroupBox Data User Perdana -->
            <GroupBox Header="Data User Perdana :" Style="{StaticResource styleGroupBoxFormDialog}">
                <StackPanel>
                    <!-- Username -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Username" VerticalAlignment="Center" Style="{StaticResource styleTextBlockFormDialog}"/>
                        <TextBox Name="txt_Username" Grid.Column="1" MaxLength="63" Style="{StaticResource styleTextBoxFormDialog}"/>
                    </Grid>

                    <!-- Password -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Password" VerticalAlignment="Center" Style="{StaticResource styleTextBlockFormDialog}"/>
                        <PasswordBox Name="txt_Password" Grid.Column="1" Height="25" MaxLength="63"/>
                    </Grid>

                    <!-- Nama Lengkap -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Nama Lengkap" VerticalAlignment="Center" Style="{StaticResource styleTextBlockFormDialog}"/>
                        <TextBox Name="txt_NamaUser" Grid.Column="1" MaxLength="63" Style="{StaticResource styleTextBoxFormDialog}"/>
                    </Grid>
                </StackPanel>
            </GroupBox>

            <!-- Button Lanjutkan -->
            <Button Name="btn_Lanjutkan"
                    Content="Lanjutkan"
                    Width="130"
                    Height="40"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>


