<Window x:Class="wpfWin_Registrasi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Booku"
        mc:Ignorable="d"
        Title="Registrasi Online"
        Height="320"
        Width="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../WPF/Styles/StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="15">
        <StackPanel>
            <!-- GroupBox Data Produk -->
            <GroupBox Header="Data Produk :" Style="{StaticResource styleGroupBoxFormDialog}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Nomor Seri Produk -->
                    <TextBlock Text="Nomor Seri Produk" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"   Style="{StaticResource styleTextBlockFormDialog}"/>
                    <TextBox Name="txt_NomorSeriProduk" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" MaxLength="27"   Style="{StaticResource styleTextBoxFormDialog}"/>

                    <!-- ID Customer -->
                    <TextBlock Text="ID Customer" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"  Style="{StaticResource styleTextBlockFormDialog}"/>
                    <TextBox Name="txt_IDCustomer" Grid.Row="1" Grid.Column="1" IsEnabled="False"   Style="{StaticResource styleTextBoxFormDialog}"/>

                    <!-- Button Cek Ketersediaan -->
                    <Button Name="btn_CekKetersediaan" Grid.Row="1" Grid.Column="2" Grid.RowSpan="2" HorizontalContentAlignment="Center" Margin="9 0 0 0"
                            Content="Cek&#x0a;Ketersediaan" Width="90" Height="55" IsEnabled="False"/>

                    <!-- Jumlah Perangkat -->
                    <TextBlock Text="Jumlah Perangkat" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Style="{StaticResource styleTextBlockFormDialog}"/>
                    <TextBox Name="txt_JumlahPerangkat" Grid.Row="2" Grid.Column="1" Width="50" HorizontalAlignment="Left" IsEnabled="False" Style="{StaticResource styleTextBoxFormDialog}"/>
                </Grid>
            </GroupBox>

            <!-- ID Komputer -->
            <Grid Margin="0,15,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="ID Komputer" VerticalAlignment="Center" Style="{StaticResource styleTextBlockFormDialog}"/>
                <TextBox Name="txt_IDKomputer" Grid.Column="1" IsEnabled="False" Style="{StaticResource styleTextBoxFormDialog}"/>
            </Grid>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Name="btn_Batal" Content="Batal" Width="90" Height="38" Margin="0,0,10,0"/>
                <Button Name="btn_Kirim" Content="Kirim" Width="90" Height="38" IsEnabled="False"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
