<Window x:Class="wpfWin_ImportJurnal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Booku"
        mc:Ignorable="d"
        Title="Import Jurnal"
        MinWidth="666"
        Height="Auto"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        >

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/BookuID.Styles;component/WPF/Styles/StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
<StackPanel Style="{StaticResource stylePanelFormDialog}" >

        <StackPanel Style="{StaticResource stylePanelFormDialogVertikal}" >

            <TextBlock  Style="{StaticResource styleTextBlockFormDialog}"   Name="lbl_Baris_01" Text="Baris 01"  />
            <TextBlock  Style="{StaticResource styleTextBlockFormDialog}"   Name="lbl_Baris_02" Text="Baris 02"  />
            <ProgressBar Height="33"    Margin="00 15 00 00"    Name="pgb_Progress" />
            <TextBlock  Style="{StaticResource styleTextBlockFormDialog}"   Name="lbl_ProgressReport" Text="Progress Report"  />
            <RichTextBox    Height="333"    Margin="00 15 00 00"    Name="txt_LaporanHasilPostingJurnal" />

        </StackPanel>

        <!--Tombol CRUD :-->
        <StackPanel Style="{StaticResource stylePanelFormDialogTombol}"     Name="pnl_TombolForm">
            <Button Style="{StaticResource styleButtonFormDialogBuang}"     Name="btn_Buang"/>
            <Button Style="{StaticResource styleButtonFormDialogTerapkan}"  Name="btn_Terapkan" />
            <Button Style="{StaticResource styleButtonFormDialogProses}"    Name="btn_Proses"/>
            <Button Style="{StaticResource styleButtonFormDialogBatalkan}"  Name="btn_Batal" />
        </StackPanel>
        
    </StackPanel>

</Window>


