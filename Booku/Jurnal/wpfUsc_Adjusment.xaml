<UserControl x:Class="wpfUsc_JurnalAdjusment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Booku"
             mc:Ignorable="d" 
>

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../WPF\Styles\StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
<DockPanel Style="{StaticResource stylePanelFormHalaman}">
        <StackPanel Style="{StaticResource stylePanelFormHalamanHeader}">
            <StackPanel Style="{StaticResource stylePanelFormHalamanTittle}" >
                <TextBlock Style="{StaticResource styleTextBlockFormHalamanJudul}" Name="lbl_JudulForm">Jurnal Adjusment</TextBlock>
            </StackPanel>
            <!-- Baris Tombol :-->
            <StackPanel Style="{StaticResource stylePanelFormHalamanTombolHorizontal}"      Name="pnl_TombolForm">
                <Button Style="{StaticResource styleButtonFormHalamanCrudInput}"           Name="btn_Refresh" Content="Refresh"  />
                <Border Style="{StaticResource styleBorderHeaderSeparatorTombol}" />
                <Button Style="{StaticResource styleButtonFormHalamanCrudInput}"           Name="btn_Input" />
                <Button Style="{StaticResource styleButtonFormHalamanCrudEdit}"            Name="btn_Edit" />
                <Button Style="{StaticResource styleButtonFormHalamanCrudHapus}"           Name="btn_Hapus" />
            </StackPanel>
            <!-- Baris Filter Data :-->
            <StackPanel Style="{StaticResource stylePanelFormHalamanFilterData}" Name="pnl_FilterData" >
                <TextBlock Style="{StaticResource styleTextBlockFormHalaman}">Filter Data 1 :</TextBlock>
                <TextBox Width="100"   Margin="6 3"></TextBox>
                <TextBlock Style="{StaticResource styleTextBlockFormHalaman}">Filter Data 2 :</TextBlock>
                <ComboBox Width="123"  Margin="6 3"  ></ComboBox>
                <TextBlock Style="{StaticResource styleTextBlockFormHalaman}">Filter Data 3 :</TextBlock>
                <ComboBox Width="210"  Margin="6 3"  ></ComboBox>
            </StackPanel>
        </StackPanel>

        <StackPanel Style="{StaticResource stylePanelFormHalamanFooter}"></StackPanel>
        <DockPanel Width="Auto" Height="Auto" >

            <Grid DockPanel.Dock="Top" VerticalAlignment="Stretch" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="69"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" Style="{StaticResource stylePanelFormHalamanSidebarKiri}" CanVerticallyScroll="True" Height="99" Grid.RowSpan="2" >
                </StackPanel>
                <GridSplitter Grid.Column="0" Grid.RowSpan="2" Width="3"/>
                <StackPanel Grid.Row="0" Grid.Column="1" Style="{StaticResource stylePanelFormHalamanKonten}" CanVerticallyScroll="False" >
                    <DataGrid Name="datagridUtama" Style="{StaticResource StyleDataGridModul}"/>
                </StackPanel>
                <GridSplitter Grid.Column="1" Grid.RowSpan="2" Width="3"/>
                <StackPanel Grid.Row="0" Grid.Column="2" Style="{StaticResource stylePanelFormHalamanSidebarKanan}" Background="{StaticResource clrBgSidebar}" CanVerticallyScroll="True" Height="99" Grid.RowSpan="2" >
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="1" Background="Transparent" >
                </StackPanel>
            </Grid>

        </DockPanel>
    </DockPanel>


</UserControl>


