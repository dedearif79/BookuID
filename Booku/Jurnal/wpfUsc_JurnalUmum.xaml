<UserControl x:Class="wpfUsc_JurnalUmum"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Booku"
             mc:Ignorable="d"
>

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../WPF\Styles\StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel Style="{StaticResource stylePanelFormHalaman}"   Name="pnl_Halaman">
        <StackPanel Style="{StaticResource stylePanelFormHalamanHeader}">
            <Grid    DockPanel.Dock="Top"   HorizontalAlignment="Stretch"   VerticalAlignment="Stretch" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"  Name="HeaderKiri"/>
                    <ColumnDefinition Width="100*"  Name="HeaderTengah" />
                    <ColumnDefinition Width="Auto"  Name="HeaderKanan"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <!-- Header Kiri :-->
                <StackPanel Grid.Row="0"  Grid.Column="0"   Style="{StaticResource stylePanelFormHalamanHeaderKiri}">
                    <StackPanel Style="{StaticResource stylePanelFormHalamanTittle}" >
                        <TextBlock Style="{StaticResource styleTextBlockFormHalamanJudul}" Name="lbl_JudulForm" Text="Jurnal Umum" />
                    </StackPanel>
                    <!-- Baris Tombol :-->
                    <StackPanel Style="{StaticResource stylePanelFormHalamanTombolHorizontal}"  Name="pnl_TombolForm">
                        <Button Style="{StaticResource styleButtonFormHalamanRefresh}"          Name="btn_Refresh" />
                        <Border Style="{StaticResource styleBorderHeaderSeparatorTombol}" />
                        <Button Style="{StaticResource styleButtonFormHalamanJurnalVoucher}"    Name="btn_JurnalVoucher" />
                        <Border Style="{StaticResource styleBorderHeaderSeparatorTombol}"       Name="brd_Setujui" />
                        <Button Style="{StaticResource styleButtonFormHalamanSetujui }"         Name="btn_Setujui" />
                        <Border Style="{StaticResource styleBorderHeaderSeparatorTombol}" />
                        <Button Style="{StaticResource styleButtonFormHalamanCrudInput}"        Name="btn_Input" />
                        <Button Style="{StaticResource styleButtonFormHalamanCrudEdit}"         Name="btn_Edit" />
                        <Button Style="{StaticResource styleButtonFormHalamanCrudHapus}"        Name="btn_Hapus" />
                        <Border Style="{StaticResource styleBorderHeaderSeparatorTombol}"       Name="brd_Export"/>
                        <Button Style="{StaticResource styleButtonFormHalamanImport }"          Name="btn_Import" />
                        <Button Style="{StaticResource styleButtonFormHalamanExport }"          Name="btn_Export" />
                    </StackPanel>
                    <!-- Baris Filter Data :-->
                    <StackPanel Style="{StaticResource stylePanelFormHalamanFilterData}" Name="pnl_FilterData" >
                        <!-- Filter Jenis Jurnal : -->
                        <StackPanel Style="{StaticResource stylePanelFormHalamanFilterDataSubVertikal}"    Name="pnl_FilterJenisJurnal" >
                            <TextBlock Style="{StaticResource styleTextBlockFormHalaman}"   HorizontalAlignment="Left"    Text=" Jenis Jurnal :" />
                            <ComboBox Width="180"  Margin="0"  Name="cmb_JenisJurnal" />
                        </StackPanel>
                        <!-- Filter Periode : -->
                        <Border Style="{StaticResource styleBorderHeaderSeparatorFilter}"/>
                        <StackPanel Style="{StaticResource stylePanelFormHalamanFilterDataSubVertikal}"    Name="pnl_FilterPeriode" >
                            <TextBlock Style="{StaticResource styleTextBlockFormHalaman}"   HorizontalAlignment="Left"    Text=" Periode :" />
                            <StackPanel Orientation="Horizontal">
                                <DatePicker     Grid.Row="2" Grid.Column="1"    Style="{StaticResource styleDatePickerFormHalaman}"      Name="dtp_DariTanggal" />
                                <TextBlock Style="{StaticResource styleTextBlockFormHalaman}"   HorizontalAlignment="Left"    Margin="0 3 0 0"    Text=" s.d. " />
                                <DatePicker     Grid.Row="2" Grid.Column="1"    Style="{StaticResource styleDatePickerFormHalaman}"      Name="dtp_SampaiTanggal" />
                            </StackPanel>
                        </StackPanel>
                        <!-- Filter Nomor JV : -->
                        <Border Style="{StaticResource styleBorderHeaderSeparatorFilter}"/>
                        <StackPanel Style="{StaticResource stylePanelFormHalamanFilterDataSubVertikal}"    Name="pnl_FilterNomorJV" >
                            <TextBlock Style="{StaticResource styleTextBlockFormHalaman}"   HorizontalAlignment="Left"    Text=" Nomor JV :" />
                            <StackPanel Orientation="Horizontal">
                                <TextBox    Style="{StaticResource styleTextBoxFormHalaman}"    Margin="0"  Height="22" Width="57"  Name="txt_DariNomorJV" />
                                <TextBlock  Style="{StaticResource styleTextBlockFormHalaman}"  HorizontalAlignment="Left"        Margin="0 3 0 0"    Text=" s.d. " />
                                <TextBox    Style="{StaticResource styleTextBoxFormHalaman}"    Margin="0"  Height="22" Width="57"  Name="txt_SampaiNomorJV" />
                            </StackPanel>
                        </StackPanel>
                        <!-- Filter Status Approve : -->
                        <Border Style="{StaticResource styleBorderHeaderSeparatorFilter}"                  Name="brd_FilterStatusApprove"/>
                        <StackPanel Style="{StaticResource stylePanelFormHalamanFilterDataSubVertikal}"    Name="pnl_FilterStatusApprove" >
                            <TextBlock Style="{StaticResource styleTextBlockFormHalaman}"   HorizontalAlignment="Left"    Text=" Status :" />
                            <ComboBox Width="81"  Margin="0"  Name="cmb_StatusApprove" />
                        </StackPanel>
                        <!-- Filter COA : -->
                        <Border Style="{StaticResource styleBorderHeaderSeparatorFilter}"/>
                        <StackPanel Style="{StaticResource stylePanelFormHalamanFilterDataSubVertikal}"    Name="pnl_FilterCOA" >
                            <TextBlock Style="{StaticResource styleTextBlockFormHalaman}"   HorizontalAlignment="Left"    Text=" Akun :" />
                            <StackPanel Orientation="Horizontal">
                                <TextBox    Style="{StaticResource styleTextBoxFormHalaman}"    Margin="0"  Height="22" Width="45"  Name="txt_COA" />
                                <Button     Margin="9 0 0 0"    Width="39"  Name="btn_PilihCOA"     Content="Pilih"/>
                            </StackPanel>
                        </StackPanel>
                        <!-- Filter Cari : -->
                        <Border Style="{StaticResource styleBorderHeaderSeparatorFilter}"/>
                        <StackPanel Style="{StaticResource stylePanelFormHalamanFilterDataSubVertikal}"    Name="pnl_FilterCari" >
                            <TextBlock Style="{StaticResource styleTextBlockFormHalaman}"   HorizontalAlignment="Left"    Text=" Cari :" />
                            <StackPanel Orientation="Horizontal">
                                <TextBox    Style="{StaticResource styleTextBoxFormHalaman}"    Margin="0"  Height="22" Width="180" Name="txt_Cari" />
                            </StackPanel>
                        </StackPanel>
                        <!-- Filter Direct : -->
                        <Border Style="{StaticResource styleBorderHeaderSeparatorFilter}"/>
                        <StackPanel Style="{StaticResource stylePanelFormHalamanFilterDataSubVertikal}"    Name="pnl_FilterDirect" >
                            <TextBlock Style="{StaticResource styleTextBlockFormHalaman}"   HorizontalAlignment="Left"    Text=" Direct :" />
                            <ComboBox Width="75"  Margin="0"  Name="cmb_Direct" />
                        </StackPanel>
                        <!-- Tombol Filter : -->
                        <Border Style="{StaticResource styleBorderHeaderSeparatorFilter}"/>
                        <StackPanel Style="{StaticResource stylePanelFormHalamanFilterDataSubVertikal}"    Name="pnl_TombolFilter" >
                            <Button Content="Filter"    Width="51"  Height="39" Margin="0 9 0 0"    Name="btn_Filter"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                <!-- Header Kanan:-->
                <StackPanel  Grid.Row="0"  Grid.Column="2"    Style="{StaticResource stylePanelFormHalamanHeaderKanan}" HorizontalAlignment="Right" >
                    <StackPanel Style="{StaticResource stylePanelFormHalamanFilterDataSubVertikal}"    Name="pnl_FilterUrut" >
                        <TextBlock Style="{StaticResource styleTextBlockFormHalaman}"   HorizontalAlignment="Left"    Text=" Urut Berdasarkan :" />
                        <StackPanel Orientation="Horizontal">
                            <ComboBox Width="117"  Margin="0"           Name="cmb_UrutBerdasarkan" />
                            <ComboBox Width="057"  Margin="9 0 0 0"     Name="cmb_ASC" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </StackPanel>


        <!-- Footer : -->
        <StackPanel Style="{StaticResource stylePanelFormHalamanFooter}"    HorizontalAlignment="Stretch" >
            <DockPanel  Width="Auto" HorizontalAlignment="Stretch"  Name="pnl_Footer"    >
                <StackPanel Orientation="Horizontal"                Name="pnl_JumlahList"   HorizontalAlignment="Left">
                    <TextBlock      Text="Jumlah JV : "             Name="lbl_JumlahList"   Style="{StaticResource styleTextBlockFormHalamanFooter}"/>
                    <TextBox        Width="75"                      Name="txt_JumlahList"   Style="{StaticResource styleTextBoxFormHalamanFooter}"/>
                </StackPanel>
            </DockPanel>
        </StackPanel>

        <DockPanel Width="Auto" Height="Auto" Name="pnl_Konten" >

            <Grid DockPanel.Dock="Top" VerticalAlignment="Stretch" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0"         Name="SidebarKiri"/>
                    <ColumnDefinition Width="100*"      Name="BarUtama"/>
                    <ColumnDefinition Width="Auto"      Name="SidebarKanan" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" Style="{StaticResource stylePanelFormHalamanSidebarKiri}" CanVerticallyScroll="True" Height="99" Grid.RowSpan="2" Name="pnl_SidebarKiri" >
                </StackPanel>

                <GridSplitter Grid.Column="0" Grid.RowSpan="2" Width="3" />

                <StackPanel Grid.Row="0" Grid.Column="1" Style="{StaticResource stylePanelFormHalamanKonten}" VerticalAlignment="Stretch">

                    <StackPanel Style="{StaticResource stylePanelDataGridView}" VerticalAlignment="Stretch" Name="pnl_DataGridUtama" >
                        <DataGrid Name="datagridUtama" Style="{StaticResource StyleDataGridModul}" MinWidth="999" MinHeight="33" VerticalAlignment="Stretch" />
                    </StackPanel>

                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="3" Style="{StaticResource stylePanelFormHalamanSidebarKanan}" Width="528" Height="Auto" Grid.RowSpan="2" Name="pnl_SidebarKanan" Visibility="Collapsed" >
                </StackPanel>

            </Grid>

        </DockPanel>
    </DockPanel>

</UserControl>


