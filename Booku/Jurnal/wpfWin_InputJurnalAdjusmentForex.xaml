<Window x:Class="wpfWin_InputJurnalAdjusmentForex"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Booku"
        mc:Ignorable="d"
        Title="Input Jurnal Adjusment Forex"
        Width="Auto"
        Height="Auto"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        >

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/BookuID.Styles;component/WPF/Styles/StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <StackPanel Style="{StaticResource stylePanelFormDialog}" >

        <StackPanel Style="{StaticResource stylePanelFormDialogHorizontal}" >

            <ScrollViewer   Style="{StaticResource styleScrollViewerFormDialogVertikal}" Name="scv_Kiri">
                <StackPanel Style="{StaticResource stylePanelFormDialogVertikal}" >
                    <Grid Style="{StaticResource styleGridFormDialog}" >

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="144" />
                            <ColumnDefinition Width="190" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock  Grid.Row="0"  Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"       Text="Nomor JV" />
                        <TextBlock  Grid.Row="1"  Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"       Text="Jenis Jurnal" />
                        <TextBlock  Grid.Row="2"  Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"       Text="Tanggal Jurnal" />
                        <TextBlock  Grid.Row="3"  Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"       Text="Kode Dokumen" />
                        <TextBlock  Grid.Row="4"  Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"       Text="Bundelan" />
                        <TextBlock  Grid.Row="5"  Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"       Text="Tanggal Invoice" />
                        <TextBlock  Grid.Row="6"  Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"       Text="Nomor Invoice" />
                        <TextBlock  Grid.Row="7"  Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"       Text="Nomor Faktur Pajak"       Name="lbl_NomorFaktur" />
                        <TextBlock  Grid.Row="8"  Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"       Text="Kode Lawan Transaksi" />
                        <TextBlock  Grid.Row="9"  Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"       Text="Nama Lawan Transaksi" />
                        <TextBlock  Grid.Row="10" Grid.Column="0"    Style="{StaticResource styleTextBlockFormDialog}"      Name="lbl_Kurs" Text="Kurs" />
                        <TextBlock  Grid.Row="11" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"       Text="Uraian Transaksi :" />

                        <TextBox        Grid.Row="0"  Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialog}"         Name="txt_NomorJV" />
                        <ComboBox       Grid.Row="1"  Grid.Column="1"   Style="{StaticResource styleComboBoxFormDialog}"        Name="cmb_JenisJurnal" />
                        <DatePicker     Grid.Row="2" Grid.Column="1"    Style="{StaticResource styleDatePickerFormDialog}"      Name="dtp_TanggalJurnal" />
                        <TextBox        Grid.Row="3"  Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialog}"         Name="txt_KodeDokumen" />
                        <TextBox        Grid.Row="4"  Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialog}"         Name="txt_Bundelan" />
                        <TextBox        Grid.Row="5"  Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialog}"         Name="txt_TanggalInvoice" />
                        <TextBox        Grid.Row="6"  Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialog}"         Name="txt_NomorInvoice" />
                        <TextBox        Grid.Row="7"  Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialog}"         Name="txt_NomorFakturPajak" />
                        <StackPanel     Grid.Row="8"  Grid.Column="1"   Style="{StaticResource stylePanelFormDialogKolom}"  >
                            <TextBox    Width="99"                      Style="{StaticResource styleTextBoxFormDialog}"         Name="txt_KodeLawanTransaksi" />
                            <Button                                     Style="{StaticResource styleButtonFormDialogPilihKode}"     Name="btn_PilihMitra" />
                        </StackPanel>
                        <TextBox        Grid.Row="9"  Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialog}"         Name="txt_NamaLawanTransaksi" />
                        <TextBox        Grid.Row="10" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaAsingPlus}"   Name="txt_KursAkhirBulan" />
                        <RichTextBox    Grid.Row="12" Grid.Column="0"   Style="{StaticResource styleRichTextBoxFormDialog}"     Name="txt_UraianTransaksi" Grid.ColumnSpan="2" Width="Auto" />
                    </Grid>
                </StackPanel>
            </ScrollViewer>

            <StackPanel Style="{StaticResource stylePanelFormDialogVertikal}" Width="1" Background="Black" Opacity=".2" Margin="0 27" Name="pnl_Pemisah" />

            <ScrollViewer   Style="{StaticResource styleScrollViewerFormDialogVertikal}" Name="scv_Kanan">

                <StackPanel Style="{StaticResource stylePanelFormDialogVertikal}" Name="pnl_Kanan" >

                    <GroupBox Header="Informasi : " Name="grb_Informasi"    HorizontalAlignment="Stretch"  Margin="0 0 0 9">
                        <Grid Style="{StaticResource styleGridFormDialog}"  Margin="9 9 9 9" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="153" />
                                <ColumnDefinition Width="123" />
                                <ColumnDefinition Width="7" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock  Grid.Row="0"  Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Saldo Akhir (MUA)"        Name="lbl_SaldoAkhirMUA" />
                            <TextBlock  Grid.Row="1"  Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Saldo Akhir (IDR)"        Name="lbl_SaldoAkhirIDR" />
                            <TextBlock  Grid.Row="2"  Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Saldo Akhir Bulan (IDR)"  Name="lbl_SaldoAkhirBulanIDR" />
                            <TextBlock  Grid.Row="3"  Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Selisih (IDR)"            Name="lbl_Selisih" />
                            <TextBox    Grid.Row="0"  Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaAsingPlus}"                       Name="txt_SaldoAkhirMUA" />
                            <TextBox    Grid.Row="1"  Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaSeparatePlusReadOnly}"            Name="txt_SaldoAkhirIDR" />
                            <TextBox    Grid.Row="2"  Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaSeparatePlusReadOnly}"            Name="txt_SaldoAkhirBulanIDR" />
                            <TextBox    Grid.Row="3"  Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaSeparatePlusReadOnly}"            Name="txt_Selisih" />
                            <TextBlock  Grid.Row="0"  Grid.Column="3"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Pertanggal"               Name="lbl_Pertanggal_SaldoAkhirMUA" />
                            <TextBlock  Grid.Row="1"  Grid.Column="3"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Pertanggal"               Name="lbl_Pertanggal_SaldoAkhirIDR" />
                            <TextBlock  Grid.Row="2"  Grid.Column="3"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Pertanggal"               Name="lbl_Pertanggal_SaldoAkhirBulanIDR" />
                            <TextBlock  Grid.Row="3"  Grid.Column="3"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Laba/Rugi"                Name="lbl_LabaRugi" />
                        </Grid>
                    </GroupBox>

                    <StackPanel Style="{StaticResource stylePanelDataGridView}"  >
                        <DataGrid Style="{StaticResource StyleDataGridFormDialog}" Name="datagridUtama" HorizontalAlignment="Left" VerticalAlignment="Top" AutoGenerateColumns="False" MinWidth="555" MinHeight="33" />
                    </StackPanel>

                    <DockPanel  Margin="0 15 0 0">
                        <TextBlock  Text="Status Balance"   TextAlignment="Center"  FontSize="15"   Name="lbl_StatusBalance"    FontWeight="DemiBold" />
                    </DockPanel>

                </StackPanel>

            </ScrollViewer>

        </StackPanel>

        <!--Tombol CRUD :-->
        <StackPanel Style="{StaticResource stylePanelFormDialogTombol}"     Name="pnl_TombolForm">
            <Button Style="{StaticResource styleButtonFormDialogReset}"     Name="btn_Reset" />
            <Button Style="{StaticResource styleButtonFormDialogSimpan}"    Name="btn_Simpan" />
            <Button Style="{StaticResource styleButtonFormDialogBatal}"     Name="btn_Batal" />
        </StackPanel>
    </StackPanel>

</Window>


