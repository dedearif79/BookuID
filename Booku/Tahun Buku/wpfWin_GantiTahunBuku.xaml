<Window x:Class="wpfWin_GantiTahunBuku"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Booku"
        mc:Ignorable="d"
        Title="Ganti Tahun Buku"
        Height="270"
        Width="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        >

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../WPF\Styles\StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
<Grid Margin="20">
        <StackPanel VerticalAlignment="Top">

            <!-- Header -->
            <TextBlock Name="lbl_JudulForm"
                       Text="GANTI TAHUN BUKU :"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,30"/>

            <!-- Tahun Buku -->
            <Grid Margin="0,0,0,30" HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Tahun Buku :" VerticalAlignment="Center" Style="{StaticResource styleTextBlockFormDialog}"/>
                <ComboBox Grid.Column="1" Name="cmb_TahunBuku" Height="23" VerticalContentAlignment="Center"/>
            </Grid>

            <!-- Tombol Ganti -->
            <Button Name="btn_Ganti"
                    Content="Ganti"
                    Width="110"
                    Height="40"
                    HorizontalAlignment="Center" 
                    IsDefault="True"/>

        </StackPanel>
    </Grid>

</Window>


