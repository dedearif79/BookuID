<Window x:Class="wpfWin_BuatDatabaseBukuBaru"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Booku"
        mc:Ignorable="d"
        Title="Buat Database Buku Baru"
        Height="Auto"
        Width="Auto"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        SizeToContent="WidthAndHeight"
        >

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/BookuID.Styles;component/WPF/Styles/StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Subtle Shadow -->
            <DropShadowEffect x:Key="SubtleShadow" BlurRadius="20" ShadowDepth="2" Direction="270" Color="#000000" Opacity="0.15"/>

            <!-- Style TextBox -->
            <Style x:Key="MinimalTextBox" TargetType="TextBox">
                <Setter Property="Height" Value="40"/>
                <Setter Property="Padding" Value="12,0"/>
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="Background" Value="{StaticResource clrBgInput}"/>
                <Setter Property="Foreground" Value="{StaticResource clrTeksPrimer}"/>
                <Setter Property="BorderBrush" Value="{StaticResource clrBorderDefault}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CaretBrush" Value="{StaticResource clrBtnPrimerBg}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="6">
                                <ScrollViewer x:Name="PART_ContentHost"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="BorderBrush" Value="{StaticResource clrBorderPrimary}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Style ComboBox -->
            <Style x:Key="MinimalComboBox" TargetType="ComboBox" BasedOn="{StaticResource styleComboBoxFormDialog}">
                <Setter Property="Height" Value="40"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
            </Style>

            <!-- Style Label -->
            <Style x:Key="FieldLabel" TargetType="TextBlock">
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Foreground" Value="{StaticResource clrTeksSekunder}"/>
                <Setter Property="Margin" Value="0,0,0,6"/>
            </Style>

            <!-- Style Tombol Primer -->
            <Style x:Key="BtnPrimary" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource clrBtnPrimerBg}"/>
                <Setter Property="Foreground" Value="{StaticResource clrBtnPrimerFg}"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="6"
                                    BorderThickness="0">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource clrBtnPrimerBgHover}"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource clrBtnPrimerBgPressed}"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource clrBtnDisabledBg}"/>
                                    <Setter Property="Foreground" Value="{StaticResource clrBtnDisabledFg}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Style Tombol Sekunder -->
            <Style x:Key="BtnSecondary" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{StaticResource clrTeksSekunder}"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="6"
                                    BorderThickness="1"
                                    BorderBrush="{StaticResource clrBorderDefault}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource clrBgHover}"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource clrBorderPrimary}"/>
                                    <Setter Property="Foreground" Value="{StaticResource clrTeksPrimer}"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource clrBgPressed}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>
    </Window.Resources>

    <!-- Main Container -->
    <Border Effect="{StaticResource SubtleShadow}" CornerRadius="10" Margin="15" Width="340">
        <Border.Background>
            <SolidColorBrush Color="{StaticResource clrWhite}"/>
        </Border.Background>

        <StackPanel>

            <!-- ========== HEADER ========== -->
            <Border CornerRadius="10,10,0,0"
                    BorderBrush="{StaticResource clrBorderDefault}"
                    BorderThickness="0,0,0,1"
                    Padding="24,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Accent Bar -->
                    <Border Grid.Column="0"
                            Width="4"
                            CornerRadius="2"
                            Background="{StaticResource clrBtnPrimerBg}"
                            Margin="0,0,16,0"/>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Buat Database Baru"
                                   FontSize="17"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource clrTeksPrimer}"/>
                        <TextBlock Text="Buat database untuk tahun buku baru"
                                   FontSize="11"
                                   Foreground="{StaticResource clrTeksSekunder}"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ========== CONTENT ========== -->
            <StackPanel Margin="24,20,24,24">

                <!-- Tahun Buku -->
                <TextBlock Text="Tahun Buku" Style="{StaticResource FieldLabel}"/>
                <TextBox x:Name="txt_TahunBuku"
                         Style="{StaticResource MinimalTextBox}"
                         MaxLength="4"
                         Width="120"
                         HorizontalAlignment="Left"/>

                <!-- Jenis Tahun Buku -->
                <TextBlock Text="Jenis Tahun Buku" Style="{StaticResource FieldLabel}" Margin="0,16,0,6"/>
                <ComboBox x:Name="cmb_JenisTahunBuku" Style="{StaticResource MinimalComboBox}"/>

                <!-- Info Text -->
                <TextBlock Text="Database hanya bisa dibuat untuk tahun ini dan 4 tahun ke belakang"
                           FontSize="11"
                           Foreground="{StaticResource clrTeksSekunder}"
                           TextWrapping="Wrap"
                           Margin="0,16,0,0"/>

                <!-- Buttons -->
                <Grid Margin="0,24,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            x:Name="btn_Batal"
                            Content="Batal"
                            Style="{StaticResource BtnSecondary}"
                            IsCancel="True"/>

                    <Button Grid.Column="2"
                            x:Name="btn_BuatDatabase"
                            Content="Buat Database"
                            Style="{StaticResource BtnPrimary}"
                            IsDefault="True"/>
                </Grid>

            </StackPanel>

        </StackPanel>
    </Border>

</Window>
