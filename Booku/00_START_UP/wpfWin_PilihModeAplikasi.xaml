<Window x:Class="wpfWin_PilihModeAplikasi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Booku"
        mc:Ignorable="d"
        Title="Pilih Mode Aplikasi"
        Height="Auto"
        Width="Auto"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        >

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../WPF/Styles/StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border BorderBrush="#388E3C" BorderThickness="2" CornerRadius="8" Background="White" Padding="30">
        <StackPanel>

            <!-- Header -->
            <TextBlock Text="BOOKU - Pilih Mode Aplikasi"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#388E3C"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 10"/>

            <TextBlock Text="(Khusus PC Developer)"
                       FontSize="11"
                       Foreground="Gray"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 25"/>

            <!-- Pilihan Mode -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                <!-- Mode Classic -->
                <Button Name="btn_ModeClassic"
                        Width="180"
                        Height="120"
                        Margin="10"
                        Background="#F5F5F5"
                        BorderBrush="#BDBDBD"
                        BorderThickness="2"
                        Cursor="Hand">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="&#xE737;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="36"
                                   HorizontalAlignment="Center"
                                   Foreground="#757575"/>
                        <TextBlock Text="Mode Classic"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   Margin="0 8 0 0"/>
                        <TextBlock Text="(WinForms MDI)"
                                   FontSize="10"
                                   Foreground="Gray"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Mode Modern -->
                <Button Name="btn_ModeModern"
                        Width="180"
                        Height="120"
                        Margin="10"
                        Background="#E8F5E9"
                        BorderBrush="#388E3C"
                        BorderThickness="2"
                        Cursor="Hand">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="&#xE80F;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="36"
                                   HorizontalAlignment="Center"
                                   Foreground="#388E3C"/>
                        <TextBlock Text="Mode Modern"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   Margin="0 8 0 0"
                                   Foreground="#388E3C"/>
                        <TextBlock Text="(WPF Shell)"
                                   FontSize="10"
                                   Foreground="#388E3C"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

            </StackPanel>

            <!-- Checkbox Remember -->
            <CheckBox Name="chk_IngatPilihan"
                      Content="Ingat pilihan ini"
                      HorizontalAlignment="Center"
                      Margin="0 20 0 0"
                      FontSize="11"
                      Foreground="Gray"/>

        </StackPanel>
    </Border>

</Window>
