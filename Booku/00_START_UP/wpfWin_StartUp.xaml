<Window x:Class="wpfWin_StartUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Booku"
        mc:Ignorable="d"
        Height="Auto"
        Width="Auto"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        >

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../WPF\Styles\StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- DropShadow Effect -->
            <DropShadowEffect x:Key="CardShadow" BlurRadius="25" ShadowDepth="3" Direction="270" Color="#40000000" Opacity="0.5"/>

            <!-- Gradient untuk Header -->
            <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,0">
                <GradientStop Color="{StaticResource clrPrimaryDarker}" Offset="0"/>
                <GradientStop Color="{StaticResource clrPrimary}" Offset="0.5"/>
                <GradientStop Color="{StaticResource clrPrimaryLight}" Offset="1"/>
            </LinearGradientBrush>

            <!-- Gradient untuk ProgressBar -->
            <LinearGradientBrush x:Key="ProgressGradient" StartPoint="0,0" EndPoint="1,0">
                <GradientStop Color="{StaticResource clrPrimaryLight}" Offset="0"/>
                <GradientStop Color="{StaticResource clrPrimary}" Offset="0.5"/>
                <GradientStop Color="{StaticResource clrPrimaryDark}" Offset="1"/>
            </LinearGradientBrush>

            <!-- Style ProgressBar Modern -->
            <Style x:Key="ProgressBarModern" TargetType="ProgressBar">
                <Setter Property="Height" Value="8"/>
                <Setter Property="Background" Value="{StaticResource clrProgressBg}"/>
                <Setter Property="Foreground" Value="{StaticResource ProgressGradient}"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ProgressBar">
                            <Grid>
                                <Border Background="{TemplateBinding Background}" CornerRadius="4"/>
                                <Border x:Name="PART_Track" CornerRadius="4"/>
                                <Border x:Name="PART_Indicator" CornerRadius="4" Background="{TemplateBinding Foreground}" HorizontalAlignment="Left"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>
    </Window.Resources>

    <!-- Main Container dengan Shadow -->
    <Border Effect="{StaticResource CardShadow}" CornerRadius="12" Margin="20">
        <Border.Background>
            <SolidColorBrush Color="{StaticResource clrWhite}"/>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ========== HEADER dengan Gradient ========== -->
            <Border Grid.Row="0" CornerRadius="12,12,0,0" Background="{StaticResource HeaderGradient}" Padding="30,25">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Logo Booku -->
                    <Border Grid.Column="0"
                            Width="72" Height="72"
                            CornerRadius="36"
                            Background="White"
                            Margin="0,0,20,0"
                            VerticalAlignment="Center">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Direction="270" Color="#40000000" Opacity="0.3"/>
                        </Border.Effect>
                        <Grid>
                            <!-- Logo Image -->
                            <Image x:Name="img_Logo"
                                   Width="60" Height="60"
                                   Stretch="Uniform"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                            <!-- Fallback Text jika logo tidak ada -->
                            <TextBlock x:Name="lbl_LogoFallback"
                                       Text="B"
                                       FontSize="36"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource clrBtnPrimerBg}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Visibility="Collapsed"/>
                        </Grid>
                    </Border>

                    <!-- Nama Aplikasi & Tagline -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock x:Name="lbl_Baris_01"
                                   Text="BOOKU"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   Margin="0,0,0,4"/>
                        <TextBlock x:Name="lbl_Baris_02"
                                   Text="Sistem Akuntansi Terpadu"
                                   FontSize="14"
                                   Foreground="#E8F5E9"
                                   FontStyle="Italic"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ========== CONTENT AREA ========== -->
            <Grid Grid.Row="1" Margin="30,25,30,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Progress Section -->
                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock x:Name="lbl_ProgressReport"
                               Text="Memuat aplikasi..."
                               FontSize="13"
                               Foreground="{StaticResource clrTeksSekunder}"
                               Margin="0,0,0,10"/>
                    <ProgressBar x:Name="pgb_Progress"
                                 Style="{StaticResource ProgressBarModern}"
                                 Minimum="0" Maximum="100" Value="0"
                                 Width="420"/>
                </StackPanel>

                <!-- Separator -->
                <Border Grid.Row="1"
                        Height="1"
                        Background="{StaticResource clrSeparatorLight}"
                        Margin="0,5,0,20"/>

                <!-- Company Selection Section -->
                <StackPanel Grid.Row="2" x:Name="pnl_PilihCompany" Visibility="Collapsed">
                    <TextBlock x:Name="lbl_Company"
                               Text="Pilih Perusahaan"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource clrTeksPrimer}"
                               Margin="0,0,0,8"/>
                    <ComboBox x:Name="cmb_ListCompany"
                              Style="{StaticResource styleComboBoxFormDialog}"
                              Width="420"
                              Height="38"
                              FontSize="13"/>
                </StackPanel>

                <!-- Identitas Section -->
                <Border Grid.Row="3"
                        x:Name="pnl_Identitas"
                        Background="{StaticResource clrBgPrimarySurface}"
                        CornerRadius="8"
                        Padding="15,12"
                        Margin="0,15,0,0"
                        Visibility="Collapsed">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Icon Info -->
                        <Border Grid.Column="0"
                                Width="32" Height="32"
                                CornerRadius="16"
                                Background="{StaticResource clrBtnPrimerBg}"
                                Margin="0,0,12,0"
                                VerticalAlignment="Center">
                            <TextBlock Text="i"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>

                        <TextBlock Grid.Column="1"
                                   x:Name="lbl_Identitas"
                                   Text=""
                                   FontSize="11"
                                   Foreground="{StaticResource clrTeksSekunder}"
                                   VerticalAlignment="Center"
                                   TextWrapping="Wrap"/>
                    </Grid>
                </Border>

            </Grid>

            <!-- ========== FOOTER ========== -->
            <Border Grid.Row="2"
                    Background="{StaticResource clrBgPrimarySurface}"
                    CornerRadius="0,0,12,12"
                    Padding="30,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Copyright / Version Info -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock x:Name="lbl_Copyright"
                                   Text="Aplikasi Akuntansi dan Perpajakan"
                                   FontSize="11"
                                   Foreground="{StaticResource clrTeksSekunder}"/>
                        <TextBlock x:Name="lbl_Website"
                                   Text=""
                                   FontSize="10"
                                   Foreground="{StaticResource clrTeksLink}"
                                   Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Tombol Lanjutkan -->
                    <Button Grid.Column="1"
                            x:Name="btn_Lanjutkan"
                            Content="Lanjutkan"
                            Style="{StaticResource styleButtonFormDialogLanjutkan}"
                            Width="130"
                            Height="40"
                            FontSize="14"
                            IsDefault="True"
                            Visibility="Hidden"/>
                </Grid>
            </Border>

        </Grid>
    </Border>

</Window>
