<Window x:Class="wpfWin_StartUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Booku"
        mc:Ignorable="d"
        Height="Auto"
        Width="Auto"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        >

    <Window.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../WPF/Styles/StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Window.Resources>

    <StackPanel Style="{StaticResource stylePanelFormDialog}"  >

        <StackPanel Style="{StaticResource stylePanelFormDialogVertikal}" >

            <Grid Style="{StaticResource styleGridFormDialog}" Margin="0" >

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="369"/>
                    <ColumnDefinition Width="222"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock      Grid.Row="0" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"    Text="Baris 01"         Name="lbl_Baris_01" />
                <TextBlock      Grid.Row="1" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"    Text="Baris 02"         Name="lbl_Baris_02"     Margin="0 0 0 45" />
                <TextBlock      Grid.Row="2" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"    Text="Progress Report"  Name="lbl_ProgressReport" />
                <ProgressBar    Grid.Row="3" Grid.Column="0"   Height="27"  Grid.ColumnSpan="2"                                             Name="pgb_Progress"     Margin="0 0 0 45" />
                <TextBlock      Grid.Row="4" Grid.Column="1"   Style="{StaticResource styleTextBlockFormDialog}"    Text="Company"          Name="lbl_Company"      HorizontalAlignment="Right" />
                <ComboBox       Grid.Row="5" Grid.Column="1"   Style="{StaticResource styleComboBoxFormDialog}"     Name="cmb_ListCompany"                          Margin="0 0 0 21" />
                <Button         Grid.Row="6" Grid.Column="1"   Style="{StaticResource styleButtonFormDialogLanjutkan}"                      Name="btn_Lanjutkan"    IsDefault="True"  />
                <TextBlock      Grid.Row="6" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"    Text="Identitas"        Name="lbl_Identitas"    />

            </Grid>

        </StackPanel>


    </StackPanel>

</Window>
