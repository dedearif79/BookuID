<UserControl x:Class="wpfUsc_DesainBuktiPengeluaran"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Booku"
             mc:Ignorable="d" 
>

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../WPF\Styles\StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
<DockPanel Background="White" Width="742" Height="Auto" >

        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >

            <TextBlock  Style="{StaticResource styleTextBlockTitleNota }"   TextAlignment="Center"   Text="BUKTI PENGELUARAN"/>

            <!-- Pilihan Sarana Pembayaran :-->
            <StackPanel Margin="9">

                <Grid   HorizontalAlignment="Center">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions >
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Border     Grid.Row="0" Grid.Column="0"    BorderBrush="Black" BorderThickness="1" Width="21"  Margin="00 0 9 0"   Name="brd_Bank" />
                    <Border     Grid.Row="0" Grid.Column="2"    BorderBrush="Black" BorderThickness="1" Width="21"  Margin="33 0 9 0"   Name="brd_CashAdvance"/>
                    <Border     Grid.Row="0" Grid.Column="4"    BorderBrush="Black" BorderThickness="1" Width="21"  Margin="33 0 9 0"   Name="brd_Kas"/>
                    <Border     Grid.Row="0" Grid.Column="6"    BorderBrush="Black" BorderThickness="1" Width="21"  Margin="33 0 9 0"   Name="brd_PettyCash"/>

                    <TextBlock  Grid.Row="0" Grid.Column="1"    Text="Bank" ></TextBlock>
                    <TextBlock  Grid.Row="0" Grid.Column="3"    Text="Cash Advance" ></TextBlock>
                    <TextBlock  Grid.Row="0" Grid.Column="5"    Text="Kas" ></TextBlock>
                    <TextBlock  Grid.Row="0" Grid.Column="7"    Text="Petty Cash" ></TextBlock>

                </Grid>
                
            </StackPanel>

            <DockPanel HorizontalAlignment="Stretch" >

                <Border     Width="444"     Padding="0 6" >

                    <Grid >

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions >
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock  Grid.Row="0" Grid.Column="0"    Text="Nomor" />
                        <TextBlock  Grid.Row="1" Grid.Column="0"    Text="Tanggal" />
                        <TextBlock  Grid.Row="2" Grid.Column="0"    Text="Sarana Pembayaran" />

                        <TextBlock  Grid.Row="0" Grid.Column="1"    Text="  :  " />
                        <TextBlock  Grid.Row="1" Grid.Column="1"    Text="  :  " />
                        <TextBlock  Grid.Row="2" Grid.Column="1"    Text="  :  " />

                        <TextBlock  Grid.Row="0" Grid.Column="2"    Text="Nomor"        TextWrapping="Wrap"    Name="lbl_NomorKK"/>
                        <TextBlock  Grid.Row="1" Grid.Column="2"    Text="01-01-1900"   TextWrapping="Wrap"    Name="lbl_TanggalKK"/>
                        <TextBlock  Grid.Row="2" Grid.Column="2"    Text="Bank/Cash"    TextWrapping="Wrap"    Name="lbl_SaranaPembayaran"/>

                    </Grid>

                </Border>

                <!-- Kepada : -->
                <Border Style="{StaticResource styleBorderLabelNota}" Width="Auto" Padding="6 6 21 6" HorizontalAlignment="Right" Margin="0" >

                    <Grid >

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions >
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock  Grid.Row="0" Grid.Column="0"    Text="Kepada" />
                        <TextBlock  Grid.Row="1" Grid.Column="0"    Text="Alamat" />
                        <TextBlock  Grid.Row="2" Grid.Column="0"    Text="Rekening Bank" />
                        <TextBlock  Grid.Row="3" Grid.Column="0"    Text="Atas Nama" />

                        <TextBlock  Grid.Row="0" Grid.Column="1"    Text=" : " />
                        <TextBlock  Grid.Row="1" Grid.Column="1"    Text=" : " />
                        <TextBlock  Grid.Row="2" Grid.Column="1"    Text=" : " />
                        <TextBlock  Grid.Row="3" Grid.Column="1"    Text=" : " />
                                                
                        <TextBlock  Grid.Row="0" Grid.Column="2"    Text="PT. CUSTOMER"             TextWrapping="Wrap"    Name="lbl_NamaLawanTransaksi" FontWeight="Bold" />
                        <TextBlock  Grid.Row="1" Grid.Column="2"    Text="Alamat Customer"          TextWrapping="Wrap"    Name="lbl_AlamatLawanTransaksi" />
                        <TextBlock  Grid.Row="2" Grid.Column="2"    Text="Rekening Penerima"        TextWrapping="Wrap"    Name="lbl_RekeningPenerima" />
                        <TextBlock  Grid.Row="3" Grid.Column="2"    Text="Atas Nama Penerima"       TextWrapping="Wrap"    Name="lbl_AtasNamaPenerima" />

                    </Grid>

                </Border>

            </DockPanel>

            <StackPanel Style="{StaticResource stylePanelDataGridView}" VerticalAlignment="Stretch" Name="pnl_DataGridUtama" Margin="0 7 0 0">
                <DataGrid Name="datagridUtama" Style="{StaticResource StyleDataGridNOTA}" MinWidth="742" MinHeight="55" />
            </StackPanel>


            <DockPanel HorizontalAlignment="Stretch" Margin="0 7 0 0" >

                <Border BorderBrush="Black" BorderThickness="0.5">

                    <StackPanel Background="Transparent" Width="507" >
                        <TextBlock Text="Notes :" Padding="5" FontWeight="Bold" TextDecorations="Underline"  />
                        <TextBlock Name="lbl_Notes" Padding="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextWrapping="Wrap"
                               Text="Teks ini sengaja dibikin panjang untuk melihat efek wrap saat jumlah teks melebihi ukuran lebar panel. Jadi, teks ini jangan dihapus ya. Biarkan saja begini apa adanya. Ok."
/>
                    </StackPanel>

                </Border>

                <Grid HorizontalAlignment="Right" >

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="111" />
                        <ColumnDefinition Width="111" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions >
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBox  Grid.Row="0" Grid.Column="0" Style="{StaticResource styleTextBoxFormNotaAngka}"   Name="txt_TotalPengajuan"/>
                    <TextBox  Grid.Row="0" Grid.Column="1" Style="{StaticResource styleTextBoxFormNotaAngka}"   />

                </Grid>

            </DockPanel>

            <!-- Tanda Tangan :-->
            <DockPanel HorizontalAlignment="Stretch" Margin="0 7 0 0" Background="Transparent" >

                <Grid Margin="7" >

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100*"  />
                        <ColumnDefinition Width="27"    />
                        <ColumnDefinition Width="100*"  />
                        <ColumnDefinition Width="27"    />
                        <ColumnDefinition Width="100*"  />
                        <ColumnDefinition Width="27"    />
                        <ColumnDefinition Width="100*"  />
                        <ColumnDefinition Width="27"    />
                        <ColumnDefinition Width="100*"  />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions >
                        <RowDefinition Height="Auto"    />
                        <RowDefinition Height="51"      />
                        <RowDefinition Height="Auto"    />
                        <RowDefinition Height="Auto"    />
                        <RowDefinition Height="Auto"    />
                    </Grid.RowDefinitions>

                    <TextBlock  Grid.Row="0" Grid.Column="0"    HorizontalAlignment="Center"  Text="Diajukan"               Name="lbl_Diajukan"/>
                    <TextBlock  Grid.Row="0" Grid.Column="2"    HorizontalAlignment="Center"  Text="Diketahui"              Name="lbl_Diketahui"/>
                    <TextBlock  Grid.Row="0" Grid.Column="4"    HorizontalAlignment="Center"  Text="Diverifikasi"           Name="lbl_Diverifikasi"/>
                    <TextBlock  Grid.Row="0" Grid.Column="6"    HorizontalAlignment="Center"  Text="Disetujui"              Name="lbl_Disetujui"/>
                    <TextBlock  Grid.Row="0" Grid.Column="8"    HorizontalAlignment="Center"  Text="Diterima"               Name="lbl_Diterima"/>

                    <TextBlock  Grid.Row="2" Grid.Column="0"    HorizontalAlignment="Center"  Text="Nama Kasir"             Name="lbl_NamaKasir"/>
                    <TextBlock  Grid.Row="2" Grid.Column="2"    HorizontalAlignment="Center"  Text="Nama Mng. Purchasing"   Name="lbl_NamaManagerPurchasing"/>
                    <TextBlock  Grid.Row="2" Grid.Column="4"    HorizontalAlignment="Center"  Text="Nama Mng. Accounting"   Name="lbl_NamaManagerAccounting"/>
                    <TextBlock  Grid.Row="2" Grid.Column="6"    HorizontalAlignment="Center"  Text="Nama Direktur"          Name="lbl_NamaDirektur"/>
                    <TextBlock  Grid.Row="2" Grid.Column="8"    HorizontalAlignment="Center"  Text="Nama Penerima"          Name="lbl_NamaPenerima"/>

                    <Border     Grid.Row="3" Grid.Column="0"    BorderBrush="Black"         BorderThickness="0.2" ></Border>
                    <Border     Grid.Row="3" Grid.Column="2"    BorderBrush="Black"         BorderThickness="0.2" ></Border>
                    <Border     Grid.Row="3" Grid.Column="4"    BorderBrush="Black"         BorderThickness="0.2" ></Border>
                    <Border     Grid.Row="3" Grid.Column="6"    BorderBrush="Black"         BorderThickness="0.2" ></Border>
                    <Border     Grid.Row="3" Grid.Column="8"    BorderBrush="Black"         BorderThickness="0.2" ></Border>

                    <TextBlock  Grid.Row="4" Grid.Column="0"    HorizontalAlignment="Center"  Text="Kasir"                  />
                    <TextBlock  Grid.Row="4" Grid.Column="2"    HorizontalAlignment="Center"  Text="Manager Purchasing"     />
                    <TextBlock  Grid.Row="4" Grid.Column="4"    HorizontalAlignment="Center"  Text="Manager Accounting"     />
                    <TextBlock  Grid.Row="4" Grid.Column="6"    HorizontalAlignment="Center"  Text="Direktur"               />
                    <TextBlock  Grid.Row="4" Grid.Column="8"    HorizontalAlignment="Center"  Text=""                       />

                </Grid>

            </DockPanel>

            <StackPanel Margin="0 15 0 0">

                <TextBlock  Text="Dibayarkan Tanggal : ................................................"      />

            </StackPanel>

        </StackPanel>

    </DockPanel>

</UserControl>


