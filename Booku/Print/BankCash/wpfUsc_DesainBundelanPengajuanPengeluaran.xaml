<UserControl x:Class="wpfUsc_DesainBundelanPengajuanPengeluaran"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Booku"
             mc:Ignorable="d" 
>

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../WPF\Styles\StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
<DockPanel Background="{StaticResource clrBgPanel}" Width="742" Height="Auto" >

        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >

            <TextBlock  Style="{StaticResource styleTextBlockTitleNota }"   TextAlignment="Center"   Text="BUNDELAN PENGAJUAN PENGELUARAN BANK-CASH"/>

            <StackPanel HorizontalAlignment="Stretch" >

                <Grid >

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions >
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock  Grid.Row="0" Grid.Column="0"    Text="Nomor" />
                    <TextBlock  Grid.Row="1" Grid.Column="0"    Text="Tanggal" />

                    <TextBlock  Grid.Row="0" Grid.Column="1"    Text="  :  " />
                    <TextBlock  Grid.Row="2" Grid.Column="1"    Text="  :  " />

                    <TextBlock  Grid.Row="0" Grid.Column="2"    Text="Nomor"        TextWrapping="Wrap"    Name="lbl_NomorBundel"/>
                    <TextBlock  Grid.Row="1" Grid.Column="2"    Text="01-01-1900"   TextWrapping="Wrap"    Name="lbl_TanggalBundel"/>

                </Grid>

            </StackPanel>

            <StackPanel Style="{StaticResource stylePanelDataGridView}" VerticalAlignment="Stretch" Name="pnl_DataGridUtama" Margin="0 7 0 0">
                <DataGrid Style="{StaticResource StyleDataGridNOTA}" Name="datagridUtama" MinWidth="742" MinHeight="55" />
            </StackPanel>


            <DockPanel HorizontalAlignment="Stretch" Margin="0 7 0 0" >

                <Grid HorizontalAlignment="Right" >

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="111" />
                        <ColumnDefinition Width="111" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions >
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBox  Grid.Row="0" Grid.Column="0" Style="{StaticResource styleTextBoxFormNotaAngka}"   Name="txt_TotalPengajuan"/>
                    <TextBox  Grid.Row="0" Grid.Column="1" Style="{StaticResource styleTextBoxFormNotaAngka}"   />

                </Grid>

            </DockPanel>

            <!-- Tanda Tangan :-->
            <DockPanel HorizontalAlignment="Stretch" Margin="0 7 0 0" Background="Transparent" >

                <Grid Margin="7" >

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100*"  />
                        <ColumnDefinition Width="27"    />
                        <ColumnDefinition Width="100*"  />
                        <ColumnDefinition Width="27"    />
                        <ColumnDefinition Width="100*"  />
                        <ColumnDefinition Width="27"    />
                        <ColumnDefinition Width="100*"  />
                        <ColumnDefinition Width="27"    />
                        <ColumnDefinition Width="100*"  />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions >
                        <RowDefinition Height="Auto"    />
                        <RowDefinition Height="51"      />
                        <RowDefinition Height="Auto"    />
                        <RowDefinition Height="Auto"    />
                        <RowDefinition Height="Auto"    />
                    </Grid.RowDefinitions>

                    <TextBlock  Grid.Row="0" Grid.Column="0"    HorizontalAlignment="Center"  Text="Diajukan"               Name="lbl_Diajukan"/>
                    <TextBlock  Grid.Row="0" Grid.Column="2"    HorizontalAlignment="Center"  Text="Diketahui"              Name="lbl_Diketahui"/>
                    <TextBlock  Grid.Row="0" Grid.Column="4"    HorizontalAlignment="Center"  Text="Diverifikasi"           Name="lbl_Diverifikasi"/>
                    <TextBlock  Grid.Row="0" Grid.Column="6"    HorizontalAlignment="Center"  Text="Disetujui"              Name="lbl_Disetujui"/>
                    <TextBlock  Grid.Row="0" Grid.Column="8"    HorizontalAlignment="Center"  Text="Diterima"               Name="lbl_Diterima"/>

                    <TextBlock  Grid.Row="2" Grid.Column="0"    HorizontalAlignment="Center"  Text="Nama Kasir"             Name="lbl_NamaKasir"/>
                    <TextBlock  Grid.Row="2" Grid.Column="2"    HorizontalAlignment="Center"  Text="Nama Mng. Purchasing"   Name="lbl_NamaManagerPurchasing"/>
                    <TextBlock  Grid.Row="2" Grid.Column="4"    HorizontalAlignment="Center"  Text="Nama Mng. Accounting"   Name="lbl_NamaManagerAccounting"/>
                    <TextBlock  Grid.Row="2" Grid.Column="6"    HorizontalAlignment="Center"  Text="Nama Direktur"          Name="lbl_NamaDirektur"/>
                    <TextBlock  Grid.Row="2" Grid.Column="8"    HorizontalAlignment="Center"  Text="Nama Penerima"          Name="lbl_NamaPenerima"/>

                    <Border     Grid.Row="3" Grid.Column="0"    BorderBrush="{StaticResource clrTeksPrimer}"         BorderThickness="0.2" ></Border>
                    <Border     Grid.Row="3" Grid.Column="2"    BorderBrush="{StaticResource clrTeksPrimer}"         BorderThickness="0.2" ></Border>
                    <Border     Grid.Row="3" Grid.Column="4"    BorderBrush="{StaticResource clrTeksPrimer}"         BorderThickness="0.2" ></Border>
                    <Border     Grid.Row="3" Grid.Column="6"    BorderBrush="{StaticResource clrTeksPrimer}"         BorderThickness="0.2" ></Border>
                    <Border     Grid.Row="3" Grid.Column="8"    BorderBrush="{StaticResource clrTeksPrimer}"         BorderThickness="0.2" ></Border>

                    <TextBlock  Grid.Row="4" Grid.Column="0"    HorizontalAlignment="Center"  Text="Kasir"                  />
                    <TextBlock  Grid.Row="4" Grid.Column="2"    HorizontalAlignment="Center"  Text="Manager Purchasing"     />
                    <TextBlock  Grid.Row="4" Grid.Column="4"    HorizontalAlignment="Center"  Text="Manager Accounting"     />
                    <TextBlock  Grid.Row="4" Grid.Column="6"    HorizontalAlignment="Center"  Text="Direktur"               />
                    <TextBlock  Grid.Row="4" Grid.Column="8"    HorizontalAlignment="Center"  Text=""                       />

                </Grid>

            </DockPanel>

            <!--
            <StackPanel Margin="0 15 0 0">

                <TextBlock  Text="Dibayarkan Tanggal : ................................................"      />

            </StackPanel>
            -->

        </StackPanel>

    </DockPanel>

</UserControl>


