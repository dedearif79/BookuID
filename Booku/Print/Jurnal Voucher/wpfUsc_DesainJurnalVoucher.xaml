<UserControl x:Class="wpfUsc_DesainJurnalVoucher"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Booku"
             mc:Ignorable="d" 
>

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/BookuID.Styles;component/WPF/Styles/StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
<DockPanel Background="{StaticResource clrBgPanel}" Width="742" Height="Auto" >

        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >

            <TextBlock  Style="{StaticResource styleTextBlockTitleNota }"   Text="Jurnal Voucher"></TextBlock>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" >

                <Border Style="{StaticResource styleBorderLabelNota}" >

                    <Grid >

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="15" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions >
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock  Grid.Row="0" Grid.Column="0"    Text="Nomor JV" />
                        <TextBlock  Grid.Row="1" Grid.Column="0"    Text="Tanggal JV" />
                        <TextBlock  Grid.Row="2" Grid.Column="0"    Text="Jenis Jurnal" />

                        <TextBlock  Grid.Row="0" Grid.Column="1"    Text="  :  " />
                        <TextBlock  Grid.Row="1" Grid.Column="1"    Text="  :  " />
                        <TextBlock  Grid.Row="3" Grid.Column="1"    Text="  :  " />

                        <TextBlock  Grid.Row="0" Grid.Column="2"    Text="Nomor JV"     TextWrapping="Wrap"    Name="lbl_NomorJV"/>
                        <TextBlock  Grid.Row="1" Grid.Column="2"    Text="01-01-1900"   TextWrapping="Wrap"    Name="lbl_TanggalJV"/>
                        <TextBlock  Grid.Row="2" Grid.Column="2"    Text="Jenis Jurnal" TextWrapping="Wrap"    Name="lbl_JenisJurnal"/>

                    </Grid>

                </Border>

                <Border Style="{StaticResource styleBorderLabelNota}" >

                    <Grid >

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="15" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions >
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock  Grid.Row="0" Grid.Column="0"    Text="Referensi" />
                        <TextBlock  Grid.Row="1" Grid.Column="0"    Text="Tanggal Invoice" />
                        <TextBlock  Grid.Row="2" Grid.Column="0"    Text="Nomor Invoice" />

                        <TextBlock  Grid.Row="0" Grid.Column="1"    Text="  :  " />
                        <TextBlock  Grid.Row="1" Grid.Column="1"    Text="  :  " />
                        <TextBlock  Grid.Row="3" Grid.Column="1"    Text="  :  " />

                        <TextBlock  Grid.Row="0" Grid.Column="2"    Text="Nomor JV"     TextWrapping="Wrap"    Name="lbl_Referensi"/>
                        <TextBlock  Grid.Row="1" Grid.Column="2"    Text="01-01-1900"   TextWrapping="Wrap"    Name="lbl_TanggalInvoice"/>
                        <TextBlock  Grid.Row="2" Grid.Column="2"    Text="Jenis Jurnal" TextWrapping="Wrap"    Name="lbl_NomorInvoice"/>

                    </Grid>

                </Border>

                <!-- Kepada : -->
                <Border Style="{StaticResource styleBorderLabelNota}" >

                    <Grid >

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="87" />
                            <ColumnDefinition Width="15" />
                            <ColumnDefinition Width="129" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions >
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock  Grid.Row="0" Grid.Column="0"    Text="No. Faktur Pajak" />
                        <TextBlock  Grid.Row="1" Grid.Column="0"    Text="Lawan Transaksi" />

                        <TextBlock  Grid.Row="0" Grid.Column="1"    Text="  :  " />
                        <TextBlock  Grid.Row="1" Grid.Column="1"    Text="  :  " />

                        <TextBlock  Grid.Row="0" Grid.Column="2"    Text="Nomor Faktur Pajak"   TextWrapping="Wrap"    Name="lbl_NomorFakturPajak" />
                        <TextBlock  Grid.Row="2" Grid.Column="0"    Text="Nama Lawan Transaksi" TextWrapping="Wrap"    Name="lbl_NamaLawanTransaksi"    Grid.ColumnSpan="3" FontWeight="Bold"/>

                    </Grid>

                </Border>

            </StackPanel>

            <StackPanel Style="{StaticResource stylePanelDataGridView}" VerticalAlignment="Stretch" Name="pnl_DataGridUtama" Margin="0 7 0 0">
                <DataGrid Style="{StaticResource StyleDataGridNOTA}" Name="datagridUtama" MinWidth="742" MinHeight="55" />
            </StackPanel>

            <DockPanel HorizontalAlignment="Stretch" Margin="0 7 0 0" >

                <Grid HorizontalAlignment="Right" >

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="69" />
                        <ColumnDefinition Width="111" />
                        <ColumnDefinition Width="111" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions >
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock  Grid.Row="0" Grid.Column="0"    Padding="3" TextAlignment="Center" Text="Jumlah"/>
                    <TextBox    Grid.Row="0" Grid.Column="1"    Style="{StaticResource styleTextBoxFormNotaAngka}"   Name="txt_TotalDebet"/>
                    <TextBox    Grid.Row="0" Grid.Column="2"    Style="{StaticResource styleTextBoxFormNotaAngka}"   Name="txt_TotalKredit"/>

                </Grid>

            </DockPanel>

            <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Margin="0 7 0 0" Name="pnl_NamaProduk">

                <Border BorderBrush="{StaticResource clrTeksPrimer}" BorderThickness="0.5">
                    
                <StackPanel Background="Transparent" >
                    <TextBlock Text="Nama Barang/Jasa :" Padding="5" FontWeight="Bold" TextDecorations="Underline"  />
                    <TextBlock Name="lbl_NamaProduk" Padding="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextWrapping="Wrap"
                               Text="Teks ini sengaja dibikin panjang untuk melihat efek wrap saat jumlah teks melebihi ukuran lebar panel. Jadi, teks ini jangan dihapus ya. Biarkan saja begini apa adanya. Ok."
                               />
                </StackPanel>

                </Border>
                    
            </StackPanel>

            <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Margin="0 7 0 0" Name="pnl_UraianTransaksi" >

                <Border BorderBrush="{StaticResource clrTeksPrimer}" BorderThickness="0.5">

                    <StackPanel Background="Transparent" >
                        <TextBlock Text="Uraian Transaksi :" Padding="5" FontWeight="Bold" TextDecorations="Underline"  />
                        <TextBlock Name="lbl_UraianTransaksi" Padding="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextWrapping="Wrap"
                               Text="Teks ini sengaja dibikin panjang untuk melihat efek wrap saat jumlah teks melebihi ukuran lebar panel. Jadi, teks ini jangan dihapus ya. Biarkan saja begini apa adanya. Ok."
                               />
                    </StackPanel>

                </Border>

            </StackPanel>

            <!-- Tanda Tangan :-->
            <DockPanel HorizontalAlignment="Stretch" Margin="0 7 0 0" Background="Transparent" >

                <Grid Margin="0 7" >

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100*" />
                        <ColumnDefinition Width="21" />
                        <ColumnDefinition Width="100*" />
                        <ColumnDefinition Width="21" />
                        <ColumnDefinition Width="100*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions >
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="51" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock  Grid.Row="0" Grid.Column="0"    HorizontalAlignment="Center"  Text="Data Entry"         Name="lbl_DataEntry"/>
                    <TextBlock  Grid.Row="0" Grid.Column="2"    HorizontalAlignment="Center"  Text="Manager"            Name="lbl_Manager"/>
                    <TextBlock  Grid.Row="0" Grid.Column="4"    HorizontalAlignment="Center"  Text="Manager Keuangan"   Name="lbl_ManagerKeuangan"/>

                    <TextBlock  Grid.Row="2" Grid.Column="0"    HorizontalAlignment="Center"  Text="Nama User"              Name="lbl_NamaUserEntry"/>
                    <TextBlock  Grid.Row="2" Grid.Column="2"    HorizontalAlignment="Center"  Text="Nama Manager"           Name="lbl_NamaManager"/>
                    <TextBlock  Grid.Row="2" Grid.Column="4"    HorizontalAlignment="Center"  Text="Nama Manager Keuangan"  Name="lbl_NamaManagerKeuangan"/>

                </Grid>

            </DockPanel>

        </StackPanel>

    </DockPanel>

</UserControl>


