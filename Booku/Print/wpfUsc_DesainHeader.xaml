<UserControl x:Class="wpfUsc_DesainHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Booku"
             mc:Ignorable="d" 
>

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../WPF\Styles\StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
<DockPanel Background="{StaticResource clrBgPanel}" Width="742" Height="Auto" >

        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >

            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Name="grd_Kop" >

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="100*" />
                    <ColumnDefinition Width="Auto"  MaxWidth="399"  />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions >
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="100*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0"  Grid.Column="0" Grid.RowSpan="5" Width="333" Height="87" >

                    <Image  Stretch="Uniform" Width="333" Height="87"   HorizontalAlignment="Left"  Name="img_LogoPerusahaan"   Source="C:\BookuID\Booku\Attach\Img\LogoPerusahaan.png" />

                </StackPanel>

                <TextBlock  Grid.Row="0"  Grid.Column="3"   HorizontalAlignment="Right" FontSize="17"   FontWeight="Bold"    Name="lbl_NamaPerusahaan" Text="NAMA PERUSAHAAN"       TextWrapping="Wrap" MaxWidth="399"  TextAlignment="Right" />
                <TextBlock  Grid.Row="1"  Grid.Column="3"   HorizontalAlignment="Right" FontSize="12"   Name="lbl_TaglinePerusahaan" Text="Tagline - Tagline - Tagline - Tagline"   TextWrapping="Wrap" MaxWidth="399"  TextAlignment="Right" />
                <TextBlock  Grid.Row="2"  Grid.Column="3"   />
                <TextBlock  Grid.Row="3"  Grid.Column="3"   HorizontalAlignment="Right" FontSize="12"   Name="lbl_AlamatPerusahaan" Text="Alamat alamat alamat alamat alamat."      TextWrapping="Wrap" MaxWidth="399"  TextAlignment="Right" />
                <TextBlock  Grid.Row="4"  Grid.Column="3"   HorizontalAlignment="Right" FontSize="12"   Name="lbl_KontakPerusahaan" Text="Telefon : 0812 3456 7890"                 TextWrapping="Wrap" MaxWidth="399"  TextAlignment="Right" />

            </Grid>

        </StackPanel>

    </DockPanel>

</UserControl>


