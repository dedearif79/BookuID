<Window x:Class="wpfWin_Pratinjau"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Booku"
        mc:Ignorable="d"
        Title="Pratinjau"
        Width="1200"
        Height="702"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        >

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/BookuID.Styles;component/WPF/Styles/StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
<StackPanel Style="{StaticResource stylePanelFormDialog}" Width="1200" Height="666" >

        <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="666" >

            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="21" >

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100*" />
                    <ColumnDefinition Width="123" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions >
                    <RowDefinition Height="100*" />
                </Grid.RowDefinitions>

                <ScrollViewer Grid.Row="0" Grid.Column="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">

                    <StackPanel Background="{StaticResource clrBgSidebar}" 
                                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                                CanHorizontallyScroll="True" CanVerticallyScroll="True" >

                        <DockPanel Background="{StaticResource clrBgPanel}" Width="793" Height="1123" Margin="15" >

                            <!-- KANVAS CETAK -->
                            <StackPanel Name="pnl_Kanvas" HorizontalAlignment="Stretch" VerticalAlignment="Top" Background="{StaticResource clrBgPanel}" >

                                <Grid x:Name="grd_Host" Margin=" 36 21 15 21" Background="{StaticResource clrBgPanel}" >
                                    <!-- AREA CETAK -->
                                    <StackPanel Name="pnl_AreaCetak" Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Top" Background="{StaticResource clrBgPanel}" />
                                </Grid>

                            </StackPanel>


                        </DockPanel>

                    </StackPanel>

                </ScrollViewer>

                <Button Grid.Row="0" Grid.Column="1" Height="45" VerticalAlignment="Top" Name="btn_Cetak" Margin="15 0" >Cetak</Button>

            </Grid>

        </DockPanel>

    </StackPanel>

</Window>


