<UserControl x:Class="wpfUsc_DesainSuratJalan"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Booku"
             mc:Ignorable="d" 
>

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../WPF\Styles\StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
<DockPanel Background="White" Width="742" Height="Auto" >

        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >

            <TextBlock  Style="{StaticResource styleTextBlockTitleNota }"   Text="Surat Jalan"></TextBlock>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" >

                <Border Style="{StaticResource styleBorderLabelNota}" >

                    <Grid >

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions >
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock  Grid.Row="0" Grid.Column="0"    Text="Nomor" />
                        <TextBlock  Grid.Row="1" Grid.Column="0"    Text="Tanggal" />
                        <TextBlock  Grid.Row="2" Grid.Column="0"    Text="Nomor PO" />
                        <TextBlock  Grid.Row="3" Grid.Column="0"    Text="Tanggal PO" />

                        <TextBlock  Grid.Row="0" Grid.Column="1"    Text="  :  " />
                        <TextBlock  Grid.Row="1" Grid.Column="1"    Text="  :  " />
                        <TextBlock  Grid.Row="2" Grid.Column="1"    Text="  :  " />
                        <TextBlock  Grid.Row="3" Grid.Column="1"    Text="  :  " />

                        <TextBlock  Grid.Row="0" Grid.Column="2"    Text="Nomor SJ"     TextWrapping="Wrap"    Name="lbl_NomorSuratJalan"/>
                        <TextBlock  Grid.Row="1" Grid.Column="2"    Text="01-01-1900"   TextWrapping="Wrap"    Name="lbl_TanggalSuratJalan"/>
                        <TextBlock  Grid.Row="2" Grid.Column="2"    Text="Nomor PO"     TextWrapping="Wrap"    Name="lbl_NomorPO"/>
                        <TextBlock  Grid.Row="3" Grid.Column="2"    Text="01-01-1900"   TextWrapping="Wrap"    Name="lbl_TanggalPO"/>

                    </Grid>

                </Border>

                <Border Style="{StaticResource styleBorderLabelNota}" >

                    <Grid >

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions >
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock  Grid.Row="0" Grid.Column="0"    Text="Kode Project" />
                        <TextBlock  Grid.Row="1" Grid.Column="0"    Text="Plat Nomor" />
                        <TextBlock  Grid.Row="2" Grid.Column="0"    Text="Nama Supir" />

                        <TextBlock  Grid.Row="0" Grid.Column="1"    Text="  :  " />
                        <TextBlock  Grid.Row="1" Grid.Column="1"    Text="  :  " />
                        <TextBlock  Grid.Row="2" Grid.Column="1"    Text="  :  " />

                        <TextBlock  Grid.Row="0" Grid.Column="2"    Text="Kode Project"     TextWrapping="Wrap"    Name="lbl_KodeProject"/>
                        <TextBlock  Grid.Row="1" Grid.Column="2"    Text="X 1234 XX"        TextWrapping="Wrap"    Name="lbl_PlatNomor"/>
                        <TextBlock  Grid.Row="2" Grid.Column="2"    Text="Bang Imblong"     TextWrapping="Wrap"    Name="lbl_NamaSupir"/>

                    </Grid>

                </Border>

                <!-- Kepada : -->
                <Border Style="{StaticResource styleBorderLabelNota}" >

                    <Grid >

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions >
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock  Grid.Row="0" Grid.Column="0"    Text="Kepada" />
                        <TextBlock  Grid.Row="1" Grid.Column="0"    Text="PT. CUSTOMER"     TextWrapping="Wrap"    Name="lbl_NamaCustomer" FontWeight="Bold" />
                        <TextBlock  Grid.Row="2" Grid.Column="0"    Text="Alamat Customer"  TextWrapping="Wrap"    Name="lbl_AlamatCustomer" />

                    </Grid>

                </Border>

            </StackPanel>

            <StackPanel Style="{StaticResource stylePanelDataGridView}" VerticalAlignment="Stretch" Name="pnl_DataGridUtama" Margin="0 7 0 0">
                <DataGrid Name="datagridUtama" Style="{StaticResource StyleDataGridNOTA}" MinWidth="742" MinHeight="55" />
            </StackPanel>

            <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Margin="0 7 0 0" >

                <Border BorderBrush="Black" BorderThickness="0.5">

                    <StackPanel Background="Transparent" >
                        <TextBlock Text="Notes :" Padding="5" FontWeight="Bold" TextDecorations="Underline"  />
                        <TextBlock Name="lbl_Notes" Padding="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextWrapping="Wrap"
                               Text="Teks ini sengaja dibikin panjang untuk melihat efek wrap saat jumlah teks melebihi ukuran lebar panel. Jadi, teks ini jangan dihapus ya. Biarkan saja begini apa adanya. Ok." />
                    </StackPanel>

                </Border>
                
            </StackPanel>

            <!-- Tanda Tangan :-->
            <DockPanel HorizontalAlignment="Stretch" Margin="0 7 0 0" Background="Transparent" >

                <Grid Margin="0 7" >

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100*" />
                        <ColumnDefinition Width="21" />
                        <ColumnDefinition Width="100*" />
                        <ColumnDefinition Width="21" />
                        <ColumnDefinition Width="100*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions >
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="51" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock  Grid.Row="0" Grid.Column="0"    HorizontalAlignment="Center"  Text="User"           Name="lbl_TanggalDiterima_Label"/>
                    <TextBlock  Grid.Row="0" Grid.Column="2"    HorizontalAlignment="Center"  Text="Manager"        Name="lbl_Penerima"/>
                    <TextBlock  Grid.Row="0" Grid.Column="4"    HorizontalAlignment="Center"  Text="Direktur"       Name="lbl_Pengirim"/>

                    <TextBlock  Grid.Row="2" Grid.Column="0"    HorizontalAlignment="Center"  Text="Nama User"      Name="lbl_TanggalDIterima_Isian"/>
                    <TextBlock  Grid.Row="2" Grid.Column="2"    HorizontalAlignment="Center"  Text="Nama Manager"   Name="lbl_NamaPenerima"/>
                    <TextBlock  Grid.Row="2" Grid.Column="4"    HorizontalAlignment="Center"  Text="Nama Direktur"  Name="lbl_NamaPengirim"/>

                </Grid>

            </DockPanel>

        </StackPanel>

    </DockPanel>

</UserControl>


