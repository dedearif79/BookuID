<UserControl x:Class="wpfUsc_DesainNotaDebet"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Booku"
             mc:Ignorable="d" 
>

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../WPF\Styles\StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
<DockPanel Background="{StaticResource clrBgPanel}" Width="742" Height="Auto" >

        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >

            <TextBlock  Style="{StaticResource styleTextBlockTitleNota }"   Text="Nota Debet"></TextBlock>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" >

                <Border Style="{StaticResource styleBorderLabelNota}" >

                    <Grid >

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions >
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock  Grid.Row="0" Grid.Column="0"    Text="Nomor" />
                        <TextBlock  Grid.Row="1" Grid.Column="0"    Text="Tanggal" />

                        <TextBlock  Grid.Row="0" Grid.Column="1"    Text="  :  " />
                        <TextBlock  Grid.Row="1" Grid.Column="1"    Text="  :  " />

                        <TextBlock  Grid.Row="0" Grid.Column="2"    Text="Nomor Bukti"      TextWrapping="Wrap"    Name="lbl_NomorBukti"/>
                        <TextBlock  Grid.Row="1" Grid.Column="2"    Text="01-01-1900"       TextWrapping="Wrap"    Name="lbl_TanggalBukti"/>

                    </Grid>

                </Border>

                <Border Style="{StaticResource styleBorderLabelNota}" >

                    <Grid >

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions >
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock  Grid.Row="0" Grid.Column="0"    Text="Tgl. Jatuh Tempo" />
                        <TextBlock  Grid.Row="1" Grid.Column="0"    Text="Tgl. Diterima" />

                        <TextBlock  Grid.Row="0" Grid.Column="1"    Text="  :  " />
                        <TextBlock  Grid.Row="1" Grid.Column="1"    Text="  :  " />
                        <TextBlock  Grid.Row="2" Grid.Column="1"    Text="  :  " />

                        <TextBlock  Grid.Row="0" Grid.Column="2"    Text="01-01-1900"  TextWrapping="Wrap"    Name="lbl_TanggalJatuhTempo"/>
                        <TextBlock  Grid.Row="1" Grid.Column="2"    Text="01-01-1900"  TextWrapping="Wrap"    Name="lbl_TanggalDiterima"/>

                    </Grid>

                </Border>

                <!-- Kepada : -->
                <Border Style="{StaticResource styleBorderLabelNota}" >

                    <Grid >

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions >
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock  Grid.Row="0" Grid.Column="0"    Text="Kepada" />
                        <TextBlock  Grid.Row="1" Grid.Column="0"    Text="PT. CUSTOMER"     TextWrapping="Wrap"    Name="lbl_NamaCustomer" FontWeight="Bold" />
                        <TextBlock  Grid.Row="2" Grid.Column="0"    Text="Alamat Customer"  TextWrapping="Wrap"    Name="lbl_AlamatCustomer" />

                    </Grid>

                </Border>

            </StackPanel>

            <StackPanel Style="{StaticResource stylePanelDataGridView}" VerticalAlignment="Stretch" Name="pnl_DataGridUtama" Margin="0 7 0 0">
                <DataGrid Style="{StaticResource StyleDataGridNOTA}" Name="datagridUtama" MinWidth="742" MinHeight="55" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0 7 0 0" >

                <Border BorderBrush="{StaticResource clrTeksPrimer}" BorderThickness="0.5"   Margin="0 0 15 0" >

                    <StackPanel Background="Transparent" Width="536" >
                        <TextBlock Text="Notes :" Padding="5" FontWeight="Bold" TextDecorations="Underline"  />
                        <TextBlock Name="lbl_Notes" Padding="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextWrapping="Wrap"
                               Text="Teks ini sengaja dibikin panjang untuk melihat efek wrap saat jumlah teks melebihi ukuran lebar panel. Jadi, teks ini jangan dihapus ya. Biarkan saja begini apa adanya. Ok." />
                    </StackPanel>

                </Border>

                <Grid Width="190" HorizontalAlignment="Right" >

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100*" />
                        <ColumnDefinition Width="111" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions >
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock  Grid.Row="0" Grid.Column="0"    Padding="2"     Text="Jumlah"                   Name="lbl_Jumlah"  TextAlignment="center"  />

                    <TextBox  Grid.Row="0" Grid.Column="1" Style="{StaticResource styleTextBoxFormNotaAngka}"   Name="txt_JumlahHargaKeseluruhan"   />

                </Grid>

            </StackPanel>

            <!--             
            <DockPanel HorizontalAlignment="Stretch" Margin="0 7 0 0" Background="Transparent" >
                <Border BorderBrush="{StaticResource clrTeksPrimer}" BorderThickness="0.5">
                    <TextBlock Name="lbl_TotalTagihanTerbilang" TextWrapping="Wrap" TextAlignment="Right"
                           Padding="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontStyle="Italic" 
                           Text="Teks ini sengaja dibikin panjang untuk melihat efek wrap saat jumlah teks melebihi ukuran lebar panel. Jadi, teks ini jangan dihapus ya. Biarkan saja begini apa adanya. Ok."
                           />
                </Border>
            </DockPanel>            
            -->

            <!-- Tanda Tangan :-->
            <DockPanel HorizontalAlignment="Stretch" Margin="0 7 0 0" Background="Transparent" >

                <Grid Margin="0 7" >

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100*" />
                        <ColumnDefinition Width="21" />
                        <ColumnDefinition Width="100*" />
                        <ColumnDefinition Width="21" />
                        <ColumnDefinition Width="100*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions >
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="51" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock  Grid.Row="0" Grid.Column="0"    HorizontalAlignment="Center"  Text="User"           Name="lbl_User"/>
                    <TextBlock  Grid.Row="0" Grid.Column="2"    HorizontalAlignment="Center"  Text="Manager"        Name="lbl_Manager"/>
                    <TextBlock  Grid.Row="0" Grid.Column="4"    HorizontalAlignment="Center"  Text="Direktur"       Name="lbl_Direktur"/>

                    <TextBlock  Grid.Row="2" Grid.Column="0"    HorizontalAlignment="Center"  Text="Nama User"      Name="lbl_NamaUser"/>
                    <TextBlock  Grid.Row="2" Grid.Column="2"    HorizontalAlignment="Center"  Text="Nama Manager"   Name="lbl_NamaManager"/>
                    <TextBlock  Grid.Row="2" Grid.Column="4"    HorizontalAlignment="Center"  Text="Nama Direktur"  Name="lbl_NamaDirektur"/>

                </Grid>

            </DockPanel>

        </StackPanel>

    </DockPanel>

</UserControl>


