<UserControl x:Class="wpfUsc_ManajemenClient"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Booku"
             mc:Ignorable="d" 
>

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/BookuID.Styles;component/WPF/Styles/StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <DockPanel Style="{StaticResource stylePanelFormHalaman}"   Name="pnl_Halaman">
        <StackPanel Style="{StaticResource stylePanelFormHalamanHeader}">
            <Grid    DockPanel.Dock="Top"   HorizontalAlignment="Stretch"   VerticalAlignment="Stretch" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"  Name="HeaderKiri"/>
                    <ColumnDefinition Width="100*"  Name="HeaderTengah" />
                    <ColumnDefinition Width="Auto"   Name="HeaderKanan"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <!-- Header Kiri :-->
                <StackPanel Grid.Row="0"  Grid.Column="0"   Style="{StaticResource stylePanelFormHalamanHeaderKiri}">
                    <StackPanel Style="{StaticResource stylePanelFormHalamanTittle}" >
                        <TextBlock Style="{StaticResource styleTextBlockFormHalamanJudul}" Name="lbl_JudulForm" Text="Manajemen Klien" />
                    </StackPanel>
                    <!-- Baris Tombol :-->
                    <StackPanel Style="{StaticResource stylePanelFormHalamanTombolHorizontal}"  Name="pnl_TombolForm">
                        <Button Style="{StaticResource styleButtonFormHalamanRefresh}"          Name="btn_Refresh" />
                        <StackPanel Name="pnl_CRUD" Orientation="Horizontal">
                            <Border Style="{StaticResource styleBorderHeaderSeparatorTombol}" />
                            <Button Style="{StaticResource styleButtonFormHalamanCrudEdit}"         Name="btn_Edit" />
                            <Button Style="{StaticResource styleButtonFormHalamanCrudHapus}"        Name="btn_Hapus" />
                        </StackPanel>
                        <Border Style="{StaticResource styleBorderHeaderSeparatorTombol}" />
                        <Button Style="{StaticResource styleButtonFormHalamanExport }"          Name="btn_Export" />
                    </StackPanel>
                    <!-- Baris Filter Data :-->
                    <StackPanel Style="{StaticResource stylePanelFormHalamanFilterData}" Name="pnl_FilterData" >
                        <TextBlock Style="{StaticResource styleTextBlockFormHalaman}" Text="Update : "   />
                        <ComboBox Style="{StaticResource styleComboBoxFormHalaman}" Width="075"  Margin="6 3"  Name="cmb_StatusUpdate" />
                        <Border Width="2" Background="LightGray" Margin="6,3,9,3"   Name="brd_FilterJenisProduk" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- Footer : -->
        <StackPanel Style="{StaticResource stylePanelFormHalamanFooter}"    HorizontalAlignment="Stretch" >
            <DockPanel  Width="Auto" HorizontalAlignment="Stretch"  Name="pnl_Footer"    >
                <StackPanel Orientation="Horizontal"                Name="pnl_InfoUpdate"   HorizontalAlignment="Left">
                    <TextBlock      Text="Sudah Update :"           Name="lbl_SudahUpdate"  Style="{StaticResource styleTextBlockFormHalamanFooter}"/>
                    <TextBox        Width="63"                      Name="txt_SudahUpdate"  Style="{StaticResource styleTextBoxFormHalamanFooter}"/>
                    <TextBlock      Text="Belum Update :"           Name="lbl_BelumUpdate"  Style="{StaticResource styleTextBlockFormHalamanFooter}"/>
                    <TextBox        Width="63"                      Name="txt_BelumUpdate"  Style="{StaticResource styleTextBoxFormHalamanFooter}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"    Width="Auto"    Name="pnl_TotalTabel"   HorizontalAlignment="Right">
                    <TextBlock      Text="Total Tabel :"                Name="lbl_TotalTabel"   HorizontalAlignment="Right"   Style="{StaticResource styleTextBlockFormHalamanFooter}"/>
                    <TextBox        Width="63"                          Name="txt_TotalTabel"   HorizontalAlignment="Right"   Style="{StaticResource styleTextBoxFormHalamanFooter}"/>
                </StackPanel>
            </DockPanel>
        </StackPanel>

        <DockPanel Width="Auto" Height="Auto" Name="pnl_Konten" >
            <Grid DockPanel.Dock="Top" VerticalAlignment="Stretch" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0"         Name="SidebarKiri"/>
                    <ColumnDefinition Width="100*"      Name="BarUtama"/>
                    <ColumnDefinition Width="Auto"      Name="SidebarKanan" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" Style="{StaticResource stylePanelFormHalamanSidebarKiri}" CanVerticallyScroll="True" Height="99" Grid.RowSpan="2" Name="pnl_SidebarKiri" >
                </StackPanel>

                <GridSplitter Grid.Column="0" Grid.RowSpan="2" Width="3" />
                <StackPanel Grid.Row="0" Grid.Column="1" Style="{StaticResource stylePanelFormHalamanKonten}" VerticalAlignment="Stretch">
                    <StackPanel Style="{StaticResource stylePanelDataGridView}" VerticalAlignment="Stretch" Name="pnl_DataGridUtama" >
                        <DataGrid Style="{StaticResource StyleDataGridModul}" Name="datagridUtama" MinWidth="777" MinHeight="33" VerticalAlignment="Stretch" />
                    </StackPanel>
                </StackPanel>

                <!-- Sidebar Kanan : -->
                <StackPanel Grid.Row="0" Grid.Column="3" Style="{StaticResource stylePanelFormHalamanSidebarKanan}" Height="Auto" Grid.RowSpan="2" Name="pnl_SidebarKanan" >

                    <!-- Info Customer : -->
                    <StackPanel Name="pnl_InfoCustomer">

                        <Grid DockPanel.Dock="Top" Margin="15 "     HorizontalAlignment="Left"    Width="Auto">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="153"  />
                                <ColumnDefinition Width="240" />
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock  Grid.Row="00" Grid.Column="0"   Style="{StaticResource styleTextBlockFormHalaman}"  Text="Serial Number"/>
                            <TextBlock  Grid.Row="01" Grid.Column="0"   Style="{StaticResource styleTextBlockFormHalaman}"  Text="ID Customer"/>
                            <TextBlock  Grid.Row="02" Grid.Column="0"   Style="{StaticResource styleTextBlockFormHalaman}"  Text="Nama Perusahaan"/>
                            <TextBlock  Grid.Row="03" Grid.Column="0"   Style="{StaticResource styleTextBlockFormHalaman}"  Text="PIC"/>
                            <TextBlock  Grid.Row="04" Grid.Column="0"   Style="{StaticResource styleTextBlockFormHalaman}"  Text="Tanggal Expire"/>

                            <TextBox    Grid.Row="00" Grid.Column="1"   Style="{StaticResource styleTextBoxFormHalaman}"    Name="txt_SerialNumber" />
                            <TextBox    Grid.Row="01" Grid.Column="1"   Style="{StaticResource styleTextBoxFormHalaman}"    Name="txt_IDCustomer" />
                            <TextBox    Grid.Row="02" Grid.Column="1"   Style="{StaticResource styleTextBoxFormHalaman}"    Name="txt_NamaPerusahaan" />
                            <TextBox    Grid.Row="03" Grid.Column="1"   Style="{StaticResource styleTextBoxFormHalaman}"    Name="txt_PIC" />
                            <DatePicker Grid.Row="04" Grid.Column="1"   Style="{StaticResource styleDatePickerFormHalaman}" Name="dtp_TanggalExpire" />

                        </Grid>

                        <StackPanel Margin="15 7"   Orientation="Horizontal"    HorizontalAlignment="Right">
                            <Button Height="33" Content="Refresh"           Padding="15 0"  Margin="9 0 0 0"    HorizontalAlignment="Right" Name="btn_RefreshInfoCustomer"/>
                            <Button Height="33" Content="Simpan Perubahan"  Padding="15 0"  Margin="9 0 0 0"    HorizontalAlignment="Right" Name="btn_SimpanPerubahanInfoCustomer"/>
                        </StackPanel>

                    </StackPanel>

                </StackPanel>
            </Grid>

        </DockPanel>
    </DockPanel>

</UserControl>


