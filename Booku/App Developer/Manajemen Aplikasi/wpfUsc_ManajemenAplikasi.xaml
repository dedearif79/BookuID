<UserControl x:Class="wpfUsc_ManajemenAplikasi"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Booku"
             mc:Ignorable="d" 
>

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/BookuID.Styles;component/WPF/Styles/StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
<DockPanel Style="{StaticResource stylePanelFormHalaman}"   Name="pnl_Halaman">
        <StackPanel Style="{StaticResource stylePanelFormHalamanHeader}">
            <Grid    DockPanel.Dock="Top"   HorizontalAlignment="Stretch"   VerticalAlignment="Stretch" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"  Name="HeaderKiri"/>
                    <ColumnDefinition Width="100*"  Name="HeaderTengah" />
                    <ColumnDefinition Width="Auto"   Name="HeaderKanan"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <!-- Header Kiri :-->
                <StackPanel Grid.Row="0"  Grid.Column="0"   Style="{StaticResource stylePanelFormHalamanHeaderKiri}">
                    <StackPanel Style="{StaticResource stylePanelFormHalamanTittle}" >
                        <TextBlock Style="{StaticResource styleTextBlockFormHalamanJudul}" Name="lbl_JudulForm" Text="Manajemen Aplikasi" />
                    </StackPanel>
                    <!-- Baris Tombol :-->
                    <StackPanel Style="{StaticResource stylePanelFormHalamanTombolHorizontal}"  Name="pnl_TombolForm">
                        <Button Style="{StaticResource styleButtonFormHalamanRefresh}"          Name="btn_Refresh" />
                        <Button Style="{StaticResource styleButtonFormHalamanBackup}"           Name="btn_Backup" />
                        <Border Style="{StaticResource styleBorderHeaderSeparatorTombol}" />
                        <Button Style="{StaticResource styleButtonFormHalamanInstaller}"    Padding="15 0"  Name="btn_Installer" />
                        <Button Style="{StaticResource styleButtonFormHalamanUpdater}"      Padding="15 0"  Name="btn_Updater" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- Footer : -->
        <StackPanel Style="{StaticResource stylePanelFormHalamanFooter}"    HorizontalAlignment="Stretch" >
            <DockPanel  Width="Auto" HorizontalAlignment="Stretch"  Name="pnl_Footer"    >
                <StackPanel Orientation="Horizontal"                Name="pnl_InfoUpdate"   HorizontalAlignment="Left">
                </StackPanel>
            </DockPanel>
        </StackPanel>

        <DockPanel Width="Auto" Height="Auto" Name="pnl_Konten" >

            <Grid DockPanel.Dock="Top" VerticalAlignment="Stretch" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0"         Name="SidebarKiri"/>
                    <ColumnDefinition Width="100*"      Name="BarUtama"/>
                    <ColumnDefinition Width="Auto"      Name="SidebarKanan" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" Style="{StaticResource stylePanelFormHalamanSidebarKiri}" CanVerticallyScroll="True" Height="99" Grid.RowSpan="2" Name="pnl_SidebarKiri" >
                </StackPanel>

                <GridSplitter Grid.Column="0" Grid.RowSpan="2" Width="3" />

                <StackPanel Grid.Row="0" Grid.Column="1" Style="{StaticResource stylePanelFormHalamanKonten}" VerticalAlignment="Stretch">

                    <!-- Info General : -->
                    <GroupBox   HorizontalAlignment="Left"  Margin="0 15 0 0"   Header="General : " >

                        <Grid DockPanel.Dock="Top" Margin="15 "     HorizontalAlignment="Left"    Width="Auto">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="153"  />
                                <ColumnDefinition Width="330" />
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock  Grid.Row="00" Grid.Column="0"   Style="{StaticResource styleTextBlockFormHalaman}"  Text="Versi App"/>
                            <TextBlock  Grid.Row="01" Grid.Column="0"   Style="{StaticResource styleTextBlockFormHalaman}"  Text="Update App"/>
                            <TextBlock  Grid.Row="02" Grid.Column="0"   Style="{StaticResource styleTextBlockFormHalaman}"  Text="URL Paket Booku"/>
                            <TextBlock  Grid.Row="03" Grid.Column="0"   Style="{StaticResource styleTextBlockFormHalaman}"  Text="Folder Temp Paket Booku"/>
                            <TextBlock  Grid.Row="04" Grid.Column="0"   Style="{StaticResource styleTextBlockFormHalaman}"  Text="File Paket Booku"/>

                            <TextBox    Grid.Row="00" Grid.Column="1"   Style="{StaticResource styleTextBoxFormHalaman}"    Name="txt_VersiApp" />
                            <TextBox    Grid.Row="01" Grid.Column="1"   Style="{StaticResource styleTextBoxFormHalaman}"    Name="txt_ApdetApp" />
                            <TextBox    Grid.Row="02" Grid.Column="1"   Style="{StaticResource styleTextBoxFormHalaman}"    Name="txt_UrlPaketBooku" />
                            <TextBox    Grid.Row="03" Grid.Column="1"   Style="{StaticResource styleTextBoxFormHalaman}"    Name="txt_FolderTempPaketBooku" />
                            <TextBox    Grid.Row="04" Grid.Column="1"   Style="{StaticResource styleTextBoxFormHalaman}"    Name="txt_FilePaketBooku" />

                            <StackPanel Grid.Row="05" Grid.Column="1"   Orientation="Horizontal"    HorizontalAlignment="Right" Grid.ColumnSpan="2" Margin="0 15 0 0">
                                <Button Height="33" Content="Simpan Perubahan"  Padding="15 0"  Margin="9 0 0 0"    HorizontalAlignment="Right" Name="btn_SimpanPerubahanInfoGeneral"/>
                            </StackPanel>

                        </Grid>

                    </GroupBox>

                    <!-- Info Installer : -->
                    <GroupBox   HorizontalAlignment="Left"  Margin="0 15 0 0"   Header="Installer : " >

                        <Grid DockPanel.Dock="Top" Margin="15 "     HorizontalAlignment="Left"    Width="Auto">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="153"  />
                                <ColumnDefinition Width="330" />
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock  Grid.Row="00" Grid.Column="0"   Style="{StaticResource styleTextBlockFormHalaman}"  Text="URL Paket Installer"/>
                            <TextBlock  Grid.Row="01" Grid.Column="0"   Style="{StaticResource styleTextBlockFormHalaman}"  Text="Folder Temp Paket Installer"/>
                            <TextBlock  Grid.Row="02" Grid.Column="0"   Style="{StaticResource styleTextBlockFormHalaman}"  Text="File Paket Installer"/>
                            <TextBlock  Grid.Row="03" Grid.Column="0"   Style="{StaticResource styleTextBlockFormHalaman}"  Text="File Installer"/>

                            <TextBox    Grid.Row="00" Grid.Column="1"   Style="{StaticResource styleTextBoxFormHalaman}"    Name="txt_UrlPaketInstaller" />
                            <TextBox    Grid.Row="01" Grid.Column="1"   Style="{StaticResource styleTextBoxFormHalaman}"    Name="txt_FolderTempPaketInstaller" />
                            <TextBox    Grid.Row="02" Grid.Column="1"   Style="{StaticResource styleTextBoxFormHalaman}"    Name="txt_FilePaketInstaller" />
                            <TextBox    Grid.Row="03" Grid.Column="1"   Style="{StaticResource styleTextBoxFormHalaman}"    Name="txt_FileInstaller" />

                            <StackPanel Grid.Row="04" Grid.Column="1"   Orientation="Horizontal"    HorizontalAlignment="Right" Grid.ColumnSpan="2" Margin="0 15 0 0">
                                <Button Height="33" Content="Simpan Perubahan"  Padding="15 0"  Margin="9 0 0 0"    HorizontalAlignment="Right" Name="btn_SimpanPerubahanInfoInstaller"/>
                            </StackPanel>

                        </Grid>
                        
                    </GroupBox>


                    <!-- Info Updater : -->
                    <GroupBox   HorizontalAlignment="Left"  Margin="0 15 0 0"   Header="Updater : " >

                        <Grid DockPanel.Dock="Top" Margin="15 "     HorizontalAlignment="Left"    Width="Auto">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="153"  />
                                <ColumnDefinition Width="330" />
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock  Grid.Row="00" Grid.Column="0"   Style="{StaticResource styleTextBlockFormHalaman}"  Text="URL Paket Updater"/>
                            <TextBlock  Grid.Row="01" Grid.Column="0"   Style="{StaticResource styleTextBlockFormHalaman}"  Text="Folder Temp Paket Updater"/>
                            <TextBlock  Grid.Row="02" Grid.Column="0"   Style="{StaticResource styleTextBlockFormHalaman}"  Text="File Paket Updater"/>
                            <TextBlock  Grid.Row="03" Grid.Column="0"   Style="{StaticResource styleTextBlockFormHalaman}"  Text="File Updater"/>

                            <TextBox    Grid.Row="00" Grid.Column="1"   Style="{StaticResource styleTextBoxFormHalaman}"    Name="txt_UrlPaketUpdater" />
                            <TextBox    Grid.Row="01" Grid.Column="1"   Style="{StaticResource styleTextBoxFormHalaman}"    Name="txt_FolderTempPaketUpdater" />
                            <TextBox    Grid.Row="02" Grid.Column="1"   Style="{StaticResource styleTextBoxFormHalaman}"    Name="txt_FilePaketUpdater" />
                            <TextBox    Grid.Row="03" Grid.Column="1"   Style="{StaticResource styleTextBoxFormHalaman}"    Name="txt_FileUpdater" />

                            <StackPanel Grid.Row="04" Grid.Column="1"   Orientation="Horizontal"    HorizontalAlignment="Right" Grid.ColumnSpan="2" Margin="0 15 0 0">
                                <Button Height="33" Content="Simpan Perubahan"  Padding="15 0"  Margin="9 0 0 0"    HorizontalAlignment="Right" Name="btn_SimpanPerubahanInfoUpdater"/>
                            </StackPanel>

                        </Grid>

                    </GroupBox>

                </StackPanel>

                <!-- Sidebar Kanan : -->
                <StackPanel Grid.Row="0" Grid.Column="3" Style="{StaticResource stylePanelFormHalamanSidebarKanan}" Height="Auto" Grid.RowSpan="2" Name="pnl_SidebarKanan" >

                </StackPanel>

            </Grid>

        </DockPanel>
    </DockPanel>

</UserControl>


