<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- =================================================================== -->
    <!-- STYLE TEXTBLOCK                                                     -->
    <!-- =================================================================== -->
    <!-- Semua warna menggunakan referensi dari StyleColor.xaml              -->
    <!-- =================================================================== -->


    <!-- ===== TEXTBLOCK DASAR ===== -->
    <Style x:Key="styleTextBlockDasar" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource clrTeksPrimer}"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Opacity" Value="1"/>
    </Style>


    <!-- =================================================================== -->
    <!-- TEXTBLOCK FORM HALAMAN (UserControl)                                -->
    <!-- =================================================================== -->

    <!-- TextBlock Form Halaman - Base -->
    <Style x:Key="styleTextBlockFormHalaman" BasedOn="{StaticResource styleTextBlockDasar}" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="DockPanel.HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Margin" Value="0 5"/>
    </Style>

    <!-- TextBlock Form Halaman - Footer -->
    <Style x:Key="styleTextBlockFormHalamanFooter" BasedOn="{StaticResource styleTextBlockFormHalaman}" TargetType="TextBlock">
        <Setter Property="Margin" Value="15 6"/>
        <Setter Property="Foreground" Value="{StaticResource clrTeksSekunder}"/>
    </Style>

    <!-- TextBlock Form Halaman - Judul -->
    <Style x:Key="styleTextBlockFormHalamanJudul" BasedOn="{StaticResource styleTextBlockFormHalaman}" TargetType="TextBlock">
        <Setter Property="Margin" Value="0 9"/>
        <Setter Property="FontSize" Value="21"/>
        <Setter Property="FontWeight" Value="DemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource clrTeksAksen}"/>
    </Style>

    <!-- TextBlock Form Halaman - SubJudul -->
    <Style x:Key="styleTextBlockFormHalamanSubJudul" BasedOn="{StaticResource styleTextBlockFormHalaman}" TargetType="TextBlock">
        <Setter Property="Margin" Value="0 5"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource clrTeksPrimer}"/>
    </Style>

    <!-- TextBlock Form Halaman - Info (teks kecil) -->
    <Style x:Key="styleTextBlockFormHalamanInfo" BasedOn="{StaticResource styleTextBlockFormHalaman}" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="{StaticResource clrTeksSekunder}"/>
    </Style>


    <!-- =================================================================== -->
    <!-- TEXTBLOCK FORM DIALOG (Window)                                      -->
    <!-- =================================================================== -->

    <!-- TextBlock Form Dialog - Base -->
    <Style x:Key="styleTextBlockFormDialog" BasedOn="{StaticResource styleTextBlockDasar}" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="DockPanel.HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Margin" Value="0 6"/>
    </Style>

    <!-- TextBlock Form Dialog - Judul -->
    <Style x:Key="styleTextBlockFormDialogJudul" BasedOn="{StaticResource styleTextBlockFormDialog}" TargetType="TextBlock">
        <Setter Property="Margin" Value="0 5"/>
        <Setter Property="FontSize" Value="17"/>
        <Setter Property="FontWeight" Value="DemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource clrTeksAksen}"/>
    </Style>

    <!-- TextBlock Form Dialog - Section -->
    <Style x:Key="styleTextBlockFormDialogSection" BasedOn="{StaticResource styleTextBlockFormDialog}" TargetType="TextBlock">
        <Setter Property="Margin" Value="0 15 0 5"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource clrTeksAksen}"/>
    </Style>

    <!-- TextBlock Form Dialog - Info (teks kecil) -->
    <Style x:Key="styleTextBlockFormDialogInfo" BasedOn="{StaticResource styleTextBlockFormDialog}" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="{StaticResource clrTeksSekunder}"/>
    </Style>

    <!-- TextBlock Form Dialog - Required (asterisk merah) -->
    <Style x:Key="styleTextBlockFormDialogRequired" BasedOn="{StaticResource styleTextBlockFormDialog}" TargetType="TextBlock">
        <Setter Property="Text" Value="*"/>
        <Setter Property="Foreground" Value="{StaticResource clrStatusError}"/>
        <Setter Property="Margin" Value="2 6 0 6"/>
    </Style>


    <!-- =================================================================== -->
    <!-- TEXTBLOCK NOTA (untuk Invoice/Nota)                                 -->
    <!-- =================================================================== -->

    <!-- TextBlock Title Nota -->
    <Style x:Key="styleTextBlockTitleNota" BasedOn="{StaticResource styleTextBlockDasar}" TargetType="TextBlock">
        <Setter Property="Margin" Value="0 7"/>
        <Setter Property="FontSize" Value="27"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource clrTeksPrimer}"/>
    </Style>

    <!-- TextBlock Header Nota -->
    <Style x:Key="styleTextBlockHeaderNota" BasedOn="{StaticResource styleTextBlockDasar}" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource clrTeksSekunder}"/>
    </Style>

    <!-- TextBlock Value Nota -->
    <Style x:Key="styleTextBlockValueNota" BasedOn="{StaticResource styleTextBlockDasar}" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource clrTeksPrimer}"/>
    </Style>


    <!-- =================================================================== -->
    <!-- TEXTBLOCK STATUS (untuk badge/tag)                                  -->
    <!-- =================================================================== -->

    <!-- TextBlock Status - Sukses -->
    <Style x:Key="styleTextBlockStatusSukses" BasedOn="{StaticResource styleTextBlockDasar}" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource clrStatusSukses}"/>
    </Style>

    <!-- TextBlock Status - Peringatan -->
    <Style x:Key="styleTextBlockStatusPeringatan" BasedOn="{StaticResource styleTextBlockDasar}" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource clrStatusPeringatan}"/>
    </Style>

    <!-- TextBlock Status - Error -->
    <Style x:Key="styleTextBlockStatusError" BasedOn="{StaticResource styleTextBlockDasar}" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource clrStatusError}"/>
    </Style>

    <!-- TextBlock Status - Info -->
    <Style x:Key="styleTextBlockStatusInfo" BasedOn="{StaticResource styleTextBlockDasar}" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource clrStatusInfo}"/>
    </Style>


</ResourceDictionary>
