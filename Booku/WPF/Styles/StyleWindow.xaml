<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- =================================================================== -->
    <!-- STYLE WINDOW                                                        -->
    <!-- =================================================================== -->
    <!-- Semua warna menggunakan referensi dari StyleColor.xaml              -->
    <!-- =================================================================== -->


    <!-- ===== WINDOW DASAR ===== -->
    <Style x:Key="styleWindowDasar" TargetType="Window">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Background" Value="{StaticResource clrBgWindow}"/>
        <Setter Property="Foreground" Value="{StaticResource clrTeksPrimer}"/>
        <Setter Property="Opacity" Value="1"/>
        <Setter Property="WindowStyle" Value="SingleBorderWindow"/>
        <Setter Property="ResizeMode" Value="NoResize"/>
        <Setter Property="WindowStartupLocation" Value="CenterScreen"/>
    </Style>


    <!-- =================================================================== -->
    <!-- WINDOW FORM DIALOG (untuk form input/edit)                          -->
    <!-- =================================================================== -->

    <!-- Window Form Dialog - Base -->
    <Style x:Key="styleWindowFormDialog" BasedOn="{StaticResource styleWindowDasar}" TargetType="Window">
        <Setter Property="WindowState" Value="Normal"/>
        <Setter Property="SizeToContent" Value="WidthAndHeight"/>
        <Setter Property="ShowInTaskbar" Value="False"/>
    </Style>

    <!-- Window Form Dialog - Resizable -->
    <Style x:Key="styleWindowFormDialogResizable" BasedOn="{StaticResource styleWindowFormDialog}" TargetType="Window">
        <Setter Property="ResizeMode" Value="CanResize"/>
        <Setter Property="SizeToContent" Value="Manual"/>
        <Setter Property="MinWidth" Value="400"/>
        <Setter Property="MinHeight" Value="300"/>
    </Style>

    <!-- Window Form Dialog - Fixed Size -->
    <Style x:Key="styleWindowFormDialogFixed" BasedOn="{StaticResource styleWindowFormDialog}" TargetType="Window">
        <Setter Property="SizeToContent" Value="Manual"/>
    </Style>


    <!-- =================================================================== -->
    <!-- WINDOW MAIN (untuk window utama aplikasi)                           -->
    <!-- =================================================================== -->

    <!-- Window Main - Base -->
    <Style x:Key="styleWindowMain" BasedOn="{StaticResource styleWindowDasar}" TargetType="Window">
        <Setter Property="WindowState" Value="Maximized"/>
        <Setter Property="WindowStyle" Value="SingleBorderWindow"/>
        <Setter Property="ResizeMode" Value="CanResize"/>
        <Setter Property="ShowInTaskbar" Value="True"/>
    </Style>


    <!-- =================================================================== -->
    <!-- WINDOW SPLASH / STARTUP                                             -->
    <!-- =================================================================== -->

    <!-- Window Splash - untuk splash screen / loading -->
    <Style x:Key="styleWindowSplash" BasedOn="{StaticResource styleWindowDasar}" TargetType="Window">
        <Setter Property="WindowStyle" Value="None"/>
        <Setter Property="ResizeMode" Value="NoResize"/>
        <Setter Property="SizeToContent" Value="WidthAndHeight"/>
        <Setter Property="AllowsTransparency" Value="True"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="ShowInTaskbar" Value="False"/>
    </Style>

    <!-- Window Login - untuk form login -->
    <Style x:Key="styleWindowLogin" BasedOn="{StaticResource styleWindowDasar}" TargetType="Window">
        <Setter Property="WindowStyle" Value="None"/>
        <Setter Property="ResizeMode" Value="NoResize"/>
        <Setter Property="SizeToContent" Value="WidthAndHeight"/>
        <Setter Property="ShowInTaskbar" Value="True"/>
    </Style>


    <!-- =================================================================== -->
    <!-- WINDOW LIST / PICKER                                                -->
    <!-- =================================================================== -->

    <!-- Window List - untuk form pemilihan data -->
    <Style x:Key="styleWindowList" BasedOn="{StaticResource styleWindowFormDialog}" TargetType="Window">
        <Setter Property="MinWidth" Value="400"/>
        <Setter Property="MinHeight" Value="300"/>
        <Setter Property="MaxHeight" Value="600"/>
    </Style>


    <!-- =================================================================== -->
    <!-- WINDOW PROGRESS / LOADING                                           -->
    <!-- =================================================================== -->

    <!-- Window Progress - untuk progress dialog -->
    <Style x:Key="styleWindowProgress" BasedOn="{StaticResource styleWindowDasar}" TargetType="Window">
        <Setter Property="WindowStyle" Value="None"/>
        <Setter Property="ResizeMode" Value="NoResize"/>
        <Setter Property="SizeToContent" Value="WidthAndHeight"/>
        <Setter Property="ShowInTaskbar" Value="False"/>
        <Setter Property="Topmost" Value="True"/>
    </Style>


</ResourceDictionary>
