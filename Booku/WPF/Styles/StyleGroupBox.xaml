<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- GroupBox Dasar -->
    <Style x:Key="styleGroupBoxDasar" TargetType="GroupBox">
        <Setter Property="HorizontalContentAlignment" Value="Left" ></Setter>
        <Setter Property="Opacity" Value="1" ></Setter>
    </Style>

    <!-- GroupBox Form Dialog -->
    <Style x:Key="styleGroupBoxFormDialog" BasedOn="{StaticResource styleGroupBoxDasar}" TargetType="GroupBox">
        <Setter Property="HorizontalAlignment" Value="Left" ></Setter>
        <Setter Property="DockPanel.HorizontalAlignment" Value="Stretch" ></Setter>
        <Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
        <Setter Property="Margin" Value="-1 9 -1 9" ></Setter>
        <Setter Property="Padding" Value="9" ></Setter>
        <Setter Property="Background" Value="White" ></Setter>
    </Style>

    <!-- GroupBox Form Dialog - Bank -->
    <Style x:Key="styleGroupBoxFormDialogBank" BasedOn="{StaticResource styleGroupBoxFormDialog}" TargetType="GroupBox">
        <Setter Property="Header" Value="Bank :"></Setter>
    </Style>

    <!-- GroupBox Form Dialog - Akun -->
    <Style x:Key="styleGroupBoxFormDialogAkun" BasedOn="{StaticResource styleGroupBoxFormDialog}" TargetType="GroupBox">
        <Setter Property="Header" Value="Akun :"></Setter>
    </Style>

</ResourceDictionary>
