<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- =================================================================== -->
    <!-- STYLE GROUPBOX                                                      -->
    <!-- =================================================================== -->
    <!-- Semua warna menggunakan referensi dari StyleColor.xaml              -->
    <!-- =================================================================== -->


    <!-- ===== GROUPBOX DASAR ===== -->
    <Style x:Key="styleGroupBoxDasar" TargetType="GroupBox">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource clrTeksPrimer}"/>
        <Setter Property="Background" Value="{StaticResource clrGroupBoxBg}"/>
        <Setter Property="BorderBrush" Value="{StaticResource clrGroupBoxBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Top"/>
        <Setter Property="Opacity" Value="1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GroupBox">
                    <Grid SnapsToDevicePixels="True">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Border x:Name="headerBorder"
                                Grid.Row="0"
                                Padding="8,4"
                                Background="Transparent">
                            <ContentPresenter x:Name="headerContent"
                                              ContentSource="Header"
                                              RecognizesAccessKey="True"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                                <ContentPresenter.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Foreground" Value="{StaticResource clrGroupBoxHeader}"/>
                                    </Style>
                                </ContentPresenter.Resources>
                            </ContentPresenter>
                        </Border>

                        <!-- Content Border -->
                        <Border x:Name="contentBorder"
                                Grid.Row="1"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter x:Name="contentPresenter"
                                              ContentSource="Content"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- Disabled -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="contentBorder" Property="Background" Value="{StaticResource clrBgInputDisabled}"/>
                            <Setter TargetName="contentBorder" Property="BorderBrush" Value="{StaticResource clrBorderDisabled}"/>
                            <Setter Property="Foreground" Value="{StaticResource clrTeksDisabled}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!-- =================================================================== -->
    <!-- GROUPBOX FORM HALAMAN (UserControl)                                 -->
    <!-- =================================================================== -->

    <!-- GroupBox Form Halaman - Base -->
    <Style x:Key="styleGroupBoxFormHalaman" BasedOn="{StaticResource styleGroupBoxDasar}" TargetType="GroupBox">
        <Setter Property="Margin" Value="0 5"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>

    <!-- GroupBox Form Halaman - Compact -->
    <Style x:Key="styleGroupBoxFormHalamanCompact" BasedOn="{StaticResource styleGroupBoxFormHalaman}" TargetType="GroupBox">
        <Setter Property="Padding" Value="8"/>
    </Style>


    <!-- =================================================================== -->
    <!-- GROUPBOX FORM DIALOG (Window)                                       -->
    <!-- =================================================================== -->

    <!-- GroupBox Form Dialog - Base -->
    <Style x:Key="styleGroupBoxFormDialog" BasedOn="{StaticResource styleGroupBoxDasar}" TargetType="GroupBox">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="DockPanel.HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Margin" Value="-1 9 -1 9"/>
        <Setter Property="Padding" Value="9"/>
    </Style>

    <!-- GroupBox Form Dialog - Bank -->
    <Style x:Key="styleGroupBoxFormDialogBank" BasedOn="{StaticResource styleGroupBoxFormDialog}" TargetType="GroupBox">
        <Setter Property="Header" Value="Bank :"/>
    </Style>

    <!-- GroupBox Form Dialog - Akun -->
    <Style x:Key="styleGroupBoxFormDialogAkun" BasedOn="{StaticResource styleGroupBoxFormDialog}" TargetType="GroupBox">
        <Setter Property="Header" Value="Akun :"/>
    </Style>

    <!-- GroupBox Form Dialog - Info -->
    <Style x:Key="styleGroupBoxFormDialogInfo" BasedOn="{StaticResource styleGroupBoxFormDialog}" TargetType="GroupBox">
        <Setter Property="Background" Value="{StaticResource clrStatusInfoBg}"/>
        <Setter Property="BorderBrush" Value="{StaticResource clrStatusInfo}"/>
    </Style>

    <!-- GroupBox Form Dialog - Warning -->
    <Style x:Key="styleGroupBoxFormDialogWarning" BasedOn="{StaticResource styleGroupBoxFormDialog}" TargetType="GroupBox">
        <Setter Property="Background" Value="{StaticResource clrStatusPeringatanBg}"/>
        <Setter Property="BorderBrush" Value="{StaticResource clrStatusPeringatan}"/>
    </Style>


    <!-- =================================================================== -->
    <!-- GROUPBOX TANPA HEADER (Section Container)                           -->
    <!-- =================================================================== -->

    <!-- GroupBox Section - untuk mengelompokkan input tanpa header -->
    <Style x:Key="styleGroupBoxSection" BasedOn="{StaticResource styleGroupBoxDasar}" TargetType="GroupBox">
        <Setter Property="Margin" Value="0 5"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GroupBox">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="2"
                            Padding="{TemplateBinding Padding}"
                            SnapsToDevicePixels="True">
                        <ContentPresenter ContentSource="Content"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- GroupBox Section - Highlight (dengan background aksen) -->
    <Style x:Key="styleGroupBoxSectionHighlight" BasedOn="{StaticResource styleGroupBoxSection}" TargetType="GroupBox">
        <Setter Property="Background" Value="{StaticResource clrBgPrimarySurface}"/>
        <Setter Property="BorderBrush" Value="{StaticResource clrBorderPrimary}"/>
    </Style>


</ResourceDictionary>
