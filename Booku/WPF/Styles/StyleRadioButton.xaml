<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- RadioButton Dasar -->
    <Style x:Key="styleRadioButtonDasar" TargetType="RadioButton">
        <Setter Property="Opacity" Value="1" ></Setter>
    </Style>

    <!-- RadioButton Form Dialog -->
    <Style x:Key="styleRadioButtonFormDialog" BasedOn="{StaticResource styleRadioButtonDasar}" TargetType="RadioButton">
        <Setter Property="Margin" Value="0 7 7 0" ></Setter>
    </Style>

</ResourceDictionary>
