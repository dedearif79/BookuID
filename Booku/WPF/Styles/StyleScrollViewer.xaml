<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- STYLE SCROLL VIEWER DASAR -->
    <Style x:Key="styleScrollViewerDasar" TargetType="ScrollViewer">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Opacity" Value="1" />
        <Setter Property="HorizontalScrollBarVisibility" Value="Auto" />
        <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
    </Style>

    <!-- Style ScrollViewer - Form Dialog Vertikal -->
    <Style x:Key="styleScrollViewerFormDialogVertikal" BasedOn="{StaticResource styleScrollViewerDasar}" TargetType="ScrollViewer">
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

</ResourceDictionary>
