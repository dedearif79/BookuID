<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- DatePicker Dasar -->
    <Style x:Key="styleDatePickerDasar" TargetType="DatePicker">
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="Opacity" Value="1" />
        <Setter Property="SelectedDateFormat" Value="Short" />
        <Setter Property="MaxWidth" Value="101" />
    </Style>

    <!-- DatePicker Form Dialog -->
    <Style x:Key="styleDatePickerFormDialog" BasedOn="{StaticResource styleDatePickerDasar}" TargetType="DatePicker">
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Margin" Value="0 3" />
    </Style>

    <!-- DatePicker Form Dialog -->
    <Style x:Key="styleDatePickerFormHalaman" BasedOn="{StaticResource styleDatePickerDasar}" TargetType="DatePicker">
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Margin" Value="0 0" />
        <Setter Property="Height" Value="22" />
    </Style>

</ResourceDictionary>
