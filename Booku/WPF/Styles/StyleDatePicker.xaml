<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- =================================================================== -->
    <!-- STYLE DATEPICKER                                                    -->
    <!-- =================================================================== -->
    <!-- Semua warna menggunakan referensi dari StyleColor.xaml              -->
    <!-- =================================================================== -->


    <!-- ===== DATEPICKER DASAR ===== -->
    <Style x:Key="styleDatePickerDasar" TargetType="DatePicker">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource clrTeksPrimer}"/>
        <Setter Property="Background" Value="{StaticResource clrDatePickerBg}"/>
        <Setter Property="BorderBrush" Value="{StaticResource clrDatePickerBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Opacity" Value="1"/>
        <Setter Property="SelectedDateFormat" Value="Short"/>
        <Setter Property="MaxWidth" Value="110"/>
        <Setter Property="Padding" Value="2"/>
    </Style>


    <!-- =================================================================== -->
    <!-- DATEPICKER FORM HALAMAN (UserControl)                               -->
    <!-- =================================================================== -->

    <!-- DatePicker Form Halaman - Base -->
    <Style x:Key="styleDatePickerFormHalaman" BasedOn="{StaticResource styleDatePickerDasar}" TargetType="DatePicker">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Height" Value="24"/>
    </Style>

    <!-- DatePicker Form Halaman - Lebar -->
    <Style x:Key="styleDatePickerFormHalamanLebar" BasedOn="{StaticResource styleDatePickerFormHalaman}" TargetType="DatePicker">
        <Setter Property="MaxWidth" Value="150"/>
    </Style>


    <!-- =================================================================== -->
    <!-- DATEPICKER FORM DIALOG (Window)                                     -->
    <!-- =================================================================== -->

    <!-- DatePicker Form Dialog - Base -->
    <Style x:Key="styleDatePickerFormDialog" BasedOn="{StaticResource styleDatePickerDasar}" TargetType="DatePicker">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Margin" Value="0 3"/>
        <Setter Property="Height" Value="26"/>
    </Style>

    <!-- DatePicker Form Dialog - Lebar -->
    <Style x:Key="styleDatePickerFormDialogLebar" BasedOn="{StaticResource styleDatePickerFormDialog}" TargetType="DatePicker">
        <Setter Property="MaxWidth" Value="150"/>
    </Style>

    <!-- DatePicker Form Dialog - Full Width -->
    <Style x:Key="styleDatePickerFormDialogFullWidth" BasedOn="{StaticResource styleDatePickerFormDialog}" TargetType="DatePicker">
        <Setter Property="MaxWidth" Value="9999"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>


</ResourceDictionary>
