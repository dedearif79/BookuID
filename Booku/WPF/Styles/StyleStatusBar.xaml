<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ===== WARNA TEMA STATUS BAR (BOOKU Green Branding) ===== -->
    <SolidColorBrush x:Key="StatusBarBackground" Color="#E8F5E9"/>
    <SolidColorBrush x:Key="StatusBarForeground" Color="#333333"/>
    <SolidColorBrush x:Key="StatusBarAccent" Color="#388E3C"/>
    <SolidColorBrush x:Key="StatusBarSeparator" Color="#A5D6A7"/>

    <!-- ===== STATUS BAR DASAR ===== -->
    <Style x:Key="styleStatusBarDasar" TargetType="StatusBar">
        <Setter Property="Background" Value="{StaticResource StatusBarBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource StatusBarForeground}"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="Height" Value="28"/>
        <Setter Property="Padding" Value="5,0"/>
    </Style>

    <!-- Status Bar Aplikasi (untuk main window) -->
    <Style x:Key="styleStatusBarAplikasi" BasedOn="{StaticResource styleStatusBarDasar}" TargetType="StatusBar">
        <Setter Property="DockPanel.Dock" Value="Bottom"/>
    </Style>

    <!-- ===== STATUS BAR ITEM ===== -->
    <Style x:Key="styleStatusBarItemDasar" TargetType="StatusBarItem">
        <Setter Property="Padding" Value="5,0"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <!-- Status Bar Item untuk informasi -->
    <Style x:Key="styleStatusBarItemInfo" BasedOn="{StaticResource styleStatusBarItemDasar}" TargetType="StatusBarItem">
    </Style>

    <!-- Status Bar Item untuk label di kanan -->
    <Style x:Key="styleStatusBarItemRight" BasedOn="{StaticResource styleStatusBarItemDasar}" TargetType="StatusBarItem">
        <Setter Property="HorizontalAlignment" Value="Right"/>
    </Style>

    <!-- ===== TEXT BLOCK DI STATUS BAR ===== -->
    <Style x:Key="styleStatusBarText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="{StaticResource StatusBarForeground}"/>
    </Style>

    <!-- Text Block aksen (untuk mode indicator) -->
    <Style x:Key="styleStatusBarTextAccent" BasedOn="{StaticResource styleStatusBarText}" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource StatusBarAccent}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <!-- ===== SEPARATOR DI STATUS BAR ===== -->
    <Style x:Key="styleStatusBarSeparator" TargetType="Separator">
        <Setter Property="Background" Value="{StaticResource StatusBarSeparator}"/>
        <Setter Property="Width" Value="1"/>
        <Setter Property="Margin" Value="5,4"/>
    </Style>

</ResourceDictionary>
