<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Separator Utama -->
    <Style x:Key="styleSeparator" TargetType="Separator">
        <Setter Property="BorderBrush" Value="LightGray" ></Setter>
        <Setter Property="BorderThickness" Value="1" ></Setter>
        <Setter Property="Opacity" Value="1" ></Setter>
    </Style>

    <!-- Separator Tombol Form -->
    <Style x:Key="styleSeparatorTombolForm" BasedOn="{StaticResource styleSeparator}" TargetType="Separator">
        <Setter Property="Margin" Value="15 0 0 0" ></Setter>
    </Style>

    <!-- Separator Konten -->
    <Style x:Key="styleSeparatorKonten" BasedOn="{StaticResource styleSeparator}" TargetType="Separator">
        <Setter Property="Margin" Value="0 15" ></Setter>
    </Style>

</ResourceDictionary>
