<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ComboBox Dasar -->
    <Style x:Key="styleComboBoxDasar" TargetType="ComboBox">
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="Opacity" Value="1" />
        <Setter Property="IsTextSearchCaseSensitive" Value="False"/>
        <Setter Property="IsTextSearchEnabled" Value="False"/>
        <Setter Property="IsEditable" Value="False"/>
    </Style>

    <!-- ComboBox Form Dialog -->
    <Style x:Key="styleComboBoxFormDialog" BasedOn="{StaticResource styleComboBoxDasar}" TargetType="ComboBox">
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="DockPanel.HorizontalAlignment" Value="Stretch" />
        <Setter Property="Margin" Value="0 2" />
        <Setter Property="Height" Value="24" />
    </Style>


</ResourceDictionary>
