<Window x:Class="wpfWin_InputGaji"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Booku"
        mc:Ignorable="d"
        Title="Input Gaji"
        Width="Auto"
        Height="Auto"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        >

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../WPF/Styles/StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <StackPanel Style="{StaticResource stylePanelFormDialog}" >

        <StackPanel Style="{StaticResource stylePanelFormDialogHorizontal}" Margin="9 9 9 0" >

            <Grid Style="{StaticResource styleGridFormDialog}"  Margin="0" >

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <GroupBox   Grid.Row="0"    Grid.Column="0" Padding="9" Margin="9"  Header="">

                    <Grid>
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="45"/>
                            <ColumnDefinition Width="99"/>
                            <ColumnDefinition Width="21"/>
                            <ColumnDefinition Width="99"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock  Grid.Row="00" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Bulan" />
                        <ComboBox   Grid.Row="00" Grid.Column="1"   Style="{StaticResource styleComboBoxFormDialog}"    Name="cmb_Bulan"  />
                        <TextBlock  Grid.Row="00" Grid.Column="3"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Tanggal Transaksi" />
                        <DatePicker Grid.Row="00" Grid.Column="4"   Style="{StaticResource styleDatePickerFormDialog}"  Name="dtp_TanggalTransaksi" />

                    </Grid>
                    
                </GroupBox>

                <GroupBox   Grid.Row="0"    Grid.Column="1" Padding="9" Margin="9" Header="PPh Pasal 21 Rutin"  Name="grb_Rutin">

                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="21"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <RadioButton    Grid.Row="00" Grid.Column="0"   Style="{StaticResource styleRadioButtonFormDialog}" Content="Dipotong/Ditunjang"    Name="rdb_PPhDipotongDitunjangRutin" Height="15" VerticalAlignment="Top"    />
                        <RadioButton    Grid.Row="00" Grid.Column="2"   Style="{StaticResource styleRadioButtonFormDialog}" Content="Ditanggung"            Name="rdb_PPhDitanggungRutin"    />

                    </Grid>

                </GroupBox>

                <GroupBox   Grid.Row="0"    Grid.Column="2" Padding="9" Margin="9" Header="PPh Pasal 21 Pesangon"   Name="grb_Pesangon">

                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="21"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <RadioButton    Grid.Row="00" Grid.Column="0"   Style="{StaticResource styleRadioButtonFormDialog}" Content="Dipotong/Ditunjang"    Name="rdb_PPhDipotongDitunjangPesangon"    />
                        <RadioButton    Grid.Row="00" Grid.Column="2"   Style="{StaticResource styleRadioButtonFormDialog}" Content="Ditanggung"            Name="rdb_PPhDitanggungPesangon"    />

                    </Grid>

                </GroupBox>

            </Grid>

        </StackPanel>

        <StackPanel Style="{StaticResource stylePanelFormDialogHorizontal}" Margin="9 0 9 15" >

            <Grid Style="{StaticResource styleGridFormDialog}"  Margin="0" >

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <GroupBox   
                    Grid.Row="0"    
                    Grid.Column="0" 
                    Margin="09" 
                    Padding="09"    
                    Height="Auto"   
                    VerticalAlignment="Top"
                    Header="Bagian Produksi : " >

                    <Grid Style="{StaticResource styleGridFormDialog}"  Margin="0" >

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="222"/>
                            <ColumnDefinition Width="123"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock  Grid.Row="00" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Gaji Produksi"                    Name="lbl_GajiBagianProduksi"/>
                        <TextBlock  Grid.Row="01" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Gaji Produksi 2"                  Name="lbl_GajiBagianProduksi2"/>
                        <TextBlock  Grid.Row="02" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Gaji Produksi 3"                  Name="lbl_GajiBagianProduksi3"/>
                        <TextBlock  Grid.Row="03" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Gaji Produksi 4"                  Name="lbl_GajiBagianProduksi4"/>
                        <TextBlock  Grid.Row="04" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="THR/Bonus - Produksi"             Name="lbl_ThrBonusProduksi"/>
                        <TextBlock  Grid.Row="05" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Tunjangan PPh 21 - Produksi"      Name="lbl_TunjanganPPh21Produksi"/>
                        <TextBlock  Grid.Row="06" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="BPJS TK-JKK/JKM - Produksi"       Name="lbl_BpjsTkJkkJkmProduksi"/>
                        <TextBlock  Grid.Row="07" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="BPJS TK-JHT/IP - Produksi"        Name="lbl_BpjsTkJhtIpProduksi"/>
                        <TextBlock  Grid.Row="08" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="BPJS Kesehatan Produksi"          Name="lbl_BpjsKesehatanProduksi"/>
                        <TextBlock  Grid.Row="09" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Asuransi Karyawan - Produksi"     Name="lbl_AsuransiKaryawanProduksi"/>
                        <TextBlock  Grid.Row="10" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Pesangon Karyawan - Produksi"     Name="lbl_PesangonKaryawanProduksi"/>
                        <TextBlock  Grid.Row="11" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Jumlah"                           />
                        <TextBlock  Grid.Row="12" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="BPJS TK-JHT/IP Dibayar Karyawan"  />
                        <TextBlock  Grid.Row="13" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="BPJS Kesehatan Dibayar Karyawan"  />

                        <TextBox    Grid.Row="00" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_GajiBagianProduksi"/>
                        <TextBox    Grid.Row="01" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_GajiBagianProduksi2"/>
                        <TextBox    Grid.Row="02" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_GajiBagianProduksi3"/>
                        <TextBox    Grid.Row="03" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_GajiBagianProduksi4"/>
                        <TextBox    Grid.Row="04" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_ThrBonusProduksi"/>
                        <TextBox    Grid.Row="05" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_TunjanganPPh21Produksi"/>
                        <TextBox    Grid.Row="06" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_BpjsTkJkkJkmProduksi"/>
                        <TextBox    Grid.Row="07" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_BpjsTkJhtIpProduksi"/>
                        <TextBox    Grid.Row="08" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_BpjsKesehatanProduksi"/>
                        <TextBox    Grid.Row="09" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_AsuransiKaryawanProduksi"/>
                        <TextBox    Grid.Row="10" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_PesangonKaryawanProduksi"/>
                        <TextBox    Grid.Row="11" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_JumlahGajiBagianProduksi"/>
                        <TextBox    Grid.Row="12" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_BpjsTkJhtIpProduksiDibayarKaryawan"/>
                        <TextBox    Grid.Row="13" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_BpjsKesehatanProduksiDibayarKaryawan"/>

                    </Grid>

                </GroupBox>

                <GroupBox   
                    Grid.Row="0"    
                    Grid.Column="1" 
                    Margin="09" 
                    Padding="09"    
                    Height="Auto"   
                    VerticalAlignment="Top"
                    Header="Bagian Administrasi : " >

                    <Grid Style="{StaticResource styleGridFormDialog}"  Margin="0" >

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="222"/>
                            <ColumnDefinition Width="123"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock  Grid.Row="00" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Gaji Administrasi"                    Name="lbl_GajiBagianAdministrasi"/>
                        <TextBlock  Grid.Row="01" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Gaji Administrasi 2"                  Name="lbl_GajiBagianAdministrasi2"/>
                        <TextBlock  Grid.Row="02" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Gaji Administrasi 3"                  Name="lbl_GajiBagianAdministrasi3"/>
                        <TextBlock  Grid.Row="03" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Gaji Administrasi 4"                  Name="lbl_GajiBagianAdministrasi4"/>
                        <TextBlock  Grid.Row="04" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="THR/Bonus - Administrasi"             Name="lbl_ThrBonusAdministrasi"/>
                        <TextBlock  Grid.Row="05" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Tunjangan PPh 21 - Administrasi"      Name="lbl_TunjanganPPh21Administrasi"/>
                        <TextBlock  Grid.Row="06" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="BPJS TK-JKK/JKM - Administrasi"       Name="lbl_BpjsTkJkkJkmAdministrasi"/>
                        <TextBlock  Grid.Row="07" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="BPJS TK-JHT/IP - Administrasi"        Name="lbl_BpjsTkJhtIpAdministrasi"/>
                        <TextBlock  Grid.Row="08" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="BPJS Kesehatan Administrasi"          Name="lbl_BpjsKesehatanAdministrasi"/>
                        <TextBlock  Grid.Row="09" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Asuransi Karyawan - Administrasi"     Name="lbl_AsuransiKaryawanAdministrasi"/>
                        <TextBlock  Grid.Row="10" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Pesangon Karyawan - Administrasi"     Name="lbl_PesangonKaryawanAdministrasi"/>
                        <TextBlock  Grid.Row="11" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Jumlah"                           />
                        <TextBlock  Grid.Row="12" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="BPJS TK-JHT/IP Dibayar Karyawan"  />
                        <TextBlock  Grid.Row="13" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="BPJS Kesehatan Dibayar Karyawan"  />

                        <TextBox    Grid.Row="00" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_GajiBagianAdministrasi"/>
                        <TextBox    Grid.Row="01" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_GajiBagianAdministrasi2"/>
                        <TextBox    Grid.Row="02" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_GajiBagianAdministrasi3"/>
                        <TextBox    Grid.Row="03" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_GajiBagianAdministrasi4"/>
                        <TextBox    Grid.Row="04" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_ThrBonusAdministrasi"/>
                        <TextBox    Grid.Row="05" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_TunjanganPPh21Administrasi"/>
                        <TextBox    Grid.Row="06" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_BpjsTkJkkJkmAdministrasi"/>
                        <TextBox    Grid.Row="07" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_BpjsTkJhtIpAdministrasi"/>
                        <TextBox    Grid.Row="08" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_BpjsKesehatanAdministrasi"/>
                        <TextBox    Grid.Row="09" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_AsuransiKaryawanAdministrasi"/>
                        <TextBox    Grid.Row="10" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_PesangonKaryawanAdministrasi"/>
                        <TextBox    Grid.Row="11" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_JumlahGajiBagianAdministrasi"/>
                        <TextBox    Grid.Row="12" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_BpjsTkJhtIpAdministrasiDibayarKaryawan"/>
                        <TextBox    Grid.Row="13" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_BpjsKesehatanAdministrasiDibayarKaryawan"/>

                    </Grid>

                </GroupBox>

                <StackPanel
                    Grid.Row="0"    
                    Grid.Column="2" 
                    Margin="00" 
                    Height="Auto"   
                    VerticalAlignment="Top"
                    Orientation="Vertical">

                    <GroupBox   
                    Margin="09" 
                    Padding="09"    
                    Height="Auto"   
                    VerticalAlignment="Top"
                    Header="Potongan : " >

                        <Grid Style="{StaticResource styleGridFormDialog}" Margin="0">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="222"/>
                                <ColumnDefinition Width="123"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock  Grid.Row="00" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Hutang BPJS Kesehatan"        Name="lbl_PotonganHutangBpjsKesehatan"/>
                            <TextBlock  Grid.Row="01" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Hutang BPJS Ketenagakerjaan"  Name="lbl_PotonganHutangBpjsKetenagakerjaan"/>
                            <TextBlock  Grid.Row="02" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Hutang Koperasi"              Name="lbl_PotonganHutangKoperasi"/>
                            <TextBlock  Grid.Row="03" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Hutang PPh 21 - Rutin"        Name="lbl_PotonganHutangPPhPasal21Rutin"/>
                            <TextBlock  Grid.Row="04" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Hutang PPh 21 - Pesangon"     Name="lbl_PotonganHutangPPhPasal21Pesangon"/>
                            <TextBlock  Grid.Row="05" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Hutang Serikat"               Name="lbl_PotonganHutangSerikat"/>
                            <TextBlock  Grid.Row="06" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Kasbon Karyawan"              Name="lbl_PotonganKasbonKaryawan"/>
                            <TextBlock  Grid.Row="07" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Potongan Lainnya"             Name="lbl_PotonganLainnya"/>
                            <TextBlock  Grid.Row="08" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Jumlah"                       Name="lbl_JumlahPotongan"/>

                            <TextBox    Grid.Row="00" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_PotonganHutangBpjsKesehatan"/>
                            <TextBox    Grid.Row="01" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_PotonganHutangBpjsKetenagakerjaan"/>
                            <TextBox    Grid.Row="02" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_PotonganHutangKoperasi"/>
                            <TextBox    Grid.Row="03" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_PotonganHutangPPhPasal21Rutin"/>
                            <TextBox    Grid.Row="04" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_PotonganHutangPPhPasal21Pesangon"/>
                            <TextBox    Grid.Row="05" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_PotonganHutangSerikat"/>
                            <TextBox    Grid.Row="06" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_PotonganKasbonKaryawan"/>
                            <TextBox    Grid.Row="07" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_PotonganLainnya"/>
                            <TextBox    Grid.Row="08" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_JumlahPotongan"/>

                        </Grid>

                    </GroupBox>

                    <GroupBox   
                    Margin="09 00" 
                    Padding="09"    
                    Height="Auto"   
                    VerticalAlignment="Top"
                    Header="" >

                        <Grid Style="{StaticResource styleGridFormDialog}" Margin="0">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="222"/>
                                <ColumnDefinition Width="123"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock  Grid.Row="00" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Jumlah Gaji Dibayarkan"       Name="lbl_JumlahGajiDibayarkan"/>
                            <TextBlock  Grid.Row="01" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="PPh Ditanggung - Rutin"       Name="lbl_PPhDitanggungRutin"/>
                            <TextBlock  Grid.Row="02" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="PPh Ditanggung - Pesangon"    Name="lbl_PPhDitanggungPesangon"/>
                            <TextBlock  Grid.Row="03" Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Keterangan :"                 Name="lbl_Keterangan"/>

                            <TextBox    Grid.Row="00" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_JumlahGajiDibayarkan"/>
                            <TextBox    Grid.Row="01" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngka}"        Name="txt_PPhDitanggungRutin"/>
                            <TextBox    Grid.Row="02" Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_PPhDitanggungPesangon"/>
                            <RichTextBox    Grid.Row="05" Grid.Column="0"   Style="{StaticResource styleRichTextBoxFormDialog}"     Name="txt_Keterangan" Grid.ColumnSpan="2" Width="Auto"  />

                        </Grid>

                    </GroupBox>

                </StackPanel>



            </Grid>

        </StackPanel>

        <!--Tombol CRUD :-->
        <StackPanel Style="{StaticResource stylePanelFormDialogTombol}"     Name="pnl_TombolForm">
            <Button Style="{StaticResource styleButtonFormDialogReset}"     Name="btn_Reset"/>
            <Button Style="{StaticResource styleButtonFormDialogSimpan}"    Name="btn_Simpan"/>
            <Button Style="{StaticResource styleButtonFormDialogBatal}"     Name="btn_Batal" />
        </StackPanel>
    </StackPanel>

</Window>
