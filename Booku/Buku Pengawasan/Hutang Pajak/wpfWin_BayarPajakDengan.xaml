<Window x:Class="wpfWin_BayarPajakDengan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Booku"
        mc:Ignorable="d"
        Title="Bayar Dengan"
        Height="Auto"
        Width="Auto"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        >

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../WPF\Styles\StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
<StackPanel Style="{StaticResource stylePanelFormDialog}" >

        <StackPanel Style="{StaticResource stylePanelFormDialogVertikal}" >


            <Grid Style="{StaticResource styleGridFormDialog}" Margin="0" >

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="207"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="33"/>
                    <RowDefinition Height="33"/>
                    <RowDefinition Height="33"/>
                    <RowDefinition Height="33"/>
                </Grid.RowDefinitions>

                <RadioButton  Grid.Row="0"  Grid.Column="0"   Style="{StaticResource styleRadioButtonFormDialog}"   GroupName="grb_BayarDengan" Name="rdb_BankCash"         Content="Bank/Cash"/>
                <RadioButton  Grid.Row="1"  Grid.Column="0"   Style="{StaticResource styleRadioButtonFormDialog}"   GroupName="grb_BayarDengan" Name="rdb_KetetapanPajak"   Content="Ketetapan Pajak"/>
                <RadioButton  Grid.Row="2"  Grid.Column="0"   Style="{StaticResource styleRadioButtonFormDialog}"   GroupName="grb_BayarDengan" Name="rdb_LebihBayar"       Content="Lebih Bayar"/>
                <RadioButton  Grid.Row="3"  Grid.Column="0"   Style="{StaticResource styleRadioButtonFormDialog}"   GroupName="grb_BayarDengan" Name="rdb_Pemindahbukuan"   Content="Pemindahbukuan"/>
            </Grid>

        </StackPanel>

        <!--Tombol CRUD :-->
        <StackPanel Style="{StaticResource stylePanelFormDialogTombol}"     Name="pnl_TombolForm">
            <Button Style="{StaticResource styleButtonFormDialogKembali}"   Name="btn_Kembali" />
            <Button Style="{StaticResource styleButtonFormDialogLanjutkan}" Name="btn_Lanjutkan" />
        </StackPanel>

    </StackPanel>

</Window>


