<UserControl x:Class="wpfUsc_BukuPengawasanHutangPPhPasal42"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Booku"
             mc:Ignorable="d" 
>

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../../WPF\Styles\StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
<DockPanel Style="{StaticResource stylePanelFormHalaman}"   Name="pnl_Halaman">
        <StackPanel Style="{StaticResource stylePanelFormHalamanHeader}">
            <Grid    DockPanel.Dock="Top"   HorizontalAlignment="Stretch"   VerticalAlignment="Stretch" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"  Name="HeaderKiri"/>
                    <ColumnDefinition Width="100*"  Name="HeaderTengah" />
                    <ColumnDefinition Width="Auto"   Name="HeaderKanan"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <!-- Header Kiri :-->
                <StackPanel Grid.Row="0"  Grid.Column="0"   Style="{StaticResource stylePanelFormHalamanHeaderKiri}">
                    <StackPanel Style="{StaticResource stylePanelFormHalamanTittle}" >
                        <TextBlock Style="{StaticResource styleTextBlockFormHalamanJudul}" Name="lbl_JudulForm" Text="Buku Pengawasan Hutang PPh Pasal 4 (2)" />
                    </StackPanel>
                    <!-- Baris Filter Data :-->
                    <StackPanel Style="{StaticResource stylePanelFormHalamanFilterData}" Name="pnl_FilterData" >
                        <TextBlock Style="{StaticResource styleTextBlockFormHalaman}" Text="Tahun :"/>
                        <ComboBox Style="{StaticResource styleComboBoxFormHalaman}" Width="69"  Margin="6 3" Name="cmb_TahunPajak" />
                        <TextBlock Style="{StaticResource styleTextBlockFormHalaman}" Text="Masa Pajak:"    Name="lbl_MasaPajak"/>
                        <ComboBox Style="{StaticResource styleComboBoxFormHalaman}" Width="123"  Margin="6 3" Name="cmb_MasaPajak" />
                    </StackPanel>
                    <!-- Baris Tombol :-->
                    <StackPanel Style="{StaticResource stylePanelFormHalamanTombolHorizontal}"  Name="pnl_TombolForm">
                        <Button Style="{StaticResource styleButtonFormHalamanRefresh}"          Name="btn_Refresh" />
                        <Border Style="{StaticResource styleBorderHeaderSeparatorTombol}"              Name="brd_LihatJurnal" />
                        <Button Style="{StaticResource styleButtonFormHalamanLihatJurnal}"      Name="btn_LihatJurnal"  />
                        <StackPanel Name="pnl_CRUD" Orientation="Horizontal">
                            <Border Style="{StaticResource styleBorderHeaderSeparatorTombol}" />
                            <Button Style="{StaticResource styleButtonFormHalamanCrudInput}"        Name="btn_Input" />
                            <Button Style="{StaticResource styleButtonFormHalamanCrudEdit}"         Name="btn_Edit" />
                            <Button Style="{StaticResource styleButtonFormHalamanCrudHapus}"        Name="btn_Hapus" />
                        </StackPanel>
                        <Border Style="{StaticResource styleBorderHeaderSeparatorTombol}" />
                        <Button Style="{StaticResource styleButtonFormHalamanExport }"          Name="btn_Export" />
                        <Border Style="{StaticResource styleBorderHeaderSeparatorTombol}"                Name="brd_DetailPembayaran"/>
                        <Button Style="{StaticResource styleButtonFormHalamanDetailPembayaran }"    Name="btn_DetailPembayaran"  />
                    </StackPanel>
                </StackPanel>
                <!-- Header Kanan:-->
                <StackPanel  Grid.Row="0"  Grid.Column="2"    Style="{StaticResource stylePanelFormHalamanHeaderKanan}" HorizontalAlignment="Right" >
                    <StackPanel HorizontalAlignment="Right" >
                        <GroupBox   Name="grb_InfoSaldo"    HorizontalAlignment="Stretch"   Header="Saldo :" Margin="0 9 0 0">
                            <Grid DockPanel.Dock="Top" VerticalAlignment="Stretch"  Margin="5 0 5 0">
                                <Grid.ColumnDefinitions> 
                                    <ColumnDefinition   Width="135"/>
                                    <ColumnDefinition   Width="99"/>
                                    <ColumnDefinition   Width="99"/>
                                    <ColumnDefinition   Width="99"/>
                                    <ColumnDefinition   Width="99"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition      Height="17"/>
                                    <RowDefinition      Height="22"/>
                                    <RowDefinition      Height="22"/>
                                    <RowDefinition      Height="22"/>
                                    <RowDefinition      />
                                </Grid.RowDefinitions>
                                <TextBlock  Grid.Row="1"  Grid.Column="0"   Style="{StaticResource styleTextBlockFormHalaman}"          Text="Berdasarkan List"         Name="lbl_SaldoBerdasarkanList"         Margin="1" />
                                <TextBlock  Grid.Row="2"  Grid.Column="0"   Style="{StaticResource styleTextBlockFormHalaman}"          Text="Berdasarkan COA + AJP"    Name="lbl_SaldoBerdasarkanCOA_PlusAJP"  Margin="1"/>
                                <TextBlock  Grid.Row="3"  Grid.Column="0"   Style="{StaticResource styleTextBlockFormHalaman}"          Text="Selisih"                                                          Margin="1"/>
                                <!-- 402 -->
                                <TextBlock  Grid.Row="0"  Grid.Column="1"   Style="{StaticResource styleTextBlockFormHalaman}"          Text="402" TextAlignment="Center"                   Margin="0"/>
                                <TextBox    Grid.Row="1"  Grid.Column="1"   Style="{StaticResource styleTextBoxFormHalaman}"            Name="txt_SaldoBerdasarkanList_402"                 Margin="1"/>
                                <TextBox    Grid.Row="2"  Grid.Column="1"   Style="{StaticResource styleTextBoxFormHalaman}"            Name="txt_saldoBerdasarkanCOA_PlusPenyesuaian_402"  Margin="1"/>
                                <TextBox    Grid.Row="3"  Grid.Column="1"   Style="{StaticResource styleTextBoxFormHalaman}"            Name="txt_SelisihSaldo_402"                         Margin="1"/>
                                <Button     Grid.Row="4"  Grid.Column="1"   Style="{StaticResource styleButtonFormHalamanSesuaikan}"    Name="btn_Sesuaikan_402"    Height="25"             Margin="1"/>
                                <!-- 403 -->
                                <TextBlock  Grid.Row="0"  Grid.Column="2"   Style="{StaticResource styleTextBlockFormHalaman}"          Text="403" TextAlignment="Center"                   Margin="0"/>
                                <TextBox    Grid.Row="1"  Grid.Column="2"   Style="{StaticResource styleTextBoxFormHalaman}"            Name="txt_SaldoBerdasarkanList_403"                 Margin="1"/>
                                <TextBox    Grid.Row="2"  Grid.Column="2"   Style="{StaticResource styleTextBoxFormHalaman}"            Name="txt_saldoBerdasarkanCOA_PlusPenyesuaian_403"  Margin="1"/>
                                <TextBox    Grid.Row="3"  Grid.Column="2"   Style="{StaticResource styleTextBoxFormHalaman}"            Name="txt_SelisihSaldo_403"                         Margin="1"/>
                                <Button     Grid.Row="4"  Grid.Column="2"   Style="{StaticResource styleButtonFormHalamanSesuaikan}"    Name="btn_Sesuaikan_403"    Height="25"             Margin="1"/>
                                <!-- 409 -->
                                <TextBlock  Grid.Row="0"  Grid.Column="3"   Style="{StaticResource styleTextBlockFormHalaman}"          Text="409" TextAlignment="Center"                   Margin="0"/>
                                <TextBox    Grid.Row="1"  Grid.Column="3"   Style="{StaticResource styleTextBoxFormHalaman}"            Name="txt_SaldoBerdasarkanList_409"                 Margin="1"/>
                                <TextBox    Grid.Row="2"  Grid.Column="3"   Style="{StaticResource styleTextBoxFormHalaman}"            Name="txt_saldoBerdasarkanCOA_PlusPenyesuaian_409"  Margin="1"/>
                                <TextBox    Grid.Row="3"  Grid.Column="3"   Style="{StaticResource styleTextBoxFormHalaman}"            Name="txt_SelisihSaldo_409"                         Margin="1"/>
                                <Button     Grid.Row="4"  Grid.Column="3"   Style="{StaticResource styleButtonFormHalamanSesuaikan}"    Name="btn_Sesuaikan_409"    Height="25"             Margin="1"/>
                                <!-- 419 -->
                                <TextBlock  Grid.Row="0"  Grid.Column="4"   Style="{StaticResource styleTextBlockFormHalaman}"          Text="419" TextAlignment="Center"                   Margin="0"/>
                                <TextBox    Grid.Row="1"  Grid.Column="4"   Style="{StaticResource styleTextBoxFormHalaman}"            Name="txt_SaldoBerdasarkanList_419"                 Margin="1"/>
                                <TextBox    Grid.Row="2"  Grid.Column="4"   Style="{StaticResource styleTextBoxFormHalaman}"            Name="txt_saldoBerdasarkanCOA_PlusPenyesuaian_419"  Margin="1"/>
                                <TextBox    Grid.Row="3"  Grid.Column="4"   Style="{StaticResource styleTextBoxFormHalaman}"            Name="txt_SelisihSaldo_419"                         Margin="1"/>
                                <Button     Grid.Row="4"  Grid.Column="4"   Style="{StaticResource styleButtonFormHalamanSesuaikan}"    Name="btn_Sesuaikan_419"    Height="25"             Margin="1"/>
                            </Grid>
                        </GroupBox>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </StackPanel>

        <StackPanel Style="{StaticResource stylePanelFormHalamanFooter}"    HorizontalAlignment="Stretch" >
            <DockPanel  Width="Auto" HorizontalAlignment="Stretch"  Name="pnl_Footer"    >
                <StackPanel Orientation="Horizontal"                Name="pnl_SaldoAwalPlusAJP"         HorizontalAlignment="Left">
                    <Grid DockPanel.Dock="Top" VerticalAlignment="Stretch"  Margin="5 0 5 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition   Width="99"/>
                            <ColumnDefinition   Width="99"/>
                            <ColumnDefinition   Width="99"/>
                            <ColumnDefinition   Width="99"/>
                            <ColumnDefinition   Width="99"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition      Height="17"/>
                            <RowDefinition      Height="22"/>
                            <RowDefinition      Height="22"/>
                        </Grid.RowDefinitions>
                        <TextBlock  Grid.Row="1"  Grid.Column="0"   Style="{StaticResource styleTextBlockFormHalaman}"          Text="Saldo Awal COA"                   Margin="1" />
                        <TextBlock  Grid.Row="2"  Grid.Column="0"   Style="{StaticResource styleTextBlockFormHalaman}"          Text="AJP"                              Margin="1"/>
                        <!-- 402 -->
                        <TextBlock  Grid.Row="0"  Grid.Column="1"   Style="{StaticResource styleTextBlockFormHalaman}"          Text="402" TextAlignment="Center"       Margin="0"/>
                        <TextBox    Grid.Row="1"  Grid.Column="1"   Style="{StaticResource styleTextBoxFormHalaman}"            Name="txt_SaldoAwalBerdasarkanCOA_402"  Margin="1"/>
                        <TextBox    Grid.Row="2"  Grid.Column="1"   Style="{StaticResource styleTextBoxFormHalaman}"            Name="txt_AJP_402"                      Margin="1"/>
                        <!-- 403 -->
                        <TextBlock  Grid.Row="0"  Grid.Column="2"   Style="{StaticResource styleTextBlockFormHalaman}"          Text="403" TextAlignment="Center"       Margin="0"/>
                        <TextBox    Grid.Row="1"  Grid.Column="2"   Style="{StaticResource styleTextBoxFormHalaman}"            Name="txt_SaldoAwalBerdasarkanCOA_403"  Margin="1"/>
                        <TextBox    Grid.Row="2"  Grid.Column="2"   Style="{StaticResource styleTextBoxFormHalaman}"            Name="txt_AJP_403"                      Margin="1"/>
                        <!-- 409 -->
                        <TextBlock  Grid.Row="0"  Grid.Column="3"   Style="{StaticResource styleTextBlockFormHalaman}"          Text="409" TextAlignment="Center"       Margin="0"/>
                        <TextBox    Grid.Row="1"  Grid.Column="3"   Style="{StaticResource styleTextBoxFormHalaman}"            Name="txt_SaldoAwalBerdasarkanCOA_409"  Margin="1"/>
                        <TextBox    Grid.Row="2"  Grid.Column="3"   Style="{StaticResource styleTextBoxFormHalaman}"            Name="txt_AJP_409"                      Margin="1"/>
                        <!-- 419 -->
                        <TextBlock  Grid.Row="0"  Grid.Column="4"   Style="{StaticResource styleTextBlockFormHalaman}"          Text="419" TextAlignment="Center"       Margin="0"/>
                        <TextBox    Grid.Row="1"  Grid.Column="4"   Style="{StaticResource styleTextBoxFormHalaman}"            Name="txt_SaldoAwalBerdasarkanCOA_419"  Margin="1"/>
                        <TextBox    Grid.Row="2"  Grid.Column="4"   Style="{StaticResource styleTextBoxFormHalaman}"            Name="txt_AJP_419"                      Margin="1"/>
                    </Grid>
                </StackPanel>
                <StackPanel Orientation="Horizontal"    Width="Auto"    Name="pnl_TotalTabel"   HorizontalAlignment="Right">
                    <Grid DockPanel.Dock="Top" VerticalAlignment="Stretch"  Margin="5 0 5 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition   Width="Auto"/>
                            <ColumnDefinition   Width="99"/>
                            <ColumnDefinition   Width="99"/>
                            <ColumnDefinition   Width="99"/>
                            <ColumnDefinition   Width="99"/>
                            <ColumnDefinition   Width="99"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition      Height="17"/>
                            <RowDefinition      Height="22"/>
                        </Grid.RowDefinitions>
                        <TextBlock  Grid.Row="1"  Grid.Column="0"   Style="{StaticResource styleTextBlockFormHalaman}"  Text="Total Tabel"  Name="lbl_TotalTabel"   Margin="1" />
                        <!-- 402 -->
                        <TextBlock  Grid.Row="0"  Grid.Column="1"   Style="{StaticResource styleTextBlockFormHalaman}"  Text="402" TextAlignment="Center"           Margin="0"/>
                        <TextBox    Grid.Row="1"  Grid.Column="1"   Style="{StaticResource styleTextBoxFormHalaman}"    Name="txt_TotalTabel_402"                   Margin="1"/>
                        <!-- 403 -->
                        <TextBlock  Grid.Row="0"  Grid.Column="2"   Style="{StaticResource styleTextBlockFormHalaman}"  Text="403" TextAlignment="Center"           Margin="0"/>
                        <TextBox    Grid.Row="1"  Grid.Column="2"   Style="{StaticResource styleTextBoxFormHalaman}"    Name="txt_TotalTabel_403"                   Margin="1"/>
                        <!-- 409 -->
                        <TextBlock  Grid.Row="0"  Grid.Column="3"   Style="{StaticResource styleTextBlockFormHalaman}"  Text="409" TextAlignment="Center"           Margin="0"/>
                        <TextBox    Grid.Row="1"  Grid.Column="3"   Style="{StaticResource styleTextBoxFormHalaman}"    Name="txt_TotalTabel_409"                   Margin="1"/>
                        <!-- 419 -->
                        <TextBlock  Grid.Row="0"  Grid.Column="4"   Style="{StaticResource styleTextBlockFormHalaman}"  Text="419" TextAlignment="Center"           Margin="0"/>
                        <TextBox    Grid.Row="1"  Grid.Column="4"   Style="{StaticResource styleTextBoxFormHalaman}"    Name="txt_TotalTabel_419"                   Margin="1"/>
                        <!-- Total -->
                        <TextBlock  Grid.Row="0"  Grid.Column="6"   Style="{StaticResource styleTextBlockFormHalaman}"  Text="Total" TextAlignment="Center"         Margin="0"/>
                        <TextBox    Grid.Row="1"  Grid.Column="6"   Style="{StaticResource styleTextBoxFormHalaman}"    Name="txt_TotalTabel_Total"                 Margin="1"/>
                    </Grid>
                </StackPanel>
            </DockPanel>
        </StackPanel>

        <DockPanel Width="Auto" Height="Auto" Name="pnl_Konten" >

            <Grid DockPanel.Dock="Top" VerticalAlignment="Stretch" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0"         Name="SidebarKiri"/>
                    <ColumnDefinition Width="100*"      Name="BarUtama"/>
                    <ColumnDefinition Width="Auto"      Name="SidebarKanan" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" Style="{StaticResource stylePanelFormHalamanSidebarKiri}" CanVerticallyScroll="True" Height="99" Grid.RowSpan="2" Name="pnl_SidebarKiri" >
                </StackPanel>

                <GridSplitter Grid.Column="0" Grid.RowSpan="2" Width="3" />

                <StackPanel Grid.Row="0" Grid.Column="1" Style="{StaticResource stylePanelFormHalamanKonten}" VerticalAlignment="Stretch">

                    <StackPanel Style="{StaticResource stylePanelDataGridView}" VerticalAlignment="Stretch" Name="pnl_DataGridUtama" >
                        <DataGrid Style="{StaticResource StyleDataGridModul}" Name="datagridUtama" MinWidth="666" MinHeight="33" VerticalAlignment="Stretch" />
                    </StackPanel>

                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="3" Style="{StaticResource stylePanelFormHalamanSidebarKanan}" Width="333" Height="Auto" Grid.RowSpan="2" Name="pnl_SidebarKanan" >

                    <StackPanel Grid.Row="0" Grid.Column="0"    Name="pnl_Bayar" Margin="9 0 9 6" Grid.ColumnSpan="3" >
                        <Grid DockPanel.Dock="Top" Margin="9 6" HorizontalAlignment="Stretch" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100*" />
                                <ColumnDefinition Width="100*" />
                                <ColumnDefinition Width="100*" />
                                <ColumnDefinition Width="100*" />
                                <ColumnDefinition Width="100*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <RadioButton    Grid.Row="0" Grid.Column="0"    GroupName="rdG_KodeSetoran"      Style="{StaticResource styleRadioButtonFormDialog}"     Name="rdb_KodeSetoran_402"  Content="402"/>
                            <RadioButton    Grid.Row="0" Grid.Column="1"    GroupName="rdG_KodeSetoran"      Style="{StaticResource styleRadioButtonFormDialog}"     Name="rdb_KodeSetoran_403"  Content="403"/>
                            <RadioButton    Grid.Row="0" Grid.Column="2"    GroupName="rdG_KodeSetoran"      Style="{StaticResource styleRadioButtonFormDialog}"     Name="rdb_KodeSetoran_409"  Content="409"/>
                            <RadioButton    Grid.Row="0" Grid.Column="3"    GroupName="rdG_KodeSetoran"      Style="{StaticResource styleRadioButtonFormDialog}"     Name="rdb_KodeSetoran_419"  Content="419"/>
                        </Grid>
                        <StackPanel Grid.Row="0" Grid.Column="0"    Style="{StaticResource stylePanelDataGridView}" Name="pnl_DataGridBayar"    Margin="9 6 9 6">
                            <DataGrid Style="{StaticResource StyleDataGridModul}" Name="datagridBayar"  MinWidth="270" MinHeight="33" HorizontalAlignment="Stretch" />
                            <Grid DockPanel.Dock="Top" VerticalAlignment="Stretch"  Margin="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition   Width="100*" />
                                    <ColumnDefinition   Width="100*" />
                                    <ColumnDefinition   Width="100*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Button Grid.Row="0" Grid.Column="0"    Name="btn_InputBayar"     Content="Bayar"     Margin="6"  Height="27"/>
                                <Button Grid.Row="0" Grid.Column="1"    Name="btn_EditBayar"      Content="Edit"      Margin="6"  Height="27"/>
                                <Button Grid.Row="0" Grid.Column="2"    Name="btn_HapusBayar"     Content="Hapus"     Margin="6"  Height="27"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Row="0" Grid.Column="0"    Name="pnl_LaporSPT" Margin="9 6 9 6" Grid.ColumnSpan="3" >
                        <GroupBox   Name="grb_LaporSPT"    HorizontalAlignment="Stretch"   Header="Lapor SPT :" Margin="0">
                            <Grid DockPanel.Dock="Top" VerticalAlignment="Stretch"  Margin="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition   Width="100*" />
                                    <ColumnDefinition   Width="100*" />
                                    <ColumnDefinition   Width="100*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Button Grid.Row="0" Grid.Column="0"    Name="btn_InputSPT"     Content="Lapor"     Margin="6"  Height="27"/>
                                <Button Grid.Row="0" Grid.Column="1"    Name="btn_EditSPT"      Content="Edit"      Margin="6"  Height="27"/>
                                <Button Grid.Row="0" Grid.Column="2"    Name="btn_HapusSPT"     Content="Hapus"     Margin="6"  Height="27"/>
                            </Grid>
                        </GroupBox>
                    </StackPanel>
                </StackPanel>
            </Grid>

        </DockPanel>
    </DockPanel>

</UserControl>


