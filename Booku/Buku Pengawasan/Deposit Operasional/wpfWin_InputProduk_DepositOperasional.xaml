<Window x:Class="wpfWin_InputProduk_DepositOperasional"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Booku"
        mc:Ignorable="d"
        Title="Input Produk"
        Width="Auto"
        Height="Auto"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        >

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../WPF/Styles/StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <StackPanel Style="{StaticResource stylePanelFormDialog}" >

        <StackPanel Style="{StaticResource stylePanelFormDialogHorizontal}" >

            <StackPanel Style="{StaticResource stylePanelFormDialogVertikal}" >
                <Grid Style="{StaticResource styleGridFormDialog}" >

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="144"/>
                        <ColumnDefinition Width="190"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock  Grid.Row="0" Grid.Column="0"    Style="{StaticResource styleTextBlockFormDialog}" >Kode Akun</TextBlock>
                    <TextBlock  Grid.Row="1" Grid.Column="0"    Style="{StaticResource styleTextBlockFormDialog}" >Nama Akun</TextBlock>
                    <TextBlock  Grid.Row="2" Grid.Column="0"    Style="{StaticResource styleTextBlockFormDialog}" >Nama Barang/Jasa</TextBlock>
                    <TextBlock  Grid.Row="3" Grid.Column="0"    Style="{StaticResource styleTextBlockFormDialog}" >Nomor Referensi</TextBlock>
                    <TextBlock  Grid.Row="4" Grid.Column="0"    Style="{StaticResource styleTextBlockFormDialog}" >Tanggal Referensi</TextBlock>
                    <TextBlock  Grid.Row="5" Grid.Column="0"    Style="{StaticResource styleTextBlockFormDialog}" >Jumlah</TextBlock>

                    <StackPanel     Grid.Row="0"    Grid.Column="1"     Style="{StaticResource stylePanelFormDialogKolom}"  >
                        <TextBox    Width="99"                          Style="{StaticResource styleTextBoxFormDialog}"         Name="txt_KodeAkun" />
                        <Button                                         Style="{StaticResource styleButtonFormDialogPilih}"     Name="btn_PilihCOA"/>
                    </StackPanel>
                    <TextBox        Grid.Row="1"    Grid.Column="1"     Style="{StaticResource styleTextBoxFormDialog}"         Name="txt_NamaAkun" />
                    <TextBox        Grid.Row="2"    Grid.Column="1"     Style="{StaticResource styleTextBoxFormDialog}"         Name="txt_NamaProduk" />
                    <TextBox        Grid.Row="3"    Grid.Column="1"     Style="{StaticResource styleTextBoxFormDialog}"         Name="txt_NomorReferensi" />
                    <DatePicker     Grid.Row="4"    Grid.Column="1"     Style="{StaticResource styleDatePickerFormDialog}"      Name="dtp_TanggalReferensi" />
                    <TextBox        Grid.Row="5"    Grid.Column="1"     Style="{StaticResource styleTextBoxFormDialogAngkaPlus}"    Name="txt_Jumlah" />
                </Grid>
            </StackPanel>

        </StackPanel>

        <!--Tombol CRUD :-->
        <StackPanel Style="{StaticResource stylePanelFormDialogTombol}"     Name="pnl_TombolForm">
            <Button Style="{StaticResource styleButtonFormDialogBatal}"     Name="btn_Batal" />
            <Button Style="{StaticResource styleButtonFormDialogTambahkan}" Name="btn_Tambahkan"/>
        </StackPanel>
    </StackPanel>

</Window>
