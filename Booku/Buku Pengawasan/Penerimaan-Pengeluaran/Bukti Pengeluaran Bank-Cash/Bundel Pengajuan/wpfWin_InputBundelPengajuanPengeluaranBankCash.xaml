<Window x:Class="wpfWin_InputBundelPengajuanPengeluaranBankCash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Booku"
        mc:Ignorable="d"
        Title="Input Bundel Pengajuan Pengeluaran Bank-Cash" 
>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../../../WPF\Styles\StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
<StackPanel Style="{StaticResource stylePanelFormDialog}" >

        <StackPanel Style="{StaticResource stylePanelFormDialogHorizontal}" >

            <StackPanel Style="{StaticResource stylePanelFormDialogVertikal}" >
                <Grid Style="{StaticResource styleGridFormDialog}" >
                    <!-- Kolom : -->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="111"/>
                        <ColumnDefinition Width="123"/>
                    </Grid.ColumnDefinitions>
                    <!-- Baris : -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock  Grid.Row="0"    Grid.Column="0"     Style="{StaticResource styleTextBlockFormDialog}"   Text="Tanggal Bundel"/>
                    <TextBlock  Grid.Row="1"    Grid.Column="0"     Style="{StaticResource styleTextBlockFormDialog }"  Text="Nomor Bundel"/>
                    <TextBlock  Grid.Row="2"    Grid.Column="0"     Style="{StaticResource styleTextBlockFormDialog}"   Text="Total Pengajuan"/>
                    <TextBlock  Grid.Row="3"    Grid.Column="0"     Style="{StaticResource styleTextBlockFormDialog}"   Text="Catatan :"/>

                    <DatePicker     Grid.Row="0" Grid.Column="1"    Style="{StaticResource styleDatePickerFormDialog}"  Name="dtp_TanggalBundel" />
                    <TextBox        Grid.Row="1" Grid.Column="1"    Style="{StaticResource styleTextBoxFormDialog}"     Name="txt_NomorBundel" />
                    <TextBox        Grid.Row="2" Grid.Column="1"    Style="{StaticResource styleTextBoxFormDialog}"     Name="txt_TotalPengajuan" />
                    <RichTextBox    Grid.Row="4" Grid.Column="0"    Style="{StaticResource styleRichTextBoxFormDialog}" Name="txt_Catatan" Grid.ColumnSpan="2" Width="Auto"  />
                </Grid>
            </StackPanel>

            <!--Separator :-->
            <StackPanel Style="{StaticResource stylePanelFormDialogVertikal}" Width="1" Background="Black" Opacity=".2" Margin="0 27" Name="pnl_Pemisah" />

            <StackPanel Style="{StaticResource stylePanelFormDialogVertikal}" Name="pnl_Kanan" >
                <StackPanel Style="{StaticResource stylePanelDataGridView}"  >
                    <DataGrid Style="{StaticResource StyleDataGridFormDialog}" Name="datagridUtama" AutoGenerateColumns="False" />
                </StackPanel>
            </StackPanel>

        </StackPanel>

        <!--Tombol CRUD :-->
        <StackPanel Style="{StaticResource stylePanelFormDialogTombol}"     Name="pnl_TombolForm">
            <Button Style="{StaticResource styleButtonFormDialogCetak}"       Name="btn_Pratinjau"></Button>
            <Button Style="{StaticResource styleButtonFormDialogSimpan}"          Name="btn_Simpan"></Button>
            <Button Style="{StaticResource styleButtonFormDialogBatal}"           Name="btn_Batal" ></Button>
        </StackPanel>
    </StackPanel>

</Window>


