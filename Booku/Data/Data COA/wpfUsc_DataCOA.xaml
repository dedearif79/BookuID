<UserControl x:Class="wpfUsc_DataCOA"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Booku"
             mc:Ignorable="d" 
>

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/BookuID.Styles;component/WPF/Styles/StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
<DockPanel x:Name="pnl_Halaman" Style="{StaticResource stylePanelFormHalaman}">
        <StackPanel Style="{StaticResource stylePanelFormHalamanHeader}">
            <Grid    DockPanel.Dock="Top"   HorizontalAlignment="Stretch"   VerticalAlignment="Stretch" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"  Name="HeaderKiri"/>
                    <ColumnDefinition Width="100*"  Name="HeaderTengah" />
                    <ColumnDefinition Width="Auto"   Name="HeaderKanan"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <!-- Header Kiri :-->
                <StackPanel Grid.Row="0"  Grid.Column="0"   Style="{StaticResource stylePanelFormHalamanHeaderKiri}">
                    <StackPanel Style="{StaticResource stylePanelFormHalamanTittle}" >
                        <TextBlock Style="{StaticResource styleTextBlockFormHalamanJudul}" Name="lbl_JudulForm" Text="Data COA" />
                    </StackPanel>
                    <!-- Baris Tombol :-->
                    <StackPanel Style="{StaticResource stylePanelFormHalamanTombolHorizontal}"  Name="pnl_TombolForm">
                        <Button Style="{StaticResource styleButtonFormHalamanRefresh}"          Name="btn_Refresh" />
                        <Border Style="{StaticResource styleBorderHeaderSeparatorTombol}"              Name="brd_TautanCOA"/>
                        <Button Style="{StaticResource styleButtonFormHalamanTautanCOA}"        Name="btn_TautanCOA"  />
                        <StackPanel Name="pnl_CRUD" Orientation="Horizontal">
                            <Border Style="{StaticResource styleBorderHeaderSeparatorTombol}" />
                            <Button Style="{StaticResource styleButtonFormHalamanCrudInput}"        Name="btn_Input" />
                            <Button Style="{StaticResource styleButtonFormHalamanCrudEdit}"         Name="btn_Edit" />
                            <Button Style="{StaticResource styleButtonFormHalamanCrudHapus}"        Name="btn_Hapus" />
                        </StackPanel>
                        <Border Style="{StaticResource styleBorderHeaderSeparatorTombol}"          Name="brd_BukuBesar"/>
                        <Button Style="{StaticResource styleButtonFormHalamanBukuBesar}"    Name="btn_BukuBesar"  />
                        <Border Style="{StaticResource styleBorderHeaderSeparatorTombol}"          Name="brd_ExportImport"/>
                        <Button Style="{StaticResource styleButtonFormHalamanImport }"      Name="btn_Import" />
                        <Button Style="{StaticResource styleButtonFormHalamanExport }"      Name="btn_Export" />
                    </StackPanel>
                    <!-- Baris Filter Data :-->
                    <StackPanel Style="{StaticResource stylePanelFormHalamanFilterData}"    Name="pnl_FilterData" >
                        <TextBlock  Style="{StaticResource styleTextBlockFormHalaman}"      Text="Kepala Akun :"    />
                        <TextBox    Style="{StaticResource styleTextBoxFormHalaman}"        Name="txt_KepalaCOA"    Margin="6 3"    Width="63"  />
                        <Border Width="2" Background="LightGray" Margin="6,3,9,3" />
                        <TextBlock  Style="{StaticResource styleTextBlockFormHalaman}"      Text="Cari Akun :"/>
                        <TextBox    Style="{StaticResource styleTextBoxFormHalaman}"        Name="txt_CariAkun"     Margin="6 3"    Width="222"  />
                        <Border Width="2" Background="LightGray" Margin="6,3,9,3" />
                        <TextBlock Style="{StaticResource styleTextBlockFormHalaman}" Text="Visibilitas :"/>
                        <ComboBox Style="{StaticResource styleComboBoxFormHalaman}" Width="069"  Margin="6 3" Name="cmb_Visibilitas" />
                    </StackPanel>
                </StackPanel>
                <!-- Header Kanan:-->
                <StackPanel  Grid.Row="0"  Grid.Column="2"    Style="{StaticResource stylePanelFormHalamanHeaderKanan}" HorizontalAlignment="Right" >
                    <TextBlock HorizontalAlignment="Right" >
                        <GroupBox   Name="grb_BalanceControl"    HorizontalAlignment="Stretch"   Header="" Margin="0 9 0 0">
                            <Grid DockPanel.Dock="Top" VerticalAlignment="Stretch"  Margin="5 0 5 0">
                                <Grid.ColumnDefinitions> 
                                    <ColumnDefinition   Width="14.728" />
                                    <ColumnDefinition Width="120.272"/>
                                    <ColumnDefinition   Width="123"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock  Grid.Row="0"  Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Jumlah Aktiva"     Name="lbl_JumlahAktiva"    Grid.ColumnSpan="2" Margin="0,6,0,6"/>
                                <TextBlock  Grid.Row="1"  Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Jumlah Passiva"    Name="lbl_JumlahPassiva"   Grid.ColumnSpan="2" Margin="0,6,0,6"/>
                                <TextBlock  Grid.Row="2"  Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Selisih" Grid.ColumnSpan="2" Margin="0,6,0,6"/>
                                <TextBox    Grid.Row="0"  Grid.Column="2"   Style="{StaticResource styleTextBoxFormDialog}"     Name="txt_JumlahAktiva" Margin="0,3,0,3" />
                                <TextBox    Grid.Row="1"  Grid.Column="2"   Style="{StaticResource styleTextBoxFormDialog}"     Name="txt_JumlahPassiva"    Margin="0,3,0,3"/>
                                <TextBox    Grid.Row="2"  Grid.Column="2"   Style="{StaticResource styleTextBoxFormDialog}"     Name="txt_SelisihNeraca"    Margin="0,3,0,3" />
                            </Grid>
                        </GroupBox>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- Footer : -->
        <StackPanel Style="{StaticResource stylePanelFormHalamanFooter}"    HorizontalAlignment="Stretch" >
            <DockPanel  Width="Auto" HorizontalAlignment="Stretch"  Name="pnl_Footer"    >
                <StackPanel Orientation="Horizontal"    Width="Auto"    Name="pnl_TotalTabel"   HorizontalAlignment="Right">
                    <TextBlock      Text="Total Tabel :"                Name="lbl_TotalTabel"   HorizontalAlignment="Right"   Style="{StaticResource styleTextBlockFormHalamanFooter}"/>
                    <TextBox        Width="111"                         Name="txt_TotalTabel"   HorizontalAlignment="Right"   Style="{StaticResource styleTextBoxFormHalamanFooter}"/>
                </StackPanel>
            </DockPanel>
        </StackPanel>
        
        <DockPanel Width="Auto" Height="Auto" Name="pnl_Konten" >

            <Grid DockPanel.Dock="Top" VerticalAlignment="Stretch" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0"         Name="SidebarKiri"/>
                    <ColumnDefinition Width="100*"      Name="BarUtama"/>
                    <ColumnDefinition Width="Auto"      Name="SidebarKanan" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" Style="{StaticResource stylePanelFormHalamanSidebarKiri}" CanVerticallyScroll="True" Height="99" Grid.RowSpan="2" Name="pnl_SidebarKiri" >
                </StackPanel>

                <GridSplitter Grid.Column="0" Grid.RowSpan="2" Width="3" />

                <StackPanel Grid.Row="0" Grid.Column="1" Style="{StaticResource stylePanelFormHalamanKonten}" VerticalAlignment="Stretch">

                    <StackPanel Style="{StaticResource stylePanelDataGridView}" VerticalAlignment="Stretch" Name="pnl_DataGridUtama" >
                        <DataGrid Style="{StaticResource StyleDataGridModul}" Name="datagridUtama" MinWidth="666" MinHeight="33" VerticalAlignment="Stretch" />
                    </StackPanel>

                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="3" Style="{StaticResource stylePanelFormHalamanSidebarKanan}" Height="Auto" Grid.RowSpan="2" Name="pnl_SidebarKanan" >

                </StackPanel>
            </Grid>

        </DockPanel>
    </DockPanel>

</UserControl>


