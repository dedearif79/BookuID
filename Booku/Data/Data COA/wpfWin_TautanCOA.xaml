<Window x:Class="wpfWin_TautanCOA"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Booku"
        mc:Ignorable="d"
        Title="Tautan COA"
        Height="Auto"
        Width="Auto"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        >

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../WPF\Styles\StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <StackPanel Style="{StaticResource stylePanelFormDialog}">

        <StackPanel Style="{StaticResource stylePanelFormDialogVertikal}">

            <!-- Header -->
            <StackPanel Orientation="Horizontal" Margin="0 0 0 9">
                <StackPanel Margin="0 0 15 0">
                    <TextBlock Style="{StaticResource styleTextBlockFormDialogJudul}" Text="Tautan COA" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Style="{StaticResource styleButtonFormDialogRefresh}" Name="btn_Refresh" Margin="0 0 9 0" />
                    <Button Style="{StaticResource styleButtonFormDialog}" Name="btn_EditTautan" Content="Edit Tautan" Width="90" />
                </StackPanel>
            </StackPanel>

            <!-- DataGrid -->
            <DataGrid Name="datagridUtama" HorizontalAlignment="Left" VerticalAlignment="Top" AutoGenerateColumns="False" MinWidth="750" MinHeight="400" MaxHeight="500" />

            <!-- Footer Info -->
            <StackPanel Orientation="Horizontal" Margin="0 9 0 0">
                <TextBlock Style="{StaticResource styleTextBlockFormDialog}" Text="Jumlah Tautan : " />
                <TextBlock Style="{StaticResource styleTextBlockFormDialog}" Name="lbl_JumlahTautan" Text="0" FontWeight="Bold" />
            </StackPanel>

        </StackPanel>

        <!-- Tombol -->
        <StackPanel Style="{StaticResource stylePanelFormDialogTombol}" Name="pnl_TombolForm">
            <Button Style="{StaticResource styleButtonFormDialogTutup}" Name="btn_Tutup" />
        </StackPanel>

    </StackPanel>

</Window>
