<Window x:Class="wpfWin_ListCOA"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Booku"
        mc:Ignorable="d"
        Title="Daftar Akun"
        Height="Auto"
        Width="Auto"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        >

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../WPF/Styles/StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <StackPanel Style="{StaticResource stylePanelFormDialog}" >

        <StackPanel Style="{StaticResource stylePanelFormDialogVertikal}" >

            <StackPanel Margin="0 0 0 9">
                <TextBlock  Style="{StaticResource styleTextBlockFormDialog}"   Text="Cari Akun :"  Name="lbl_CariCOA" />
                <TextBox    Style="{StaticResource styleTextBoxFormDialog}"     Name="txt_CariAkun" Width="200" HorizontalAlignment="Left" />
            </StackPanel>

            <DataGrid Name="datagridUtama" HorizontalAlignment="Left" VerticalAlignment="Top" AutoGenerateColumns="False" MinWidth="420" MinHeight="300" MaxHeight="400" />

            <StackPanel Margin="0 9 0 0">
                <CheckBox   Style="{StaticResource styleCheckBoxFormDialog}"    Name="chk_TampilkanYangTersembunyi" Content="Tampilkan yang tersembunyi" />
            </StackPanel>

        </StackPanel>

        <!--Tombol :-->
        <StackPanel Style="{StaticResource stylePanelFormDialogTombol}"     Name="pnl_TombolForm">
            <Button Style="{StaticResource styleButtonFormDialogTutup}"     Name="btn_Pilih"    Content="Pilih" />
            <Button Style="{StaticResource styleButtonFormDialogTutup}"     Name="btn_Tutup" />
        </StackPanel>

    </StackPanel>

</Window>
