<Window x:Class="wpfWin_PilihBulan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Booku"
        mc:Ignorable="d"
        Title="Pilih Bulan"
        Height="Auto"
        Width="Auto"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        >

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../WPF\Styles\StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
<StackPanel Style="{StaticResource stylePanelFormDialog}" >

        <StackPanel Style="{StaticResource stylePanelFormDialogVertikal}" >

            <Grid Style="{StaticResource styleGridFormDialog}" >

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="110"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="28"/>
                    <RowDefinition Height="28"/>
                    <RowDefinition Height="28"/>
                    <RowDefinition Height="28"/>
                    <RowDefinition Height="28"/>
                    <RowDefinition Height="28"/>
                </Grid.RowDefinitions>

                <RadioButton Grid.Row="0" Grid.Column="0" Style="{StaticResource styleRadioButtonFormDialog}" GroupName="grb_PilihBulan" Name="rdb_Januari"    Content="Januari"/>
                <RadioButton Grid.Row="1" Grid.Column="0" Style="{StaticResource styleRadioButtonFormDialog}" GroupName="grb_PilihBulan" Name="rdb_Februari"   Content="Februari"/>
                <RadioButton Grid.Row="2" Grid.Column="0" Style="{StaticResource styleRadioButtonFormDialog}" GroupName="grb_PilihBulan" Name="rdb_Maret"      Content="Maret"/>
                <RadioButton Grid.Row="3" Grid.Column="0" Style="{StaticResource styleRadioButtonFormDialog}" GroupName="grb_PilihBulan" Name="rdb_April"      Content="April"/>
                <RadioButton Grid.Row="4" Grid.Column="0" Style="{StaticResource styleRadioButtonFormDialog}" GroupName="grb_PilihBulan" Name="rdb_Mei"        Content="Mei"/>
                <RadioButton Grid.Row="5" Grid.Column="0" Style="{StaticResource styleRadioButtonFormDialog}" GroupName="grb_PilihBulan" Name="rdb_Juni"       Content="Juni"/>

                <RadioButton Grid.Row="0" Grid.Column="1" Style="{StaticResource styleRadioButtonFormDialog}" GroupName="grb_PilihBulan" Name="rdb_Juli"       Content="Juli"/>
                <RadioButton Grid.Row="1" Grid.Column="1" Style="{StaticResource styleRadioButtonFormDialog}" GroupName="grb_PilihBulan" Name="rdb_Agustus"    Content="Agustus"/>
                <RadioButton Grid.Row="2" Grid.Column="1" Style="{StaticResource styleRadioButtonFormDialog}" GroupName="grb_PilihBulan" Name="rdb_September"  Content="September"/>
                <RadioButton Grid.Row="3" Grid.Column="1" Style="{StaticResource styleRadioButtonFormDialog}" GroupName="grb_PilihBulan" Name="rdb_Oktober"    Content="Oktober"/>
                <RadioButton Grid.Row="4" Grid.Column="1" Style="{StaticResource styleRadioButtonFormDialog}" GroupName="grb_PilihBulan" Name="rdb_Nopember"   Content="Nopember"/>
                <RadioButton Grid.Row="5" Grid.Column="1" Style="{StaticResource styleRadioButtonFormDialog}" GroupName="grb_PilihBulan" Name="rdb_Desember"   Content="Desember"/>

            </Grid>

        </StackPanel>

        <!--Tombol :-->
        <StackPanel Style="{StaticResource stylePanelFormDialogTombol}" Name="pnl_TombolForm">
            <Button Style="{StaticResource styleButtonFormDialogBatal}" Name="btn_Batal" />
            <Button Style="{StaticResource styleButtonFormDialogLanjutkan}" Name="btn_Lanjutkan" />
        </StackPanel>

    </StackPanel>

</Window>


