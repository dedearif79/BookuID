<UserControl x:Class="wpfUsc_BukuBankGaransi"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Booku"
             mc:Ignorable="d"
>

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/BookuID.Styles;component/WPF/Styles/StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
<DockPanel Style="{StaticResource stylePanelFormHalaman}" Name="pnl_Halaman">
        <StackPanel Style="{StaticResource stylePanelFormHalamanHeader}">
            <StackPanel Style="{StaticResource stylePanelFormHalamanTittle}" >
                <TextBlock Style="{StaticResource styleTextBlockFormHalamanJudul}" Name="lbl_JudulForm">Buku Bank Garansi</TextBlock>
            </StackPanel>
            <!-- Baris Tombol :-->
            <StackPanel Style="{StaticResource stylePanelFormHalamanTombolHorizontal}"    Name="pnl_TombolForm">
                <Button Style="{StaticResource styleButtonFormHalamanCrudInput}"           Name="btn_Refresh" Content="Refresh"  ></Button>
                <Border Style="{StaticResource styleBorderHeaderSeparatorTombol}" />
                <Button Style="{StaticResource styleButtonFormHalamanCrudInput}"           Name="btn_LihatJurnalTransaksi" Content="Lihat Jurnal Transaksi" Width="140"></Button>
                <Button Style="{StaticResource styleButtonFormHalamanCrudInput}"           Name="btn_LihatJurnalPencairan" Content="Lihat Jurnal Pencairan" Width="140"></Button>
                <Border Style="{StaticResource styleBorderHeaderSeparatorTombol}" />
                <Button Style="{StaticResource styleButtonFormHalamanCrudInput}"           Name="btn_Export" Content="Export" Width="80"></Button>
                <Border Style="{StaticResource styleBorderHeaderSeparatorTombol}" />
                <Button Style="{StaticResource styleButtonFormHalamanCrudInput}"           Name="btn_Input" ></Button>
                <Button Style="{StaticResource styleButtonFormHalamanCrudEdit}"            Name="btn_Edit" ></Button>
                <Button Style="{StaticResource styleButtonFormHalamanCrudInput}"           Name="btn_Cairkan" Content="Cairkan" Width="70"></Button>
                <Button Style="{StaticResource styleButtonFormHalamanCrudHapus}"           Name="btn_Hapus" ></Button>
            </StackPanel>
        </StackPanel>

        <StackPanel Style="{StaticResource stylePanelFormHalamanFooter}"></StackPanel>
        <DockPanel Width="Auto" Height="Auto" >

            <Grid DockPanel.Dock="Top" VerticalAlignment="Stretch" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="69"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" Style="{StaticResource stylePanelFormHalamanSidebarKiri}" CanVerticallyScroll="True" Height="99" Grid.RowSpan="2" >
                </StackPanel>
                <GridSplitter Grid.Column="0" Grid.RowSpan="2" Width="3"/>
                <StackPanel Grid.Row="0" Grid.Column="1" Style="{StaticResource stylePanelFormHalamanKonten}" CanVerticallyScroll="False" >
                    <DataGrid Style="{StaticResource StyleDataGridModul}" Name="datagridUtama"/>
                </StackPanel>
                <GridSplitter Grid.Column="1" Grid.RowSpan="2" Width="3"/>
                <StackPanel Grid.Row="0" Grid.Column="2" Style="{StaticResource stylePanelFormHalamanSidebarKanan}" Background="{StaticResource clrBgSidebar}" CanVerticallyScroll="True" Height="99" Grid.RowSpan="2" >
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="1" Background="Transparent" >
                </StackPanel>
            </Grid>

        </DockPanel>
    </DockPanel>


</UserControl>


