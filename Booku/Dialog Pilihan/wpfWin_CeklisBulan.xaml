<Window x:Class="wpfWin_CeklisBulan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Booku"
        mc:Ignorable="d"
        Title="Ceklis Bulan"
        Height="Auto"
        Width="Auto"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        >

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../WPF\Styles\StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
<StackPanel Style="{StaticResource stylePanelFormDialog}" >

        <StackPanel Style="{StaticResource stylePanelFormDialogVertikal}" >

            <Grid Style="{StaticResource styleGridFormDialog}" >

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="110"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="28"/>
                    <RowDefinition Height="28"/>
                    <RowDefinition Height="28"/>
                    <RowDefinition Height="28"/>
                    <RowDefinition Height="28"/>
                    <RowDefinition Height="28"/>
                </Grid.RowDefinitions>

                <CheckBox Grid.Row="0" Grid.Column="0" Style="{StaticResource styleCheckBoxFormDialog}" Name="chk_Januari"    Content="Januari"/>
                <CheckBox Grid.Row="1" Grid.Column="0" Style="{StaticResource styleCheckBoxFormDialog}" Name="chk_Februari"   Content="Februari"/>
                <CheckBox Grid.Row="2" Grid.Column="0" Style="{StaticResource styleCheckBoxFormDialog}" Name="chk_Maret"      Content="Maret"/>
                <CheckBox Grid.Row="3" Grid.Column="0" Style="{StaticResource styleCheckBoxFormDialog}" Name="chk_April"      Content="April"/>
                <CheckBox Grid.Row="4" Grid.Column="0" Style="{StaticResource styleCheckBoxFormDialog}" Name="chk_Mei"        Content="Mei"/>
                <CheckBox Grid.Row="5" Grid.Column="0" Style="{StaticResource styleCheckBoxFormDialog}" Name="chk_Juni"       Content="Juni"/>

                <CheckBox Grid.Row="0" Grid.Column="1" Style="{StaticResource styleCheckBoxFormDialog}" Name="chk_Juli"       Content="Juli"/>
                <CheckBox Grid.Row="1" Grid.Column="1" Style="{StaticResource styleCheckBoxFormDialog}" Name="chk_Agustus"    Content="Agustus"/>
                <CheckBox Grid.Row="2" Grid.Column="1" Style="{StaticResource styleCheckBoxFormDialog}" Name="chk_September"  Content="September"/>
                <CheckBox Grid.Row="3" Grid.Column="1" Style="{StaticResource styleCheckBoxFormDialog}" Name="chk_Oktober"    Content="Oktober"/>
                <CheckBox Grid.Row="4" Grid.Column="1" Style="{StaticResource styleCheckBoxFormDialog}" Name="chk_Nopember"   Content="Nopember"/>
                <CheckBox Grid.Row="5" Grid.Column="1" Style="{StaticResource styleCheckBoxFormDialog}" Name="chk_Desember"   Content="Desember"/>

            </Grid>

        </StackPanel>

        <!--Tombol :-->
        <StackPanel Style="{StaticResource stylePanelFormDialogTombol}" Name="pnl_TombolForm">
            <Button Style="{StaticResource styleButtonFormDialogBatal}" Name="btn_Batal" />
            <Button Style="{StaticResource styleButtonFormDialogLanjutkan}" Name="btn_Lanjutkan" />
        </StackPanel>

    </StackPanel>

</Window>


