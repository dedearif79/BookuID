<UserControl x:Class="wpfUsc_BukuBesar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Booku"
             mc:Ignorable="d" 
>

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../WPF\Styles\StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
<DockPanel Style="{StaticResource stylePanelFormHalaman}"   Name="pnl_Halaman">
        <StackPanel Style="{StaticResource stylePanelFormHalamanHeader}">
            <Grid    DockPanel.Dock="Top"   HorizontalAlignment="Stretch"   VerticalAlignment="Stretch" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"  Name="HeaderKiri"/>
                    <ColumnDefinition Width="100*"  Name="HeaderTengah" />
                    <ColumnDefinition Width="Auto"   Name="HeaderKanan"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0"  Grid.Column="0"   Style="{StaticResource stylePanelFormHalamanHeaderKiri}">
                    <StackPanel Style="{StaticResource stylePanelFormHalamanTittle}" >
                        <TextBlock Style="{StaticResource styleTextBlockFormHalamanJudul}" Name="lbl_JudulForm" Text="Buku Besar" />
                    </StackPanel>
                    <!-- Baris Filter Data :-->
                    <StackPanel Style="{StaticResource stylePanelFormHalamanFilterData}"                    Name="pnl_FilterData" >
                        <TextBlock  Style="{StaticResource styleTextBlockFormHalaman}"  Text="Akun :"       Name="lbl_COA"  Margin="0 5 9 5"/>
                        <TextBox    Style="{StaticResource styleTextBoxFormDialog}"                         Name="txt_COA"  Width="63"/>
                        <Button     Style="{StaticResource styleButtonFormDialogPilih}"                     Name="btn_PilihCOA" />
                        <Border     Width="2" Background="LightGray" Margin="9 3"                         Name="brd_Akun"/>
                        <TextBlock  Style="{StaticResource styleTextBlockFormHalaman}"  Text="Combo COA :"     Name="lbl_ComboCOA"/>
                        <ComboBox   Style="{StaticResource styleComboBoxFormDialog}"    Width="210"  Margin="6 3" Name="cmb_COA" />
                        <Border     Width="2" Background="LightGray" Margin="9 3"                         Name="brd_ComboAkun"/>
                        <TextBlock Style="{StaticResource styleTextBlockFormHalaman}" Text="Lawan Transaksi :"/>
                        <ComboBox Width="270"  Margin="6 3" Name="cmb_LawanTransaksi" />
                        <TextBlock  Style="{StaticResource styleTextBlockFormHalaman}"  Text="Debet/Kredit:"  />
                        <ComboBox   Style="{StaticResource styleComboBoxFormDialog}"    Width="72"  Margin="6 3" Name="cmb_DebetKredit" />
                        <TextBlock  Style="{StaticResource styleTextBlockFormHalaman}"  Text="Direct :"     Name="lbl_Direct"/>
                        <ComboBox   Style="{StaticResource styleComboBoxFormDialog}"    Width="63"  Margin="6 3" Name="cmb_Direct" />
                    </StackPanel>
                    <!-- Baris Tombol :-->
                    <StackPanel Style="{StaticResource stylePanelFormHalamanTombolHorizontal}"  Name="pnl_TombolForm">
                        <Button Style="{StaticResource styleButtonFormHalamanRefresh}"          Name="btn_Refresh"/>
                        <Border Style="{StaticResource styleBorderHeaderSeparatorTombol}" />
                        <Button Style="{StaticResource styleButtonFormHalamanLihatJurnal}"      Name="btn_LihatJurnal" />
                        <Border Style="{StaticResource styleBorderHeaderSeparatorTombol}"              Name="brd_CRUD" />
                        <Button Style="{StaticResource styleButtonFormHalamanCrudInput}"        Name="btn_Input" />
                        <Button Style="{StaticResource styleButtonFormHalamanCrudEdit}"         Name="btn_Edit" />
                        <Button Style="{StaticResource styleButtonFormHalamanCrudHapus}"        Name="btn_Hapus" />
                        <Border Style="{StaticResource styleBorderHeaderSeparatorTombol}" />
                        <Button Style="{StaticResource styleButtonFormHalamanBukuPembantu}"     Name="btn_BukuPembantu" />
                        <Border Style="{StaticResource styleBorderHeaderSeparatorTombol}" />
                        <Button Style="{StaticResource styleButtonFormHalamanExport}"           Name="btn_Export" />
                    </StackPanel>
                </StackPanel>
                <!-- Header Kanan:-->
                <StackPanel  Grid.Row="0"  Grid.Column="2"    Style="{StaticResource stylePanelFormHalamanHeaderKanan}" HorizontalAlignment="Right" >
                    <TextBlock HorizontalAlignment="Right" >
                        <GroupBox   Name="grb_InfoSaldo"    HorizontalAlignment="Stretch"   Margin="0 9 0 0">
                            <Grid DockPanel.Dock="Top" VerticalAlignment="Stretch"  Margin="5 5 5 0">
                                <Grid.ColumnDefinitions> 
                                    <ColumnDefinition   Width="87" />
                                    <ColumnDefinition   Width="123"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock  Grid.Row="0"  Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Saldo Awal"   Name="lbl_SaldoAwal"/>
                                <TextBlock  Grid.Row="1"  Grid.Column="0"   Style="{StaticResource styleTextBlockFormDialog}"   Text="Saldo Akhir"  Name="lbl_SaldoAkhir"/>
                                <TextBox    Grid.Row="0"  Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialog}"     Name="txt_SaldoAwal" />
                                <TextBox    Grid.Row="1"  Grid.Column="1"   Style="{StaticResource styleTextBoxFormDialog}"     Name="txt_SaldoAkhir"/>
                            </Grid>
                        </GroupBox>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- Footer : -->
        <StackPanel Style="{StaticResource stylePanelFormHalamanFooter}"></StackPanel>
        
        <DockPanel Width="Auto" Height="Auto" Name="pnl_Konten" >
            <Grid DockPanel.Dock="Top" VerticalAlignment="Stretch" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0"/>
                    <ColumnDefinition Width="100*"/>
                    <ColumnDefinition Width="0"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" Style="{StaticResource stylePanelFormHalamanSidebarKiri}" CanVerticallyScroll="True" Height="99" Grid.RowSpan="2" >
                </StackPanel>
                <GridSplitter Grid.Column="0" Grid.RowSpan="2" Width="3" />
                <StackPanel Grid.Row="0" Grid.Column="1" Style="{StaticResource stylePanelFormHalamanKonten}" VerticalAlignment="Stretch">
                    <StackPanel Style="{StaticResource stylePanelDataGridView}" VerticalAlignment="Stretch" Name="pnl_DataGridUtama" >
                        <DataGrid Name="datagridUtama" Style="{StaticResource StyleDataGridModul}" MinWidth="777" MinHeight="33" VerticalAlignment="Stretch" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="3" Style="{StaticResource stylePanelFormHalamanSidebarKanan}" Background="Gray" CanVerticallyScroll="True" Height="99" Grid.RowSpan="2" >
                </StackPanel>
            </Grid>

        </DockPanel>
    </DockPanel>

</UserControl>


