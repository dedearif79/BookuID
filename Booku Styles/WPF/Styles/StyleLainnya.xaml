<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- =================================================================== -->
    <!-- STYLE LAINNYA (Separator, dll)                                      -->
    <!-- =================================================================== -->
    <!-- Semua warna menggunakan referensi dari StyleColor.xaml              -->
    <!-- =================================================================== -->


    <!-- =================================================================== -->
    <!-- SEPARATOR                                                           -->
    <!-- =================================================================== -->

    <!-- Separator Dasar -->
    <Style x:Key="styleSeparator" TargetType="Separator">
        <Setter Property="Background" Value="{StaticResource clrSeparator}"/>
        <Setter Property="Height" Value="1"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Opacity" Value="1"/>
    </Style>

    <!-- Separator Tombol Form (vertikal di antara tombol) -->
    <Style x:Key="styleSeparatorTombolForm" BasedOn="{StaticResource styleSeparator}" TargetType="Separator">
        <Setter Property="Margin" Value="15 0 0 0"/>
    </Style>

    <!-- Separator Konten (horizontal di antara section) -->
    <Style x:Key="styleSeparatorKonten" BasedOn="{StaticResource styleSeparator}" TargetType="Separator">
        <Setter Property="Margin" Value="0 15"/>
    </Style>

    <!-- Separator Section (lebih tipis) -->
    <Style x:Key="styleSeparatorSection" BasedOn="{StaticResource styleSeparator}" TargetType="Separator">
        <Setter Property="Background" Value="{StaticResource clrSeparatorLight}"/>
        <Setter Property="Margin" Value="0 10"/>
    </Style>

    <!-- Separator Menu -->
    <Style x:Key="styleSeparatorMenu" BasedOn="{StaticResource styleSeparator}" TargetType="Separator">
        <Setter Property="Margin" Value="5,4"/>
    </Style>


    <!-- =================================================================== -->
    <!-- EXPANDER                                                            -->
    <!-- =================================================================== -->

    <!-- Expander Dasar -->
    <Style x:Key="styleExpanderDasar" TargetType="Expander">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource clrTeksPrimer}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{StaticResource clrBorderDefault}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="5"/>
    </Style>

    <!-- Expander Form Dialog -->
    <Style x:Key="styleExpanderFormDialog" BasedOn="{StaticResource styleExpanderDasar}" TargetType="Expander">
        <Setter Property="Margin" Value="0 5"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>


    <!-- =================================================================== -->
    <!-- TOOLTIP                                                             -->
    <!-- =================================================================== -->

    <!-- ToolTip Dasar -->
    <Style x:Key="styleToolTipDasar" TargetType="ToolTip">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="{StaticResource clrTeksPrimer}"/>
        <Setter Property="Background" Value="{StaticResource clrBgPanel}"/>
        <Setter Property="BorderBrush" Value="{StaticResource clrBorderDefault}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,4"/>
    </Style>


    <!-- =================================================================== -->
    <!-- PROGRESSBAR                                                         -->
    <!-- =================================================================== -->

    <!-- ProgressBar Dasar -->
    <Style x:Key="styleProgressBarDasar" TargetType="ProgressBar">
        <Setter Property="Background" Value="{StaticResource clrProgressBg}"/>
        <Setter Property="Foreground" Value="{StaticResource clrProgressFg}"/>
        <Setter Property="BorderBrush" Value="{StaticResource clrProgressBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Height" Value="20"/>
    </Style>

    <!-- ProgressBar Form Dialog -->
    <Style x:Key="styleProgressBarFormDialog" BasedOn="{StaticResource styleProgressBarDasar}" TargetType="ProgressBar">
        <Setter Property="Margin" Value="0 5"/>
        <Setter Property="Height" Value="16"/>
    </Style>

    <!-- ProgressBar Compact -->
    <Style x:Key="styleProgressBarCompact" BasedOn="{StaticResource styleProgressBarDasar}" TargetType="ProgressBar">
        <Setter Property="Height" Value="8"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>


    <!-- =================================================================== -->
    <!-- SLIDER                                                              -->
    <!-- =================================================================== -->

    <!-- Slider Dasar -->
    <Style x:Key="styleSliderDasar" TargetType="Slider">
        <Setter Property="Background" Value="{StaticResource clrProgressBg}"/>
        <Setter Property="Foreground" Value="{StaticResource clrProgressFg}"/>
    </Style>


    <!-- =================================================================== -->
    <!-- IMAGE                                                               -->
    <!-- =================================================================== -->

    <!-- Image Icon -->
    <Style x:Key="styleImageIcon" TargetType="Image">
        <Setter Property="Width" Value="16"/>
        <Setter Property="Height" Value="16"/>
        <Setter Property="Stretch" Value="Uniform"/>
    </Style>

    <!-- Image Icon Large -->
    <Style x:Key="styleImageIconLarge" TargetType="Image">
        <Setter Property="Width" Value="24"/>
        <Setter Property="Height" Value="24"/>
        <Setter Property="Stretch" Value="Uniform"/>
    </Style>

    <!-- Image Thumbnail -->
    <Style x:Key="styleImageThumbnail" TargetType="Image">
        <Setter Property="Width" Value="48"/>
        <Setter Property="Height" Value="48"/>
        <Setter Property="Stretch" Value="UniformToFill"/>
    </Style>


</ResourceDictionary>
