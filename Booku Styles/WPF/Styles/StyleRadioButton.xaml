<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- =================================================================== -->
    <!-- STYLE RADIOBUTTON                                                   -->
    <!-- =================================================================== -->
    <!-- Semua warna menggunakan referensi dari StyleColor.xaml              -->
    <!-- =================================================================== -->


    <!-- ===== RADIOBUTTON DASAR ===== -->
    <Style x:Key="styleRadioButtonDasar" TargetType="RadioButton">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource clrTeksPrimer}"/>
        <Setter Property="Background" Value="{StaticResource clrBgInput}"/>
        <Setter Property="BorderBrush" Value="{StaticResource clrBorderDefault}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="6,0,0,0"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Opacity" Value="1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Grid x:Name="templateRoot" Background="Transparent" SnapsToDevicePixels="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- RadioButton Circle -->
                        <Border x:Name="radioButtonBorder"
                                Grid.Column="0"
                                Width="18"
                                Height="18"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="9"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">

                            <!-- Inner Circle (checked mark) -->
                            <Ellipse x:Name="optionMark"
                                     Width="8"
                                     Height="8"
                                     Fill="{StaticResource clrCheckBoxCheckedBg}"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     Opacity="0"/>
                        </Border>

                        <!-- Content -->
                        <ContentPresenter x:Name="contentPresenter"
                                          Grid.Column="1"
                                          Focusable="False"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          Margin="{TemplateBinding Padding}"
                                          RecognizesAccessKey="True"
                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- Hover -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="radioButtonBorder" Property="BorderBrush" Value="{StaticResource clrBorderFocus}"/>
                            <Setter TargetName="radioButtonBorder" Property="Background" Value="{StaticResource clrBgInputHover}"/>
                        </Trigger>

                        <!-- Checked -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="optionMark" Property="Opacity" Value="1"/>
                            <Setter TargetName="radioButtonBorder" Property="BorderBrush" Value="{StaticResource clrCheckBoxCheckedBorder}"/>
                        </Trigger>

                        <!-- Checked + Hover -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsChecked" Value="True"/>
                                <Condition Property="IsMouseOver" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="radioButtonBorder" Property="Background" Value="{StaticResource clrBgInputHover}"/>
                        </MultiTrigger>

                        <!-- Disabled -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="radioButtonBorder" Property="Background" Value="{StaticResource clrBgInputDisabled}"/>
                            <Setter TargetName="radioButtonBorder" Property="BorderBrush" Value="{StaticResource clrBorderDisabled}"/>
                            <Setter TargetName="optionMark" Property="Fill" Value="{StaticResource clrTeksDisabled}"/>
                            <Setter Property="Foreground" Value="{StaticResource clrTeksDisabled}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!-- =================================================================== -->
    <!-- RADIOBUTTON FORM HALAMAN (UserControl)                              -->
    <!-- =================================================================== -->

    <!-- RadioButton Form Halaman - Base -->
    <Style x:Key="styleRadioButtonFormHalaman" BasedOn="{StaticResource styleRadioButtonDasar}" TargetType="RadioButton">
        <Setter Property="Margin" Value="0 5 15 0"/>
    </Style>


    <!-- =================================================================== -->
    <!-- RADIOBUTTON FORM DIALOG (Window)                                    -->
    <!-- =================================================================== -->

    <!-- RadioButton Form Dialog - Base -->
    <Style x:Key="styleRadioButtonFormDialog" BasedOn="{StaticResource styleRadioButtonDasar}" TargetType="RadioButton">
        <Setter Property="Margin" Value="0 7 15 0"/>
    </Style>

    <!-- RadioButton Form Dialog - Horizontal (untuk grup horizontal) -->
    <Style x:Key="styleRadioButtonFormDialogHorizontal" BasedOn="{StaticResource styleRadioButtonFormDialog}" TargetType="RadioButton">
        <Setter Property="Margin" Value="0 7 20 0"/>
    </Style>

    <!-- RadioButton Form Dialog - Vertical (untuk grup vertikal) -->
    <Style x:Key="styleRadioButtonFormDialogVertical" BasedOn="{StaticResource styleRadioButtonFormDialog}" TargetType="RadioButton">
        <Setter Property="Margin" Value="0 5 0 5"/>
    </Style>


</ResourceDictionary>
