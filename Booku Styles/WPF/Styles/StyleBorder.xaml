<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- =================================================================== -->
    <!-- STYLE BORDER                                                        -->
    <!-- =================================================================== -->
    <!-- Semua warna menggunakan referensi dari StyleColor.xaml              -->
    <!-- =================================================================== -->


    <!-- ===== BORDER DASAR ===== -->
    <Style x:Key="styleBorderDasar" TargetType="Border">
        <Setter Property="BorderBrush" Value="{StaticResource clrBorderDefault}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Padding" Value="0"/>
    </Style>


    <!-- =================================================================== -->
    <!-- BORDER CONTAINER (untuk mengelompokkan konten)                      -->
    <!-- =================================================================== -->

    <!-- Border Container - Base -->
    <Style x:Key="styleBorderContainer" BasedOn="{StaticResource styleBorderDasar}" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource clrBgPanel}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="15"/>
    </Style>

    <!-- Border Container - Highlight -->
    <Style x:Key="styleBorderContainerHighlight" BasedOn="{StaticResource styleBorderContainer}" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource clrBgPrimarySurface}"/>
        <Setter Property="BorderBrush" Value="{StaticResource clrBorderPrimary}"/>
    </Style>

    <!-- Border Container - Info -->
    <Style x:Key="styleBorderContainerInfo" BasedOn="{StaticResource styleBorderContainer}" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource clrStatusInfoBg}"/>
        <Setter Property="BorderBrush" Value="{StaticResource clrStatusInfo}"/>
    </Style>

    <!-- Border Container - Warning -->
    <Style x:Key="styleBorderContainerWarning" BasedOn="{StaticResource styleBorderContainer}" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource clrStatusPeringatanBg}"/>
        <Setter Property="BorderBrush" Value="{StaticResource clrStatusPeringatan}"/>
    </Style>

    <!-- Border Container - Error -->
    <Style x:Key="styleBorderContainerError" BasedOn="{StaticResource styleBorderContainer}" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource clrStatusErrorBg}"/>
        <Setter Property="BorderBrush" Value="{StaticResource clrStatusError}"/>
    </Style>

    <!-- Border Container - Success -->
    <Style x:Key="styleBorderContainerSuccess" BasedOn="{StaticResource styleBorderContainer}" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource clrStatusSuksesBg}"/>
        <Setter Property="BorderBrush" Value="{StaticResource clrStatusSukses}"/>
    </Style>


    <!-- =================================================================== -->
    <!-- BORDER NOTA (untuk Invoice/Nota)                                    -->
    <!-- =================================================================== -->

    <!-- Border Label Nota -->
    <Style x:Key="styleBorderLabelNota" BasedOn="{StaticResource styleBorderDasar}" TargetType="Border">
        <Setter Property="BorderBrush" Value="{StaticResource clrBorderDefault}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Margin" Value="0 0 15 0"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Width" Value="237"/>
    </Style>

    <!-- Border Nota Box -->
    <Style x:Key="styleBorderNotaBox" BasedOn="{StaticResource styleBorderDasar}" TargetType="Border">
        <Setter Property="BorderBrush" Value="{StaticResource clrBorderDefault}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10"/>
    </Style>


    <!-- =================================================================== -->
    <!-- BORDER SEPARATOR (untuk pemisah)                                    -->
    <!-- =================================================================== -->

    <!-- Border Separator Tombol (vertikal) -->
    <Style x:Key="styleBorderSeparatorTombol" BasedOn="{StaticResource styleBorderDasar}" TargetType="Border">
        <Setter Property="BorderBrush" Value="{StaticResource clrSeparatorLight}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Margin" Value="3 0 12 0"/>
        <Setter Property="Width" Value="1"/>
        <Setter Property="Background" Value="{StaticResource clrSeparatorLight}"/>
    </Style>

    <!-- Border Separator Filter (vertikal) -->
    <Style x:Key="styleBorderSeparatorFilter" BasedOn="{StaticResource styleBorderDasar}" TargetType="Border">
        <Setter Property="BorderBrush" Value="{StaticResource clrSeparatorLight}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Margin" Value="3 9 12 -1"/>
        <Setter Property="Width" Value="1"/>
        <Setter Property="Background" Value="{StaticResource clrSeparatorLight}"/>
    </Style>

    <!-- Border Separator Horizontal -->
    <Style x:Key="styleBorderSeparatorHorizontal" BasedOn="{StaticResource styleBorderDasar}" TargetType="Border">
        <Setter Property="BorderBrush" Value="{StaticResource clrSeparator}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Margin" Value="0 10"/>
        <Setter Property="Height" Value="1"/>
    </Style>


    <!-- =================================================================== -->
    <!-- BORDER CARD (untuk tampilan card)                                   -->
    <!-- =================================================================== -->

    <!-- Border Card - Base -->
    <Style x:Key="styleBorderCard" BasedOn="{StaticResource styleBorderDasar}" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource clrBgPanel}"/>
        <Setter Property="BorderBrush" Value="{StaticResource clrBorderDefault}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Margin" Value="5"/>
    </Style>


    <!-- Backward compatibility aliases -->
    <Style x:Key="styleBorderHeaderSeparatorTombol" BasedOn="{StaticResource styleBorderSeparatorTombol}" TargetType="Border"/>
    <Style x:Key="styleBorderHeaderSeparatorFilter" BasedOn="{StaticResource styleBorderSeparatorFilter}" TargetType="Border"/>


</ResourceDictionary>
