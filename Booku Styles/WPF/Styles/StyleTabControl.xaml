<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- =================================================================== -->
    <!-- STYLE TAB CONTROL                                                   -->
    <!-- =================================================================== -->
    <!-- Semua warna menggunakan referensi dari StyleColor.xaml              -->
    <!-- =================================================================== -->


    <!-- ===== TAB CONTROL DASAR ===== -->
    <Style x:Key="styleTabControlDasar" TargetType="TabControl">
        <Setter Property="Background" Value="{StaticResource clrTabBg}"/>
        <Setter Property="BorderBrush" Value="{StaticResource clrTabBorder}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
    </Style>


    <!-- =================================================================== -->
    <!-- TAB CONTROL MAIN CONTENT (Application Shell)                        -->
    <!-- =================================================================== -->

    <!-- Tab Control untuk Main Content -->
    <Style x:Key="styleTabControlMainContent" BasedOn="{StaticResource styleTabControlDasar}" TargetType="TabControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabControl">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Tab Headers dengan ScrollViewer untuk banyak tab -->
                        <Border Grid.Row="0"
                                Background="{StaticResource clrTabBg}"
                                BorderBrush="{StaticResource clrTabBorder}"
                                BorderThickness="0,0,0,1">
                            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                          VerticalScrollBarVisibility="Disabled"
                                          CanContentScroll="True">
                                <TabPanel IsItemsHost="True"
                                          Margin="5,5,5,0"/>
                            </ScrollViewer>
                        </Border>

                        <!-- Tab Content -->
                        <Border Grid.Row="1"
                                Background="{StaticResource clrTabBgSelected}"
                                BorderBrush="{StaticResource clrTabBorder}"
                                BorderThickness="0">
                            <ContentPresenter ContentSource="SelectedContent"
                                              Margin="0"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!-- =================================================================== -->
    <!-- TAB ITEM                                                            -->
    <!-- =================================================================== -->

    <!-- Tab Item Dasar -->
    <Style x:Key="styleTabItemDasar" TargetType="TabItem">
        <Setter Property="Foreground" Value="{StaticResource clrTabFg}"/>
        <Setter Property="Background" Value="{StaticResource clrTabBg}"/>
        <Setter Property="BorderBrush" Value="{StaticResource clrTabBorder}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Margin" Value="0,0,2,0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabItem">
                    <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1,1,1,0"
                            CornerRadius="4,4,0,0"
                            Padding="{TemplateBinding Padding}"
                            Margin="{TemplateBinding Margin}"
                            SnapsToDevicePixels="True">
                        <ContentPresenter ContentSource="Header"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Selected -->
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource clrTabBgSelected}"/>
                            <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource clrTabBorderSelected}"/>
                            <Setter TargetName="Border" Property="Margin" Value="0,0,2,-1"/>
                            <Setter Property="Foreground" Value="{StaticResource clrTabFgSelected}"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Trigger>

                        <!-- Hover -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource clrTabBgHover}"/>
                        </Trigger>

                        <!-- Selected + Hover -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsSelected" Value="True"/>
                                <Condition Property="IsMouseOver" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource clrTabBgSelected}"/>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Tab Item untuk Main Content -->
    <Style x:Key="styleTabItemMainContent" BasedOn="{StaticResource styleTabItemDasar}" TargetType="TabItem">
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="MaxWidth" Value="200"/>
    </Style>


    <!-- =================================================================== -->
    <!-- BUTTON CLOSE TAB                                                    -->
    <!-- =================================================================== -->

    <!-- Button Close Tab -->
    <Style x:Key="styleButtonCloseTab" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource clrTeksSekunder}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Padding" Value="4,0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="2"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Hover -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource clrStatusErrorBg}"/>
                            <Setter Property="Foreground" Value="{StaticResource clrStatusError}"/>
                        </Trigger>

                        <!-- Pressed -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource clrStatusError}"/>
                            <Setter Property="Foreground" Value="{StaticResource clrTeksInvers}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!-- =================================================================== -->
    <!-- TAB CONTROL FORM DIALOG (untuk tab di dalam dialog)                 -->
    <!-- =================================================================== -->

    <!-- Tab Control Form Dialog -->
    <Style x:Key="styleTabControlFormDialog" BasedOn="{StaticResource styleTabControlDasar}" TargetType="TabControl">
        <Setter Property="Margin" Value="0 5"/>
    </Style>

    <!-- Tab Item Form Dialog -->
    <Style x:Key="styleTabItemFormDialog" BasedOn="{StaticResource styleTabItemDasar}" TargetType="TabItem">
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="FontSize" Value="11"/>
    </Style>


</ResourceDictionary>
