<Window x:Class="wpfWin_FileBrowser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transfer Berkas"
        Width="600" Height="450"
        MinWidth="500" MaxWidth="800"
        MinHeight="350" MaxHeight="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        ShowInTaskbar="False"
        SizeToContent="Manual">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/BookuID.Styles;component/WPF/Styles/StyleAplikasi.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header: Mode Selection -->
        <Border Grid.Row="0" Background="{StaticResource clrBgPanel}" Padding="10">
            <StackPanel Orientation="Horizontal">
                <RadioButton x:Name="rdo_ModeLokal" Content="File Lokal (Upload)"
                             IsChecked="True" Margin="0,0,20,0"
                             Checked="rdo_Mode_Checked"/>
                <RadioButton x:Name="rdo_ModeRemote" Content="File Remote (Download)"
                             Checked="rdo_Mode_Checked"/>
            </StackPanel>
        </Border>

        <!-- Path Bar -->
        <Grid Grid.Row="1" Margin="10,10,10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Path:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Grid.Column="1" x:Name="txt_Path" IsReadOnly="True"
                     VerticalAlignment="Center" Padding="5,3"/>
            <Button Grid.Column="2" x:Name="btn_Up" Content="&#xE74A;" FontFamily="Segoe MDL2 Assets"
                    Width="30" Height="26" Margin="5,0,0,0" ToolTip="Folder Parent"
                    Click="btn_Up_Click"/>
            <Button Grid.Column="3" x:Name="btn_Refresh" Content="&#xE72C;" FontFamily="Segoe MDL2 Assets"
                    Width="30" Height="26" Margin="5,0,0,0" ToolTip="Refresh"
                    Click="btn_Refresh_Click"/>
        </Grid>

        <!-- File List -->
        <Border Grid.Row="2" Margin="10,5" BorderThickness="1"
                BorderBrush="{StaticResource clrBorderDefault}">
            <DataGrid x:Name="datagridUtama"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      CanUserReorderColumns="False"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      SelectionChanged="datagridUtama_SelectionChanged"
                      MouseDoubleClick="datagridUtama_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="" Binding="{Binding Icon}" Width="30"/>
                    <DataGridTextColumn Header="Nama" Binding="{Binding Nama}" Width="*"/>
                    <DataGridTextColumn Header="Ukuran" Binding="{Binding UkuranFormatted}" Width="80"/>
                    <DataGridTextColumn Header="Tanggal" Binding="{Binding TanggalFormatted}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Selected Info -->
        <Border Grid.Row="3" Background="{StaticResource clrBgPanel}" Padding="10,5">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Terpilih: " FontWeight="SemiBold"/>
                <TextBlock x:Name="lbl_Selected" Text="(tidak ada)"/>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button x:Name="btn_Transfer" Content="Transfer" Width="100" Height="30"
                    Margin="0,0,10,0" IsEnabled="False"
                    Click="btn_Transfer_Click"
                    Style="{StaticResource styleButtonFormDialogSimpan}"/>
            <Button x:Name="btn_Batal" Content="Batal" Width="100" Height="30"
                    Click="btn_Batal_Click"
                    Style="{StaticResource styleButtonFormDialogBatal}"/>
        </StackPanel>

        <!-- Loading Overlay -->
        <Border x:Name="pnl_Loading" Grid.RowSpan="5"
                Background="#80000000" Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Memuat..." Foreground="White" FontSize="16"
                           HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <ProgressBar IsIndeterminate="True" Width="200" Height="20"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
