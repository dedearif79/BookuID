<Window x:Class="wpfWin_ModeHost"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Booku Remote - Mode Host"
        Height="Auto"
        Width="450"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        SizeToContent="Height">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/BookuID.Styles;component/WPF/Styles/StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <StackPanel Style="{StaticResource stylePanelFormDialog}">

        <!-- ScrollViewer untuk konten utama -->
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      MaxHeight="550">
            <StackPanel>

        <!-- Header -->
        <Border Background="{StaticResource clrBgPrimarySurface}"
                Padding="15"
                Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="MODE HOST"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="{StaticResource clrTeksAksen}"/>
                <TextBlock Text="Menunggu koneksi dari perangkat lain..."
                           FontSize="12"
                           Foreground="{StaticResource clrBorderFocus}"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Mode Koneksi -->
        <Border BorderBrush="{StaticResource clrBorderDefault}"
                BorderThickness="1"
                CornerRadius="4"
                Margin="15,0,15,15"
                Padding="15">
            <StackPanel>
                <TextBlock Text="Mode Koneksi" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <RadioButton Name="rdo_ModeLAN" Content="LAN (Jaringan Lokal)" IsChecked="True" Margin="0,0,20,0"/>
                    <RadioButton Name="rdo_ModeInternet" Content="Internet (via Relay Server)"/>
                </StackPanel>

                <!-- HostCode Panel - Tampil hanya saat mode Internet -->
                <Border Name="pnl_HostCode"
                        Background="{StaticResource clrBgPrimarySurface}"
                        CornerRadius="4"
                        Padding="15"
                        Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Kode Host" FontSize="11" Foreground="{StaticResource clrTeksSekunder}"/>
                        <TextBlock Name="lbl_HostCode"
                                   Text="------"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   FontFamily="Consolas"
                                   Foreground="{StaticResource clrTeksAksen}"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,5"/>
                        <TextBlock Text="Berikan kode ini kepada Tamu untuk terhubung via Internet"
                                   FontSize="11"
                                   Foreground="{StaticResource clrTeksSekunder}"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"/>
                        <Button Name="btn_SalinHostCode"
                                Content="Salin Kode"
                                Style="{StaticResource styleButtonDasar}"
                                Padding="8,4"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Status -->
        <Border BorderBrush="{StaticResource clrBorderDefault}"
                BorderThickness="1"
                CornerRadius="4"
                Margin="15,0,15,15"
                Padding="15">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Status" Foreground="{StaticResource clrTeksSekunder}"/>
                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                        <Ellipse Name="led_Status" Width="10" Height="10" Fill="{StaticResource clrStatusSukses}" VerticalAlignment="Center"/>
                        <TextBlock Name="lbl_Status" Text="AKTIF" FontWeight="Bold" Foreground="{StaticResource clrStatusSukses}" Margin="8,0,0,0"/>
                    </StackPanel>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Nama Perangkat" Foreground="{StaticResource clrTeksSekunder}" Margin="0,10,0,0"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Name="lbl_NamaPerangkat" Text="-" FontWeight="SemiBold" Margin="0,10,0,0"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Alamat IP" Foreground="{StaticResource clrTeksSekunder}" Margin="0,5,0,0"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Name="lbl_AlamatIP" Text="-" FontWeight="SemiBold" Margin="0,5,0,0"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Port" Foreground="{StaticResource clrTeksSekunder}" Margin="0,5,0,0"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Name="lbl_Port" Text="-" FontWeight="SemiBold" Margin="0,5,0,0"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Opsi -->
        <Border BorderBrush="{StaticResource clrBorderDefault}"
                BorderThickness="1"
                CornerRadius="4"
                Margin="15,0,15,15"
                Padding="15">
            <StackPanel>
                <TextBlock Text="Opsi Koneksi" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <CheckBox Name="chk_IzinTransferBerkas" Content="Izinkan transfer berkas" Margin="0,0,0,5"/>
                <CheckBox Name="chk_IzinClipboard" Content="Izinkan akses clipboard" Margin="0,0,0,5"/>
                <CheckBox Name="chk_MintaPersetujuan" Content="Minta persetujuan setiap koneksi" IsChecked="True"/>
            </StackPanel>
        </Border>

        <!-- Pengaturan Port (Lanjutan) -->
        <Border BorderBrush="{StaticResource clrBorderDefault}"
                BorderThickness="1"
                CornerRadius="4"
                Margin="15,0,15,15"
                Padding="0">
            <Expander Header="Pengaturan Port (Lanjutan)" Padding="15" IsExpanded="False">
                <StackPanel>
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Port Discovery (UDP)" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Name="txt_PortDiscovery" Width="100" HorizontalAlignment="Left"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Port Koneksi (TCP)" VerticalAlignment="Center" Margin="0,8,0,0"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Name="txt_PortKoneksi" Width="100" HorizontalAlignment="Left" Margin="0,8,0,0"/>

                        <Separator Grid.Row="2" Grid.ColumnSpan="2" Margin="0,15,0,10"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Relay Server IP" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="3" Grid.Column="1" Name="txt_RelayServerIP" Width="150" HorizontalAlignment="Left"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Relay Server Port" VerticalAlignment="Center" Margin="0,8,0,0"/>
                        <TextBox Grid.Row="4" Grid.Column="1" Name="txt_PortRelay" Width="100" HorizontalAlignment="Left" Margin="0,8,0,0"/>
                    </Grid>

                    <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                        <Button Name="btn_SimpanPengaturanPort"
                                Content="Simpan"
                                Style="{StaticResource styleButtonDasar}"
                                Padding="15,6"
                                Margin="0,0,10,0"/>
                        <Button Name="btn_ResetPengaturanPort"
                                Content="Reset ke Default"
                                Style="{StaticResource styleButtonDasar}"
                                Padding="15,6"/>
                    </StackPanel>
                </StackPanel>
            </Expander>
        </Border>

        <!-- Riwayat Koneksi -->
        <Border BorderBrush="{StaticResource clrBorderDefault}"
                BorderThickness="1"
                CornerRadius="4"
                Margin="15,0,15,15"
                Padding="15">
            <StackPanel>
                <TextBlock Text="Riwayat Koneksi" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <ListBox Name="lst_RiwayatKoneksi"
                         Height="100"
                         BorderThickness="0"
                         Background="Transparent">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" FontSize="11"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <TextBlock Name="lbl_RiwayatKosong"
                           Text="Belum ada koneksi"
                           Foreground="{StaticResource clrTeksDisabled}"
                           FontStyle="Italic"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Tombol -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="15,0,15,15">
            <Button Name="btn_NonaktifkanHost"
                    Content="Nonaktifkan Host"
                    Style="{StaticResource styleButtonDasar}"
                    Width="140"
                    Padding="10,8"
                    Margin="0,0,10,0"/>
            <Button Name="btn_Kembali"
                    Content="Kembali"
                    Style="{StaticResource styleButtonDasar}"
                    Width="100"
                    Padding="10,8"/>
        </StackPanel>

    </StackPanel>
</Window>
