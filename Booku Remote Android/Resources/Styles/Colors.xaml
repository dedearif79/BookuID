<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Primary Colors (Hijau Booku) -->
    <Color x:Key="Primary">#388E3C</Color>
    <Color x:Key="PrimaryLight">#4CAF50</Color>
    <Color x:Key="PrimaryLighter">#81C784</Color>
    <Color x:Key="PrimaryDark">#2E7D32</Color>
    <Color x:Key="PrimaryDarker">#1B5E20</Color>
    <Color x:Key="PrimarySurface">#E8F5E9</Color>

    <!-- Neutral Colors -->
    <Color x:Key="Neutral50">#FAFAFA</Color>
    <Color x:Key="Neutral100">#F5F5F5</Color>
    <Color x:Key="Neutral200">#EEEEEE</Color>
    <Color x:Key="Neutral300">#E0E0E0</Color>
    <Color x:Key="Neutral400">#BDBDBD</Color>
    <Color x:Key="Neutral500">#9E9E9E</Color>
    <Color x:Key="Neutral600">#757575</Color>
    <Color x:Key="Neutral700">#616161</Color>
    <Color x:Key="Neutral800">#424242</Color>
    <Color x:Key="Neutral900">#212121</Color>

    <!-- Status Colors -->
    <Color x:Key="Success">#4CAF50</Color>
    <Color x:Key="SuccessSurface">#E8F5E9</Color>
    <Color x:Key="Warning">#FF9800</Color>
    <Color x:Key="WarningSurface">#FFF3E0</Color>
    <Color x:Key="Error">#F44336</Color>
    <Color x:Key="ErrorSurface">#FFEBEE</Color>
    <Color x:Key="Info">#2196F3</Color>
    <Color x:Key="InfoSurface">#E3F2FD</Color>

    <!-- Base Colors -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>

    <!-- Semantic Colors -->
    <Color x:Key="TextPrimary">#212121</Color>
    <Color x:Key="TextSecondary">#757575</Color>
    <Color x:Key="TextDisabled">#BDBDBD</Color>
    <Color x:Key="Background">#FFFFFF</Color>
    <Color x:Key="Surface">#FFFFFF</Color>
    <Color x:Key="SurfaceVariant">#F5F5F5</Color>

</ResourceDictionary>
