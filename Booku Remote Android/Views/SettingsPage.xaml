<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookuRemoteAndroid.Views.SettingsPage"
             Title="Pengaturan">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="16">

            <!-- Header -->
            <Label Text="Pengaturan Koneksi"
                   Style="{StaticResource LabelTitle}" />
            <Label Text="Konfigurasi port dan alamat server untuk koneksi"
                   Style="{StaticResource LabelSubtitle}"
                   Margin="0,0,0,8" />

            <!-- Port Discovery (LAN) -->
            <Frame BackgroundColor="{StaticResource Surface}"
                   BorderColor="{StaticResource Neutral300}"
                   CornerRadius="12"
                   Padding="16"
                   HasShadow="False">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Port Discovery (UDP)"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="{StaticResource TextPrimary}" />
                    <Label Text="Port untuk menemukan Host di jaringan LAN"
                           FontSize="12"
                           TextColor="{StaticResource TextSecondary}" />
                    <Entry x:Name="entryPortDiscovery"
                           Placeholder="45678"
                           Keyboard="Numeric" />
                </VerticalStackLayout>
            </Frame>

            <!-- Port Koneksi (LAN) -->
            <Frame BackgroundColor="{StaticResource Surface}"
                   BorderColor="{StaticResource Neutral300}"
                   CornerRadius="12"
                   Padding="16"
                   HasShadow="False">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Port Koneksi (TCP)"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="{StaticResource TextPrimary}" />
                    <Label Text="Port untuk koneksi langsung ke Host di LAN"
                           FontSize="12"
                           TextColor="{StaticResource TextSecondary}" />
                    <Entry x:Name="entryPortKoneksi"
                           Placeholder="45679"
                           Keyboard="Numeric" />
                </VerticalStackLayout>
            </Frame>

            <!-- Separator -->
            <BoxView HeightRequest="1"
                     BackgroundColor="{StaticResource Neutral300}"
                     Margin="0,8" />

            <!-- Relay Server Section -->
            <Label Text="Relay Server (Mode Internet)"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="{StaticResource Primary}" />

            <!-- Relay Server IP -->
            <Frame BackgroundColor="{StaticResource Surface}"
                   BorderColor="{StaticResource Neutral300}"
                   CornerRadius="12"
                   Padding="16"
                   HasShadow="False">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Alamat IP Relay Server"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="{StaticResource TextPrimary}" />
                    <Label Text="IP address server relay untuk koneksi via internet"
                           FontSize="12"
                           TextColor="{StaticResource TextSecondary}" />
                    <Entry x:Name="entryRelayServerIP"
                           Placeholder="155.117.43.209"
                           Keyboard="Telephone" />
                </VerticalStackLayout>
            </Frame>

            <!-- Relay Server Port (TCP) -->
            <Frame BackgroundColor="{StaticResource Surface}"
                   BorderColor="{StaticResource Neutral300}"
                   CornerRadius="12"
                   Padding="16"
                   HasShadow="False">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Port Relay Server (TCP)"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="{StaticResource TextPrimary}" />
                    <Label Text="Port koneksi TCP ke relay server"
                           FontSize="12"
                           TextColor="{StaticResource TextSecondary}" />
                    <Entry x:Name="entryPortRelay"
                           Placeholder="45680"
                           Keyboard="Numeric" />
                </VerticalStackLayout>
            </Frame>

            <!-- UDP Video Port -->
            <Frame BackgroundColor="{StaticResource Surface}"
                   BorderColor="{StaticResource Neutral300}"
                   CornerRadius="12"
                   Padding="16"
                   HasShadow="False">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Port UDP Video"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="{StaticResource TextPrimary}" />
                    <Label Text="Port untuk streaming video via UDP (performa tinggi)"
                           FontSize="12"
                           TextColor="{StaticResource TextSecondary}" />
                    <Entry x:Name="entryPortUdpVideo"
                           Placeholder="45681"
                           Keyboard="Numeric" />
                </VerticalStackLayout>
            </Frame>

            <!-- Buttons -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="12" Margin="0,16,0,0">
                <Button Grid.Column="0"
                        Text="Simpan"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="{StaticResource White}"
                        Clicked="OnSaveClicked" />
                <Button Grid.Column="1"
                        Text="Reset Default"
                        BackgroundColor="{StaticResource Neutral200}"
                        TextColor="{StaticResource TextPrimary}"
                        Clicked="OnResetClicked" />
            </Grid>

            <!-- Info -->
            <Label Text="Perubahan akan diterapkan setelah aplikasi di-restart."
                   FontSize="12"
                   TextColor="{StaticResource TextSecondary}"
                   HorizontalTextAlignment="Center"
                   Margin="0,8,0,0" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
