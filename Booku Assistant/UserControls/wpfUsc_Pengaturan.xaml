<UserControl x:Class="wpfUsc_Pengaturan"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Booku_Assistant"
             mc:Ignorable="d"
             d:DesignHeight="350" d:DesignWidth="500">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/BookuID.Styles;component/WPF/Styles/StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Background="{StaticResource clrBgPanel}">
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="40">
            <Border Width="64" Height="64"
                    CornerRadius="32"
                    Background="{StaticResource clrBgWindow}"
                    Margin="0,0,0,16">
                <TextBlock Text="&#xE713;"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="28"
                           Foreground="{StaticResource clrTeksDisabled}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>
            <TextBlock Text="Pengaturan"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource clrTeksPrimer}"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Segera hadir..."
                       FontSize="12"
                       Foreground="{StaticResource clrTeksSekunder}"
                       HorizontalAlignment="Center"
                       Margin="0,6,0,0"/>
        </StackPanel>
    </Border>
</UserControl>
