<Window x:Class="wpfWin_StartUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Booku_Assistant"
        mc:Ignorable="d"
        Title="Booku Assistant"
        Width="560"
        Height="480"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/BookuID.Styles;component/WPF/Styles/StyleAplikasi.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- DropShadow Effect -->
            <DropShadowEffect x:Key="CardShadow" BlurRadius="25" ShadowDepth="3" Direction="270" Color="#40000000" Opacity="0.5"/>

            <!-- Gradient untuk Header -->
            <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,0">
                <GradientStop Color="{StaticResource clrPrimaryDarker}" Offset="0"/>
                <GradientStop Color="{StaticResource clrPrimary}" Offset="0.5"/>
                <GradientStop Color="{StaticResource clrPrimaryLight}" Offset="1"/>
            </LinearGradientBrush>

            <!-- Style untuk Window Control Button -->
            <Style x:Key="WindowControlButton" TargetType="Button">
                <Setter Property="Width" Value="36"/>
                <Setter Property="Height" Value="28"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="0">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#30FFFFFF"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#50FFFFFF"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Style untuk Close Button -->
            <Style x:Key="WindowCloseButton" TargetType="Button" BasedOn="{StaticResource WindowControlButton}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="0,8,0,0">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#E81123"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#C50F1F"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Style TabItem Modern -->
            <Style x:Key="TabItemModern" TargetType="TabItem">
                <Setter Property="Foreground" Value="{StaticResource clrTeksSekunder}"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Padding" Value="18,10"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TabItem">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    Padding="{TemplateBinding Padding}"
                                    BorderThickness="0,0,0,2"
                                    BorderBrush="Transparent">
                                <ContentPresenter ContentSource="Header"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Foreground" Value="{StaticResource clrBtnPrimerBg}"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource clrBtnPrimerBg}"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource clrBgHover}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Style TabControl Modern -->
            <Style x:Key="TabControlModern" TargetType="TabControl">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="0"/>
            </Style>

        </ResourceDictionary>
    </Window.Resources>

    <!-- Main Container dengan Shadow -->
    <Border Effect="{StaticResource CardShadow}" CornerRadius="10" Margin="15" ClipToBounds="True">
        <Border.Background>
            <SolidColorBrush Color="{StaticResource clrWhite}"/>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ========== HEADER dengan Gradient ========== -->
            <Border Grid.Row="0" CornerRadius="10,10,0,0" Background="{StaticResource HeaderGradient}" MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Window Control Buttons -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="btn_Minimize"
                                Content="&#xE921;"
                                Style="{StaticResource WindowControlButton}"
                                ToolTip="Minimize"/>
                        <Button x:Name="btn_Close"
                                Content="&#xE8BB;"
                                Style="{StaticResource WindowCloseButton}"
                                ToolTip="Close"/>
                    </StackPanel>

                    <!-- Header Content -->
                    <Grid Grid.Row="1" Margin="24,5,24,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Logo Booku -->
                        <Border Grid.Column="0"
                                Width="56" Height="56"
                                CornerRadius="28"
                                Background="White"
                                Margin="0,0,16,0"
                                VerticalAlignment="Center">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8" ShadowDepth="2" Direction="270" Color="#40000000" Opacity="0.3"/>
                            </Border.Effect>
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                                <TextBlock Text="B"
                                           FontSize="26"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource clrBtnPrimerBg}"/>
                                <TextBlock Text="A"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource clrTeksSekunder}"
                                           VerticalAlignment="Bottom"
                                           Margin="1,0,0,5"/>
                            </StackPanel>
                        </Border>

                        <!-- Nama Aplikasi & Tagline -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="BOOKU"
                                           FontSize="22"
                                           FontWeight="Bold"
                                           Foreground="White"/>
                                <TextBlock Text=" Assistant"
                                           FontSize="22"
                                           FontWeight="Light"
                                           Foreground="#E8F5E9"/>
                            </StackPanel>
                            <TextBlock Text="Pusat Manajemen Aplikasi BookuID"
                                       FontSize="12"
                                       Foreground="#C8E6C9"
                                       Margin="0,3,0,0"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- ========== CONTENT AREA ========== -->
            <TabControl Grid.Row="1" Style="{StaticResource TabControlModern}">

                <!-- TAB BERANDA -->
                <TabItem x:Name="tab_Beranda" Header="Beranda" Style="{StaticResource TabItemModern}">
                    <ContentControl x:Name="konten_Beranda"/>
                </TabItem>

                <!-- TAB APLIKASI -->
                <TabItem x:Name="tab_Aplikasi" Header="Aplikasi" Style="{StaticResource TabItemModern}">
                    <ContentControl x:Name="konten_Aplikasi"/>
                </TabItem>

                <!-- TAB PENGATURAN -->
                <TabItem x:Name="tab_Pengaturan" Header="Pengaturan" Style="{StaticResource TabItemModern}">
                    <ContentControl x:Name="konten_Pengaturan"/>
                </TabItem>

            </TabControl>

        </Grid>
    </Border>
</Window>
